{% extends 'base.html.twig' %}

{% block title %}Enter Code - EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/gaming-auth.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .code-input-wrapper {
            position: relative;
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #fff;
            font-size: 14px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .code-input {
            letter-spacing: 4px;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
            padding: 18px 20px;
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            color: #fff;
            transition: all 0.3s ease;
        }
        
        .code-input:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: #ff3c64;
            box-shadow: 0 0 0 3px rgba(255, 60, 100, 0.1);
        }
        
        .code-input::placeholder {
            letter-spacing: 2px;
            font-size: 16px;
            font-weight: 400;
        }
        
        .info-box {
            background: rgba(90, 103, 216, 0.1);
            border-left: 4px solid #5a67d8;
            padding: 15px 18px;
            border-radius: 8px;
            margin: 20px 0;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 12px;
            border: 1px solid rgba(90, 103, 216, 0.3);
        }
        
        .info-box i {
            font-size: 18px;
            color: #5a67d8;
            flex-shrink: 0;
        }
        
        .info-box span {
            color: #e0e0e0;
            line-height: 1.5;
        }
        
        .resend-section {
            text-align: center;
            margin-top: 30px;
            padding-top: 25px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .resend-section p {
            color: #adb5bd;
        }
        
        .resend-section a {
            color: #fff;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
        }
        
        .resend-section a:hover {
            background: rgba(255, 60, 100, 0.1);
            color: #ff3c64;
            transform: translateX(-3px);
        }
        
        .email-display {
            background: rgba(255, 60, 100, 0.1);
            border: 1px solid rgba(255, 60, 100, 0.3);
            padding: 8px 16px;
            border-radius: 8px;
            display: inline-block;
            margin-top: 8px;
            font-weight: 600;
            color: #ff3c64;
        }
        
        .alert {
            border-radius: 12px;
            padding: 15px 18px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .alert i {
            font-size: 20px;
            flex-shrink: 0;
        }
        
        .alert span {
            flex: 1;
        }
        
        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: #28a745;
        }
        
        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
<section class="contact-section section_padding">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="auth-container">
                    <!-- Left column - Gaming image -->
                    <div class="auth-image-section">
                        <!-- Background image handled via CSS -->
                    </div>

                    <!-- Right column - Verification form -->
                    <div class="auth-form-section">
                        <div class="gaming-card card shadow-lg">
                            <div class="card-body p-5">

                                <div class="auth-header text-center mb-4">
                                    <i class="bi bi-shield-check" style="font-size: 48px; color: #ff3c64; margin-bottom: 15px;"></i>
                                    <h2>Enter Your Code</h2>
                                    <p>A verification code has been sent to</p>
                                    <span class="email-display">{{ email }}</span>
                                </div>

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                <form method="post">
                                    <div class="form-group mb-4">
        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #fff;
            font-size: 14px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
                                        <div class="code-input-wrapper">
                                            <input type="text" 
                                                   name="code" 
                                                   id="code" 
                                                   class="form-control code-input" 
                                                   placeholder="Enter code"
                                                   required
                                                   autofocus
                                                   autocomplete="off">
                                        </div>
                                        
                                        <div class="info-box">
                                            <i class="bi bi-info-circle-fill"></i>
                                            <span>Check your SMS/Email/Telegram according to the channel you selected</span>
                                        </div>
                                    </div>

                                    <button class="btn btn_1 btn-lg btn-block w-100" type="submit">
                                        <i class="bi bi-check-circle-fill"></i> Verify Code
                                    </button>
                                </form>

                                <div class="resend-section">
                                    <p class="text-muted mb-2" style="font-size: 14px;">Didn't receive the code?</p>
                                    <a href="{{ path('app_forgot_password') }}">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                        Send New Code
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
