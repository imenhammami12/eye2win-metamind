{% extends 'base.html.twig' %}

{% block title %}Forgot Password - EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/gaming-auth.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .channel-selector {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 15px;
        }
        
        .channel-option {
            position: relative;
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            padding: 18px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }
        
        .channel-option:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 60, 100, 0.5);
            transform: translateX(5px);
        }
        
        .channel-option.selected {
            border-color: #ff3c64;
            background: rgba(255, 60, 100, 0.1);
        }
        
        .channel-option input[type="radio"] {
            margin-right: 15px;
            width: 20px;
            height: 20px;
            accent-color: #ff3c64;
            cursor: pointer;
        }
        
        .channel-option label {
            cursor: pointer;
            margin: 0;
            font-size: 15px;
            flex: 1;
            color: #e0e0e0;
            font-weight: 500;
        }
        
        .channel-option input[type="radio"]:checked + label {
            color: #ff3c64;
            font-weight: 600;
        }
        
        .dev-mode-badge {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: #000;
            padding: 10px 18px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .info-box {
            background: rgba(90, 103, 216, 0.1);
            border-left: 4px solid #5a67d8;
            padding: 15px 18px;
            border-radius: 8px;
            margin-top: 15px;
            font-size: 14px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            line-height: 1.6;
            border: 1px solid rgba(90, 103, 216, 0.3);
        }
        
        .info-box i {
            font-size: 18px;
            color: #5a67d8;
            margin-top: 2px;
            flex-shrink: 0;
        }
        
        .info-box span {
            color: #e0e0e0;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 30px;
            padding-top: 25px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .back-to-login p {
            color: #adb5bd;
        }
        
        .back-to-login a {
            color: #fff;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
        }
        
        .back-to-login a:hover {
            background: rgba(255, 60, 100, 0.1);
            color: #ff3c64;
            transform: translateX(-3px);
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #fff;
            font-size: 14px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .form-control {
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            padding: 14px 18px;
            color: #fff;
            font-size: 15px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: #ff3c64;
            box-shadow: 0 0 0 3px rgba(255, 60, 100, 0.1);
            color: #fff;
        }
        
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }
        
        .alert {
            border-radius: 12px;
            padding: 15px 18px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .alert i {
            font-size: 20px;
            flex-shrink: 0;
        }
        
        .alert span {
            flex: 1;
        }
        
        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: #28a745;
        }
        
        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
<section class="contact-section section_padding">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="auth-container">
                    <!-- Left column - Gaming image -->
                    <div class="auth-image-section">
                        <!-- Background image handled via CSS -->
                    </div>

                    <!-- Right column - Password reset form -->
                    <div class="auth-form-section">
                        <div class="gaming-card card shadow-lg">
                            <div class="card-body p-5">

                                <div class="auth-header text-center mb-4">
                                    <i class="bi bi-key-fill" style="font-size: 48px; color: #ff3c64; margin-bottom: 15px;"></i>
                                    <h2>Forgot Password?</h2>
                                    <p>Choose how to receive your code</p>
                                </div>

                                <div class="dev-mode-badge">
                                    <i class="bi bi-code-slash"></i>
                                    <span>Development Mode</span>
                                </div>

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {{ form_start(form) }}

                                    <div class="form-group mb-4">
                                        <label for="{{ form.email.vars.id }}" class="form-label">
                                            Email Address <span class="text-danger">*</span>
                                        </label>
                                        {{ form_widget(form.email, {
                                            'attr': {
                                                'class': 'form-control form-control-lg',
                                                'placeholder': 'your.email@example.com'
                                            }
                                        }) }}
                                        {{ form_errors(form.email) }}
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label">
                                            Notification Channel <span class="text-danger">*</span>
                                        </label>
                                        
                                        <div class="channel-selector">
                                            {% for child in form.notificationChannel %}
                                                <div class="channel-option">
                                                    {{ form_widget(child) }}
                                                    {{ form_label(child) }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        
                                        <div class="info-box">
                                            <i class="bi bi-info-circle-fill"></i>
                                            <span>{{ form_help(form.notificationChannel) }}</span>
                                        </div>
                                        
                                        {{ form_errors(form.notificationChannel) }}
                                    </div>

                                    <button class="btn btn_1 btn-lg btn-block w-100" type="submit">
                                        <i class="bi bi-send-fill"></i> Send Code
                                    </button>

                                {{ form_end(form) }}

                                <div class="back-to-login">
                                    <p class="text-muted mb-2" style="font-size: 14px;">Remember your password?</p>
                                    <a href="{{ path('app_login') }}">
                                        <i class="bi bi-arrow-left"></i>
                                        Back to Login
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Enhance radio button interaction
    document.querySelectorAll('.channel-option').forEach(option => {
        option.addEventListener('click', function(e) {
            if (e.target.tagName !== 'INPUT') {
                const radio = this.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                    // Trigger change event for form validation
                    radio.dispatchEvent(new Event('change'));
                }
            }
            
            // Visual feedback
            document.querySelectorAll('.channel-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            this.classList.add('selected');
        });
        
        // Set initial selected state
        const radio = option.querySelector('input[type="radio"]');
        if (radio && radio.checked) {
            option.classList.add('selected');
        }
    });
</script>
{% endblock %}
