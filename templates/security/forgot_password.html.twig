{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/gaming-auth.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .channel-selector {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .channel-option {
            position: relative;
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            padding: 18px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }
        
        .channel-option:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 60, 100, 0.5);
            transform: translateX(5px);
        }
        
        .channel-option input[type="radio"] {
            margin-right: 15px;
            width: 20px;
            height: 20px;
            accent-color: #ff3c64;
        }
        
        .channel-option input[type="radio"]:checked + label {
            color: #ff3c64;
            font-weight: 600;
        }
        
        .channel-option label {
            cursor: pointer;
            margin: 0;
            font-size: 15px;
            flex: 1;
        }
        
        .dev-mode-badge {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: #000;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }
        
        .info-box {
            background: rgba(90, 103, 216, 0.15);
            border-left: 4px solid #5a67d8;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
            font-size: 14px;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .back-to-login a {
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .back-to-login a:hover {
            color: #fff;
            transform: translateX(-3px);
        }
    </style>
{% endblock %}

{% block body %}
<section class="contact-section section_padding">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="auth-container">
                    <!-- Left column - Gaming image -->
                    <div class="auth-image-section">
                        <!-- Background image handled via CSS -->
                    </div>

                    <!-- Right column - Password reset form -->
                    <div class="auth-form-section">
                        <div class="gaming-card card shadow-lg">
                            <div class="card-body p-5">

                                <div class="auth-header text-center mb-4">
                                    <i class="bi bi-key-fill" style="font-size: 48px; color: #ff3c64; margin-bottom: 15px;"></i>
                                    <h2>Mot de passe oublié ?</h2>
                                    <p>Choisissez comment recevoir votre code</p>
                                </div>

                                <div class="dev-mode-badge">
                                    <i class="bi bi-code-slash"></i>
                                    <span>MODE DÉVELOPPEMENT</span>
                                </div>

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                {{ form_start(form) }}

                                    <div class="form-group mb-4">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email) }}
                                        {{ form_errors(form.email) }}
                                    </div>

                                    <div class="form-group mb-4">
                                        {{ form_label(form.notificationChannel) }}
                                        
                                        <div class="channel-selector">
                                            {% for child in form.notificationChannel %}
                                                <div class="channel-option">
                                                    {{ form_widget(child) }}
                                                    {{ form_label(child) }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        
                                        <div class="info-box mt-3">
                                            <i class="bi bi-info-circle"></i>
                                            {{ form_help(form.notificationChannel) }}
                                        </div>
                                        
                                        {{ form_errors(form.notificationChannel) }}
                                    </div>

                                    <button class="btn btn_1 btn-lg btn-block" type="submit">
                                        <i class="bi bi-send-fill"></i> Envoyer le code
                                    </button>

                                {{ form_end(form) }}

                                <div class="back-to-login">
                                    <a href="{{ path('app_login') }}">
                                        <i class="bi bi-arrow-left"></i>
                                        Retour à la connexion
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Enhance radio button interaction
    document.querySelectorAll('.channel-option').forEach(option => {
        option.addEventListener('click', function(e) {
            if (e.target.tagName !== 'INPUT') {
                const radio = this.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                }
            }
            
            // Visual feedback
            document.querySelectorAll('.channel-option').forEach(opt => {
                opt.style.borderColor = 'rgba(255, 255, 255, 0.15)';
                opt.style.background = 'rgba(255, 255, 255, 0.08)';
            });
            
            this.style.borderColor = 'rgba(255, 60, 100, 0.5)';
            this.style.background = 'rgba(255, 60, 100, 0.1)';
        });
    });
</script>
{% endblock %}
