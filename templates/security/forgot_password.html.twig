{% extends 'base.html.twig' %}

{% block title %}Reset Password — EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/gaming-auth.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        /* ── Override any external .channel-option / .channel-selector ── */
        .channel-selector,
        .channel-option { all: unset; }

        /* ── Channel Selector — slim radio rows ── */
        .channel-selector {
            display: flex !important;
            flex-direction: column !important;
            gap: 10px !important;
            margin-top: 12px !important;
        }

        .channel-row {
            display: flex !important;
            align-items: center !important;
            gap: 14px !important;
            padding: 14px 18px !important;
            border-radius: 11px !important;
            border: 1.5px solid rgba(255, 255, 255, 0.12) !important;
            background: rgba(255, 255, 255, 0.04) !important;
            cursor: pointer !important;
            transition: border-color 0.2s ease, background 0.2s ease !important;
            box-sizing: border-box !important;
        }

        .channel-row:hover {
            border-color: rgba(255, 60, 100, 0.4) !important;
            background: rgba(255, 60, 100, 0.06) !important;
        }

        /* Custom radio button — fully styled, no browser default look */
        .channel-row input[type="radio"] {
            -webkit-appearance: none;
            appearance: none;
            width: 18px !important;
            height: 18px !important;
            border-radius: 50% !important;
            border: 2px solid rgba(255, 255, 255, 0.3) !important;
            background: transparent !important;
            cursor: pointer !important;
            flex-shrink: 0 !important;
            position: relative !important;
            transition: border-color 0.2s ease, background 0.2s ease !important;
            margin: 0 !important;
        }

        .channel-row input[type="radio"]:checked {
            border-color: #ff3c64 !important;
            background: #ff3c64 !important;
            box-shadow: 0 0 0 3px rgba(255, 60, 100, 0.2) !important;
        }

        /* Inner dot via pseudo-element */
        .channel-row input[type="radio"]::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0);
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: #fff;
            transition: transform 0.15s ease;
        }

        .channel-row input[type="radio"]:checked::after {
            transform: translate(-50%, -50%) scale(1);
        }

        .channel-row-icon {
            font-size: 17px !important;
            color: #7a8090 !important;
            flex-shrink: 0 !important;
            transition: color 0.2s ease !important;
        }

        .channel-row-text {
            font-size: 14px !important;
            font-weight: 600 !important;
            color: #c0c5d0 !important;
            letter-spacing: 0.3px !important;
            transition: color 0.2s ease !important;
            text-transform: uppercase !important;
        }

        .channel-row:has(input:checked) {
            border-color: #ff3c64 !important;
            background: rgba(255, 60, 100, 0.08) !important;
        }

        .channel-row:has(input:checked) .channel-row-icon,
        .channel-row:has(input:checked) .channel-row-text {
            color: #ff3c64 !important;
        }

        /* ── Alerts ── */
        .alert {
            border-radius: 12px;
            padding: 14px 18px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            font-weight: 500;
        }
        .alert i { font-size: 20px; flex-shrink: 0; }
        .alert span { flex: 1; }
        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: #4caf7d;
        }
        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #e05c6a;
        }

        /* ── Form Base ── */
        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #fff;
            font-size: 12.5px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.7px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.07);
            border: 2px solid rgba(255, 255, 255, 0.12);
            border-radius: 12px;
            padding: 14px 18px;
            color: #fff;
            font-size: 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.11);
            border-color: #ff3c64;
            box-shadow: 0 0 0 3px rgba(255, 60, 100, 0.1);
            color: #fff;
        }

        .form-control::placeholder { color: rgba(255, 255, 255, 0.35); }

        /* ── Back to Login ── */
        .back-to-login {
            text-align: center;
            margin-top: 28px;
            padding-top: 24px;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .back-to-login p { color: #7a8190; font-size: 13px; margin-bottom: 10px; }

        .back-to-login a {
            color: #d0d4dc;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.25s ease;
            font-weight: 500;
            font-size: 14px;
            padding: 9px 18px;
            border-radius: 9px;
            background: rgba(255, 255, 255, 0.05);
        }

        .back-to-login a:hover {
            background: rgba(255, 60, 100, 0.1);
            color: #ff3c64;
            transform: translateX(-3px);
        }

        /* ── Section divider ── */
        .section-divider { display: none; }
    </style>
{% endblock %}

{% block body %}
<section class="contact-section section_padding">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="auth-container">

                    <!-- Left — decorative image panel -->
                    <div class="auth-image-section"></div>

                    <!-- Right — form panel -->
                    <div class="auth-form-section">
                        <div class="gaming-card card shadow-lg">
                            <div class="card-body p-5">

                                <div class="auth-header text-center mb-4">
                                    <i class="bi bi-shield-lock-fill" style="font-size: 48px; color: #ff3c64; margin-bottom: 15px; display:block;"></i>
                                    <h2>Reset Your Password</h2>
                                    <p>Enter your email and choose how you'd like to receive your verification code.</p>
                                </div>

                                {# Flash messages #}
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {{ form_start(form) }}

                                    {# Email field #}
                                    <div class="form-group mb-4">
                                        <label for="{{ form.email.vars.id }}" class="form-label">
                                            Email Address <span style="color:#ff3c64;">*</span>
                                        </label>
                                        {{ form_widget(form.email, {
                                            'attr': {
                                                'class': 'form-control form-control-lg',
                                                'placeholder': 'your.email@example.com'
                                            }
                                        }) }}
                                        {{ form_errors(form.email) }}
                                    </div>

                                    {# Delivery method #}
                                    <div class="form-group mb-4">
                                        <label class="form-label">
                                            Delivery Method <span style="color:#ff3c64;">*</span>
                                        </label>

                                        <div class="channel-selector">
                                            {% set channelIcons = {
                                                'email':    'bi-envelope-fill',
                                                'sms':      'bi-phone-fill',
                                                'telegram': 'bi-telegram'
                                            } %}
                                            {% set channelLabels = {
                                                'email':    'With Email',
                                                'sms':      'With SMS',
                                                'telegram': 'With Telegram'
                                            } %}

                                            {% for child in form.notificationChannel %}
                                                {% set val   = child.vars.value %}
                                                {% set icon  = channelIcons[val]  ?? 'bi-bell-fill' %}
                                                {% set lbl   = channelLabels[val] ?? 'Other' %}

                                                <label class="channel-row" for="{{ child.vars.id }}">
                                                    {{ form_widget(child, { 'label': false }) }}
                                                    <i class="bi {{ icon }} channel-row-icon"></i>
                                                    <span class="channel-row-text">{{ lbl }}</span>
                                                </label>
                                            {% endfor %}
                                        </div>

                                        {{ form_errors(form.notificationChannel) }}
                                    </div>

                                    <button class="btn btn_1 btn-lg btn-block w-100" type="submit">
                                        <i class="bi bi-send-fill"></i>&nbsp; Send Verification Code
                                    </button>

                                {{ form_end(form) }}

                                <div class="back-to-login">
                                    <p>Remember your password?</p>
                                    <a href="{{ path('app_login') }}">
                                        <i class="bi bi-arrow-left"></i>
                                        Back to Login
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}
