{% extends 'base.html.twig' %}

{% block title %}Reset Password - EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/gaming-auth.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .password-strength {
            margin-top: 12px;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
            overflow: hidden;
        }
        
        .password-strength-bar {
            height: 100%;
            width: 0;
            transition: all 0.3s ease;
            border-radius: 3px;
        }
        
        .password-strength-bar.weak {
            width: 33%;
            background: #dc3545;
        }
        
        .password-strength-bar.medium {
            width: 66%;
            background: #ffc107;
        }
        
        .password-strength-bar.strong {
            width: 100%;
            background: #28a745;
        }
        
        .password-requirements {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 18px 20px;
            margin-top: 18px;
            font-size: 14px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .password-requirements strong {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
            color: #fff;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .password-requirements strong i {
            color: #5a67d8;
            font-size: 16px;
        }
        
        .password-requirements ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
        
        .password-requirements li {
            padding: 8px 0;
            color: #adb5bd;
            position: relative;
            padding-left: 28px;
            transition: all 0.3s ease;
        }
        
        .password-requirements li::before {
            content: '○';
            position: absolute;
            left: 0;
            color: #6c757d;
            font-size: 18px;
            transition: all 0.3s ease;
        }
        
        .password-requirements li.valid {
            color: #28a745;
        }
        
        .password-requirements li.valid::before {
            content: '✓';
            color: #28a745;
            font-weight: bold;
        }
        
        .password-toggle {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: rgba(255, 255, 255, 0.5);
            font-size: 20px;
            z-index: 10;
            transition: all 0.3s ease;
            padding: 5px;
        }
        
        .password-toggle:hover {
            color: rgba(255, 255, 255, 0.9);
        }
        
        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #fff;
            font-size: 14px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .form-control {
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            padding: 14px 50px 14px 18px;
            color: #fff;
            font-size: 15px;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .form-control:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: #ff3c64;
            box-shadow: 0 0 0 3px rgba(255, 60, 100, 0.1);
            color: #fff;
            outline: none;
        }
        
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .alert {
            border-radius: 12px;
            padding: 15px 18px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .alert i {
            font-size: 20px;
            flex-shrink: 0;
        }
        
        .alert span {
            flex: 1;
        }
        
        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #dc3545;
        }
        
        .btn_1:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none !important;
        }
        
        .password-match-indicator {
            font-size: 13px;
            margin-top: 8px;
            padding: 8px 12px;
            border-radius: 8px;
            display: none;
            align-items: center;
            gap: 8px;
            font-weight: 500;
        }
        
        .password-match-indicator.show {
            display: flex;
        }
        
        .password-match-indicator.match {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: #28a745;
        }
        
        .password-match-indicator.no-match {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
<section class="contact-section section_padding">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="auth-container">
                    <!-- Left column - Gaming image -->
                    <div class="auth-image-section">
                        <!-- Background image handled via CSS -->
                    </div>

                    <!-- Right column - Password reset form -->
                    <div class="auth-form-section">
                        <div class="gaming-card card shadow-lg">
                            <div class="card-body p-5">

                                <div class="auth-header text-center mb-4">
                                    <i class="bi bi-shield-lock-fill" style="font-size: 48px; color: #ff3c64; margin-bottom: 15px;"></i>
                                    <h2>Set New Password</h2>
                                    <p>Choose a strong and secure password</p>
                                </div>

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                {% endfor %}

                                {{ form_start(form, {'attr': {'id': 'reset-password-form'}}) }}

                                    <div class="form-group">
                                        <label for="{{ form.plainPassword.first.vars.id }}" class="form-label">
                                            New Password <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            {{ form_widget(form.plainPassword.first, {
                                                'attr': {
                                                    'id': 'password-input',
                                                    'class': 'form-control form-control-lg',
                                                    'placeholder': 'Enter your new password'
                                                }
                                            }) }}
                                            <i class="bi bi-eye password-toggle" id="toggle-password" data-target="password-input"></i>
                                        </div>
                                        <div class="password-strength">
                                            <div class="password-strength-bar" id="strength-bar"></div>
                                        </div>
                                        {{ form_errors(form.plainPassword.first) }}
                                    </div>

                                    <div class="form-group">
                                        <label for="{{ form.plainPassword.second.vars.id }}" class="form-label">
                                            Confirm Password <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            {{ form_widget(form.plainPassword.second, {
                                                'attr': {
                                                    'id': 'password-confirm',
                                                    'class': 'form-control form-control-lg',
                                                    'placeholder': 'Confirm your new password'
                                                }
                                            }) }}
                                            <i class="bi bi-eye password-toggle" id="toggle-confirm" data-target="password-confirm"></i>
                                        </div>
                                        <div class="password-match-indicator" id="match-indicator">
                                            <i class="bi"></i>
                                            <span id="match-text"></span>
                                        </div>
                                        {{ form_errors(form.plainPassword.second) }}
                                    </div>

                                    <div class="password-requirements">
                                        <strong>
                                            <i class="bi bi-info-circle-fill"></i> 
                                            Password Requirements:
                                        </strong>
                                        <ul id="password-rules">
                                            <li id="rule-length">At least 8 characters</li>
                                            <li id="rule-uppercase">One uppercase letter (A-Z)</li>
                                            <li id="rule-lowercase">One lowercase letter (a-z)</li>
                                            <li id="rule-number">One number (0-9)</li>
                                        </ul>
                                    </div>

                                    <button class="btn btn_1 btn-lg btn-block w-100 mt-4" type="submit" id="submit-btn">
                                        <i class="bi bi-check-circle-fill"></i> Reset Password
                                    </button>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Password visibility toggle
    document.querySelectorAll('.password-toggle').forEach(toggle => {
        toggle.addEventListener('click', function() {
            const targetId = this.dataset.target;
            const input = document.getElementById(targetId);
            
            if (input.type === 'password') {
                input.type = 'text';
                this.classList.remove('bi-eye');
                this.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                this.classList.remove('bi-eye-slash');
                this.classList.add('bi-eye');
            }
        });
    });

    // Password strength checker
    const passwordInput = document.getElementById('password-input');
    const confirmInput = document.getElementById('password-confirm');
    const strengthBar = document.getElementById('strength-bar');
    const submitBtn = document.getElementById('submit-btn');
    const matchIndicator = document.getElementById('match-indicator');
    const matchText = document.getElementById('match-text');
    
    const rules = {
        length: document.getElementById('rule-length'),
        uppercase: document.getElementById('rule-uppercase'),
        lowercase: document.getElementById('rule-lowercase'),
        number: document.getElementById('rule-number')
    };

    function checkPasswordStrength() {
        const password = passwordInput.value;
        let strength = 0;
        let allValid = true;
        
        // Check length
        if (password.length >= 8) {
            rules.length.classList.add('valid');
            strength++;
        } else {
            rules.length.classList.remove('valid');
            allValid = false;
        }
        
        // Check uppercase
        if (/[A-Z]/.test(password)) {
            rules.uppercase.classList.add('valid');
            strength++;
        } else {
            rules.uppercase.classList.remove('valid');
            allValid = false;
        }
        
        // Check lowercase
        if (/[a-z]/.test(password)) {
            rules.lowercase.classList.add('valid');
            strength++;
        } else {
            rules.lowercase.classList.remove('valid');
            allValid = false;
        }
        
        // Check number
        if (/\d/.test(password)) {
            rules.number.classList.add('valid');
            strength++;
        } else {
            rules.number.classList.remove('valid');
            allValid = false;
        }
        
        // Update strength bar
        strengthBar.className = 'password-strength-bar';
        if (strength <= 2) {
            strengthBar.classList.add('weak');
        } else if (strength === 3) {
            strengthBar.classList.add('medium');
        } else if (strength === 4) {
            strengthBar.classList.add('strong');
        }
        
        // Check if passwords match
        checkPasswordMatch();
        
        const passwordsMatch = confirmInput.value.length > 0 && confirmInput.value === password;
        
        // Enable submit button only if all requirements are met AND passwords match
        submitBtn.disabled = !(allValid && passwordsMatch);
    }

    function checkPasswordMatch() {
        const password = passwordInput.value;
        const confirm = confirmInput.value;
        
        if (confirm.length === 0) {
            matchIndicator.classList.remove('show');
            confirmInput.style.borderColor = '';
            return;
        }
        
        matchIndicator.classList.add('show');
        
        if (password === confirm) {
            matchIndicator.classList.remove('no-match');
            matchIndicator.classList.add('match');
            matchIndicator.querySelector('i').className = 'bi bi-check-circle-fill';
            matchText.textContent = 'Passwords match';
            confirmInput.style.borderColor = '#28a745';
        } else {
            matchIndicator.classList.remove('match');
            matchIndicator.classList.add('no-match');
            matchIndicator.querySelector('i').className = 'bi bi-x-circle-fill';
            matchText.textContent = 'Passwords do not match';
            confirmInput.style.borderColor = '#dc3545';
        }
    }

    passwordInput.addEventListener('input', checkPasswordStrength);
    confirmInput.addEventListener('input', checkPasswordStrength);
    
    // Initial check on page load
    checkPasswordStrength();
</script>
{% endblock %}
