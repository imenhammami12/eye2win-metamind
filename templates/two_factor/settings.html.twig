{% extends 'base.html.twig' %}

{% block title %}2FA Settings - EyeTwin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* 2FA Settings Page Styles */
        .settings-section {
            background-color: #0b111f;
            min-height: 100vh;
            padding: 80px 0;
        }

        /* Page Header */
        .settings-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgba(255, 0, 0, 0.3);
        }

        .settings-header h2 {
            color: #fff;
            font-size: 24px;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .settings-header h2 i {
            color: #ff0000;
            font-size: 26px;
        }

        .btn-back {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: #fff;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: #fff;
            transform: translateX(-5px);
        }

        /* Status Banner */
        .status-banner {
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .status-banner::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .status-banner-enabled {
            background: linear-gradient(135deg, #4cd3e3, #00bcd4);
        }

        .status-banner-disabled {
            background: linear-gradient(135deg, #f4e700, #fbc02d);
        }

        .status-icon-wrapper {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        .status-icon-wrapper i {
            font-size: 28px;
            color: #fff;
        }

        .status-content {
            flex: 1;
            position: relative;
            z-index: 1;
        }

        .status-content h4 {
            color: #fff;
            font-size: 20px;
            margin-bottom: 6px;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .status-content p {
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-size: 13px;
            font-weight: 500;
        }

        /* Main Card */
        .settings-main-card {
            background: linear-gradient(135deg, #1a1f2e, #0b111f);
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(255, 0, 0, 0.2);
            overflow: hidden;
        }

        /* Feature Cards Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            padding: 25px;
        }

        .feature-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 0, 0, 0.1), transparent);
            transition: left 0.5s;
        }

        .feature-card:hover::before {
            left: 100%;
        }

        .feature-card:hover {
            border-color: #ff0000;
            box-shadow: 0 10px 30px rgba(255, 0, 0, 0.3);
            transform: translateY(-5px);
        }

        .feature-card-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ff0000, #c6019a);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .feature-icon i {
            color: #fff;
            font-size: 18px;
        }

        .feature-card-header h5 {
            color: #fff;
            font-size: 16px;
            font-weight: 700;
            margin: 0;
        }

        .feature-card-body p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 13px;
            margin-bottom: 15px;
            line-height: 1.5;
        }

        .feature-card-body .info-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: rgba(56, 164, 255, 0.15);
            border: 1px solid rgba(56, 164, 255, 0.3);
            padding: 6px 12px;
            border-radius: 6px;
            color: #38a4ff;
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        /* Buttons */
        .btn-feature {
            width: 100%;
            padding: 10px 16px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            margin-bottom: 8px;
        }

        .btn-feature:last-child {
            margin-bottom: 0;
        }

        .btn-primary-feature {
            background: linear-gradient(135deg, #ff0000, #c6019a);
            color: #fff;
            box-shadow: 0 5px 15px rgba(255, 0, 0, 0.3);
        }

        .btn-primary-feature:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 0, 0, 0.5);
        }

        .btn-outline-feature {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: #fff;
        }

        .btn-outline-feature:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
        }

        .btn-danger-feature {
            background: linear-gradient(135deg, #f44a40, #d32f2f);
            color: #fff;
            box-shadow: 0 5px 15px rgba(244, 74, 64, 0.3);
        }

        .btn-danger-feature:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(244, 74, 64, 0.5);
        }

        /* Benefits Section */
        .benefits-section {
            padding: 25px;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.01));
        }

        .benefits-title {
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .benefits-title i {
            color: #4cd3e3;
            font-size: 20px;
        }

        .benefits-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .benefits-list li {
            display: flex;
            align-items: start;
            gap: 12px;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .benefits-list li:last-child {
            border-bottom: none;
        }

        .benefit-icon {
            width: 35px;
            height: 35px;
            background: rgba(76, 211, 227, 0.15);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .benefit-icon i {
            color: #4cd3e3;
            font-size: 16px;
        }

        .benefit-content strong {
            color: #fff;
            font-size: 14px;
            display: block;
            margin-bottom: 4px;
        }

        .benefit-content span {
            color: rgba(255, 255, 255, 0.7);
            font-size: 12px;
            line-height: 1.5;
        }

        /* Info Alert */
        .info-alert {
            background: linear-gradient(135deg, rgba(56, 164, 255, 0.15), rgba(56, 164, 255, 0.05));
            border-left: 4px solid #38a4ff;
            border-radius: 10px;
            padding: 15px 20px;
            margin-top: 20px;
            display: flex;
            align-items: start;
            gap: 12px;
        }

        .info-alert i {
            color: #38a4ff;
            font-size: 20px;
            margin-top: 2px;
        }

        .info-alert strong {
            color: #38a4ff;
            font-size: 14px;
            display: block;
            margin-bottom: 4px;
        }

        .info-alert p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-size: 12px;
        }

        /* Enable Button */
        .btn-enable-2fa {
            background: linear-gradient(135deg, #4cd3e3, #00bcd4);
            color: #fff;
            padding: 14px 30px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            border: none;
            box-shadow: 0 6px 20px rgba(76, 211, 227, 0.4);
            width: 100%;
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-enable-2fa:hover {
            background: linear-gradient(135deg, #00bcd4, #4cd3e3);
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(76, 211, 227, 0.6);
            color: #fff;
        }

        /* Modal Styles */
        .modal-content {
            background: linear-gradient(135deg, #1a1f2e, #0b111f);
            border: 2px solid rgba(255, 0, 0, 0.3);
            border-radius: 20px;
            overflow: hidden;
        }

        .modal-header {
            background: linear-gradient(135deg, #f44a40, #d32f2f);
            border-bottom: none;
            padding: 20px 25px;
        }

        .modal-header h5 {
            color: #fff;
            font-size: 17px;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .modal-header .close {
            color: #fff;
            opacity: 1;
            text-shadow: none;
            font-size: 24px;
        }

        .modal-body {
            padding: 25px;
        }

        .modal-warning {
            background: linear-gradient(135deg, rgba(244, 231, 0, 0.15), rgba(244, 231, 0, 0.05));
            border-left: 4px solid #f4e700;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .modal-warning i {
            color: #f4e700;
            font-size: 18px;
            margin-right: 8px;
        }

        .modal-warning strong {
            color: #f4e700;
            font-size: 14px;
        }

        .modal-warning p {
            color: rgba(255, 255, 255, 0.9);
            margin: 5px 0 0 0;
            font-size: 12px;
        }

        .form-group label {
            color: #fff;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 13px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 10px 12px;
            color: #fff;
            font-size: 13px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: #ff0000;
            box-shadow: 0 0 0 3px rgba(255, 0, 0, 0.1);
            color: #fff;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .modal-footer {
            background: rgba(255, 255, 255, 0.02);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: 15px 25px;
        }

        .modal-footer .btn {
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
        }

        .btn-secondary {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: #fff;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: #fff;
        }

        .btn-danger {
            background: linear-gradient(135deg, #f44a40, #d32f2f);
            border: none;
            color: #fff;
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #d32f2f, #f44a40);
            transform: translateY(-2px);
        }

        /* Alerts */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            border: none;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 13px;
        }

        .alert i {
            font-size: 20px;
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.2), rgba(76, 211, 227, 0.05));
            border-left: 5px solid #4cd3e3;
        }

        .alert-success i {
            color: #4cd3e3;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(244, 74, 64, 0.2), rgba(244, 74, 64, 0.05));
            border-left: 5px solid #f44a40;
        }

        .alert-danger i {
            color: #f44a40;
        }

        .alert-info {
            background: linear-gradient(135deg, rgba(56, 164, 255, 0.2), rgba(56, 164, 255, 0.05));
            border-left: 5px solid #38a4ff;
        }

        .alert-info i {
            color: #38a4ff;
        }

        .alert .close {
            color: #fff;
            opacity: 1;
            text-shadow: none;
            font-size: 24px;
        }

        /* Responsive */
        @media (max-width: 991px) {
            .features-grid {
                grid-template-columns: 1fr;
            }

            .settings-header {
                flex-direction: column;
                gap: 20px;
                align-items: flex-start;
            }

            .btn-back {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 576px) {
            .settings-section {
                padding: 40px 0;
            }

            .settings-header h2 {
                font-size: 20px;
            }

            .status-banner {
                flex-direction: column;
                text-align: center;
                padding: 20px;
            }

            .status-content h4 {
                font-size: 18px;
            }

            .features-grid {
                padding: 15px;
            }

            .benefits-section {
                padding: 15px;
            }

            .status-icon-wrapper {
                width: 50px;
                height: 50px;
            }

            .status-icon-wrapper i {
                font-size: 24px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="settings-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                
                <!-- Page Header -->
                <div class="settings-header">
                    <h2>
                        <i class="fas fa-shield-alt"></i>
                        Two-Factor Authentication
                    </h2>
                    <a href="{{ path('user_profile') }}" class="btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Back to Profile
                    </a>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle"></i>
                        <span>{{ message }}</span>
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>{{ message }}</span>
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('info') %}
                    <div class="alert alert-info alert-dismissible fade show">
                        <i class="fas fa-info-circle"></i>
                        <span>{{ message }}</span>
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                {% endfor %}

                {% if is_enabled %}
                    {# 2FA is ENABLED #}
                    
                    <!-- Status Banner (Enabled) -->
                    <div class="status-banner status-banner-enabled">
                        <div class="status-icon-wrapper">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="status-content">
                            <h4>Two-Factor Authentication is Active</h4>
                            <p>Your account is secured with an extra layer of protection</p>
                        </div>
                    </div>

                    <!-- Main Card -->
                    <div class="settings-main-card">
                        <div class="features-grid">
                            
                            <!-- Backup Codes Card -->
                            <div class="feature-card">
                                <div class="feature-card-header">
                                    <div class="feature-icon">
                                        <i class="fas fa-key"></i>
                                    </div>
                                    <h5>Backup Codes</h5>
                                </div>
                                <div class="feature-card-body">
                                    <div class="info-badge">
                                        <i class="fas fa-info-circle"></i>
                                        <span>{{ backup_codes_count }} code(s) remaining</span>
                                    </div>
                                    <p>Emergency access codes for when you can't use your authenticator app.</p>
                                    <a href="{{ path('app_2fa_backup_codes') }}" class="btn-feature btn-primary-feature">
                                        <i class="fas fa-eye"></i>
                                        View Backup Codes
                                    </a>
                                    <form method="post" action="{{ path('app_2fa_regenerate_codes') }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('regenerate-backup-codes') }}">
                                        <button type="submit" class="btn-feature btn-outline-feature"
                                            onclick="return confirm('⚠️ This will invalidate all current backup codes.\n\nNew codes will be generated.\n\nContinue?')">
                                            <i class="fas fa-sync-alt"></i>
                                            Regenerate Codes
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <!-- Disable 2FA Card -->
                            <div class="feature-card">
                                <div class="feature-card-header">
                                    <div class="feature-icon" style="background: linear-gradient(135deg, #f44a40, #d32f2f);">
                                        <i class="fas fa-power-off"></i>
                                    </div>
                                    <h5>Disable 2FA</h5>
                                </div>
                                <div class="feature-card-body">
                                    <p>Remove two-factor authentication from your account. This will make your account less secure.</p>
                                    <button type="button" class="btn-feature btn-danger-feature" data-toggle="modal" data-target="#disable2FAModal">
                                        <i class="fas fa-times-circle"></i>
                                        Disable Protection
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>

                {% else %}
                    {# 2FA is DISABLED #}
                    
                    <!-- Status Banner (Disabled) -->
                    <div class="status-banner status-banner-disabled">
                        <div class="status-icon-wrapper">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="status-content">
                            <h4>Two-Factor Authentication is Disabled</h4>
                            <p>Enhance your account security by enabling 2FA today</p>
                        </div>
                    </div>

                    <!-- Main Card -->
                    <div class="settings-main-card">
                        <div class="benefits-section">
                            <h5 class="benefits-title">
                                <i class="fas fa-star"></i>
                                Why Enable Two-Factor Authentication?
                            </h5>
                            
                            <ul class="benefits-list">
                                <li>
                                    <div class="benefit-icon">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <strong>Enhanced Security</strong>
                                        <span>Protects your account even if your password is compromised by requiring a second verification step</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="benefit-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <strong>Quick Setup</strong>
                                        <span>Takes less than 2 minutes to configure with your smartphone authenticator app</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="benefit-icon">
                                        <i class="fas fa-wifi-slash"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <strong>Works Offline</strong>
                                        <span>Authenticator apps generate codes without requiring an internet connection</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="benefit-icon">
                                        <i class="fas fa-life-ring"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <strong>Backup Codes</strong>
                                        <span>We provide emergency backup codes in case you lose access to your authenticator device</span>
                                    </div>
                                </li>
                            </ul>

                            <div class="info-alert">
                                <i class="fas fa-mobile-alt"></i>
                                <div>
                                    <strong>What You'll Need:</strong>
                                    <p>An authenticator app like Google Authenticator, Authy, or Microsoft Authenticator installed on your smartphone.</p>
                                </div>
                            </div>

                            <a href="{{ path('app_2fa_enable') }}" class="btn-enable-2fa">
                                <i class="fas fa-shield-alt"></i>
                                Enable Two-Factor Authentication
                            </a>
                        </div>
                    </div>

                {% endif %}

            </div>
        </div>
    </div>
</section>

{# Disable 2FA Modal #}
<div class="modal fade" id="disable2FAModal" tabindex="-1" role="dialog" aria-labelledby="disable2FAModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="disable2FAModalLabel">
                    <i class="fas fa-exclamation-triangle"></i>
                    Disable Two-Factor Authentication
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="{{ path('app_2fa_disable') }}">
                <div class="modal-body">
                    <div class="modal-warning">
                        <div>
                            <i class="fas fa-exclamation-circle"></i>
                            <strong>Security Warning</strong>
                            <p>Disabling two-factor authentication will significantly reduce your account security. You will only need your password to access your account.</p>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">
                            <i class="fas fa-lock"></i> Confirm your password
                        </label>
                        <input 
                            type="password" 
                            class="form-control" 
                            id="password" 
