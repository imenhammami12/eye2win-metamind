{% extends 'base.html.twig' %}

{% block title %}2FA Settings - EyeTwin{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Two-Factor Authentication</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3><i class="fas fa-shield-alt text-primary"></i> Security Settings</h3>
                    <a href="{{ path('user_profile') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                </div>

                {% if is_enabled %}
                    {# 2FA ENABLED #}
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-body p-5">
                            <div class="row align-items-center mb-4">
                                <div class="col-auto">
                                    <div class="bg-success rounded-circle p-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                        <i class="fas fa-check text-white fa-2x"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <h4 class="mb-1"><i class="fas fa-lock text-success"></i> Two-Factor Authentication is Active</h4>
                                    <p class="text-muted mb-0">Your account is protected with an additional layer of security.</p>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="card h-100 border-primary">
                                        <div class="card-body text-center p-4">
                                            <i class="fas fa-key fa-3x text-primary mb-3"></i>
                                            <h5 class="card-title">Backup Codes</h5>
                                            <p class="card-text">
                                                <span class="badge bg-primary fs-5">{{ backup_codes_count }}</span> remaining
                                            </p>
                                            <div class="d-grid gap-2">
                                                <a href="{{ path('app_2fa_backup_codes') }}" class="btn btn-primary">
                                                    <i class="fas fa-eye"></i> View Codes
                                                </a>
                                                <form method="post" action="{{ path('app_2fa_regenerate_codes') }}" onsubmit="return confirm('This will invalidate your current codes. Continue?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('regenerate-backup-codes') }}">
                                                    <button type="submit" class="btn btn-outline-secondary w-100">
                                                        <i class="fas fa-sync"></i> Regenerate
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card h-100 border-danger">
                                        <div class="card-body text-center p-4">
                                            <i class="fas fa-power-off fa-3x text-danger mb-3"></i>
                                            <h5 class="card-title">Disable 2FA</h5>
                                            <p class="card-text text-muted">
                                                Remove two-factor authentication from your account
                                            </p>
                                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
                                                <i class="fas fa-times-circle"></i> Disable 2FA
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% else %}
                    {# 2FA DISABLED #}
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-body p-5">
                            <div class="row align-items-center mb-4">
                                <div class="col-auto">
                                    <div class="bg-warning rounded-circle p-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                        <i class="fas fa-exclamation-triangle text-white fa-2x"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <h4 class="mb-1"><i class="fas fa-unlock text-warning"></i> Two-Factor Authentication is Disabled</h4>
                                    <p class="text-muted mb-0">Add an extra layer of security to your account.</p>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h5 class="mb-3">Why Enable 2FA?</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-check-circle text-success fs-4 me-3 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Extra Security</h6>
                                            <p class="small text-muted mb-0">Protects your account even if password is compromised</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-check-circle text-success fs-4 me-3 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Quick Setup</h6>
                                            <p class="small text-muted mb-0">Takes less than 2 minutes to configure</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-check-circle text-success fs-4 me-3 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Works Offline</h6>
                                            <p class="small text-muted mb-0">No internet connection required</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-check-circle text-success fs-4 me-3 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Backup Codes</h6>
                                            <p class="small text-muted mb-0">Emergency access codes provided</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-mobile-alt"></i>
                                <strong>You'll need:</strong> An authenticator app (Google Authenticator, Authy, Microsoft Authenticator, etc.)
                            </div>

                            <div class="d-grid">
                                <a href="{{ path('app_2fa_enable') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-shield-alt"></i> Enable Two-Factor Authentication
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</section>

{# Modal Disable 2FA #}
<div class="modal fade" id="disable2FAModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Disable 2FA
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="{{ path('app_2fa_disable') }}">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-shield-alt"></i>
                        <strong>Warning:</strong> This will remove the extra security layer from your account.
                    </div>
                    <p>Are you sure you want to disable two-factor authentication?</p>
                    <input type="hidden" name="_token" value="{{ csrf_token('disable-2fa') }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times-circle"></i> Yes, Disable 2FA
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}