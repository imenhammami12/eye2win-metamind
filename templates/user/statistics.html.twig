{% extends 'base.html.twig' %}

{% block title %}My Statistics - EyeTwin{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>My Statistics</h2>
                        <p><a href="{{ path('app_home') }}">Home</a> <span>-</span> <a href="{{ path('user_profile') }}">Profile</a> <span>-</span> Statistics</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <!-- Stats Overview -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body text-center">
                                <h3>{{ stats.teams_count }}</h3>
                                <p class="mb-0"><i class="fas fa-users"></i> Teams</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-white bg-success">
                            <div class="card-body text-center">
                                <h3>{{ stats.owned_teams_count }}</h3>
                                <p class="mb-0"><i class="fas fa-crown"></i> Teams Created</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body text-center">
                                <h3>{{ stats.notifications_count }}</h3>
                                <p class="mb-0"><i class="fas fa-bell"></i> Notifications</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-white bg-info">
                            <div class="card-body text-center">
                                <h3>{{ stats.account_age_days }}</h3>
                                <p class="mb-0"><i class="fas fa-calendar"></i> Days</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Activity -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4><i class="fas fa-chart-line"></i> Account Activity</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-6">Registration date</dt>
                            <dd class="col-sm-6">{{ user.createdAt|date('m/d/Y at h:i A') }}</dd>
                            
                            <dt class="col-sm-6">Last login</dt>
                            <dd class="col-sm-6">{{ user.lastLogin|date('m/d/Y at h:i A') }}</dd>
                            
                            <dt class="col-sm-6">Account age</dt>
                            <dd class="col-sm-6">{{ stats.account_age_days }} days</dd>
                            
                            <dt class="col-sm-6">Account status</dt>
                            <dd class="col-sm-6">
                                <span class="badge badge-{{ user.accountStatus.badgeClass }} badge-pill">
                                    {{ user.accountStatus.label }}
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Team Statistics -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4><i class="fas fa-users"></i> Team Statistics</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Teams Joined</h5>
                                <p class="display-4 text-primary">{{ stats.teams_count }}</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Teams Created</h5>
                                <p class="display-4 text-success">{{ stats.owned_teams_count }}</p>
                            </div>
                        </div>
                        
                        {% if user.ownedTeams|length > 0 %}
                            <hr>
                            <h5>Your Teams</h5>
                            <ul class="list-group">
                                {% for team in user.ownedTeams %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>{{ team.name }}</span>
                                        <span class="badge badge-primary badge-pill">
                                            {{ team.currentMembersCount }} / {{ team.maxMembers }} members
                                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>

                <!-- Roles & Achievements -->
                <div class="card">
                    <div class="card-header">
                        <h4><i class="fas fa-trophy"></i> Roles and Achievements</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h5>Roles</h5>
                            <div>
                                <span class="badge badge-primary badge-pill px-3 py-2 mr-2">
                                    <i class="fas fa-user"></i> Player
                                </span>
                                {% if is_granted('ROLE_COACH') %}
                                    <span class="badge badge-warning badge-pill px-3 py-2 mr-2">
                                        <i class="fas fa-graduation-cap"></i> Coach
                                    </span>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <span class="badge badge-danger badge-pill px-3 py-2">
                                        <i class="fas fa-shield-alt"></i> Administrator
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> More statistics and achievements will be available soon!
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('user_profile') }}" class="btn btn_1">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
