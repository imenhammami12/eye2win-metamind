{% extends 'base.html.twig' %}

{% block title %}Complaint #{{ complaint.id }}{% endblock %}

{% block body %}
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Complaint Details</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="mb-4">
            <a href="{{ path('app_complaints_index') }}" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Back to My Complaints
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Complaint Card -->
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h3 class="mb-3" style="color: #fff !important;">{{ complaint.subject }}</h3>
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge bg-{{ complaint.status.badgeClass }}">
                                        <i class="{{ complaint.status.icon }}"></i>
                                        {{ complaint.status.label }}
                                    </span>
                                    <span class="badge bg-{{ complaint.priority.badgeClass }}">
                                        <i class="{{ complaint.priority.icon }}"></i>
                                        {{ complaint.priority.label }}
                                    </span>
                                    <span class="badge bg-secondary">
                                        <i class="{{ complaint.category.icon }}"></i>
                                        {{ complaint.category.label }}
                                    </span>
                                </div>
                            </div>
                            <div class="text-end">
                                <small class="text-muted d-block">Ticket #{{ complaint.id }}</small>
                            </div>
                        </div>

                        <hr style="border-color: rgba(255, 255, 255, 0.1);">

                        <div class="mb-4">
                            <h5 class="mb-3" style="color: #fff !important;">
                                <i class="fas fa-file-alt"></i> Description
                            </h5>
                            <p style="color: rgba(255, 255, 255, 0.9) !important;">{{ complaint.description|nl2br }}</p>
                        </div>

                        {% if complaint.attachmentPath %}
                        <div class="mb-4">
                            <h5 class="mb-3" style="color: #fff !important;">
                                <i class="fas fa-paperclip"></i> Attachment
                            </h5>
                            <a href="{{ asset('uploads/complaints/' ~ complaint.attachmentPath) }}" 
                               class="btn btn-outline-light" 
                               target="_blank">
                                <i class="fas fa-download"></i> Download Attachment
                            </a>
                        </div>
                        {% endif %}

                        {% if complaint.adminResponse %}
                        <hr style="border-color: rgba(255, 255, 255, 0.1);">
                        <div class="mb-4">
                            <h5 class="mb-3" style="color: #fff !important;">
                                <i class="fas fa-reply"></i> Support Response
                            </h5>
                            <div class="alert alert-info">
                                <p style="color: #fff !important; margin-bottom: 0;">{{ complaint.adminResponse|nl2br }}</p>
                            </div>
                        </div>
                        {% endif %}

                        {% if complaint.resolutionNotes %}
                        <hr style="border-color: rgba(255, 255, 255, 0.1);">
                        <div class="mb-4">
                            <h5 class="mb-3" style="color: #fff !important;">
                                <i class="fas fa-check-circle"></i> Resolution
                            </h5>
                            <div class="alert alert-success">
                                <strong style="color: #fff !important;">This complaint has been resolved:</strong><br>
                                <p style="color: #fff !important; margin-bottom: 0; margin-top: 0.5rem;">{{ complaint.resolutionNotes|nl2br }}</p>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Status Timeline -->
                <div class="card">
                    <div class="card-body p-4">
                        <h5 class="mb-4" style="color: #fff !important;">
                            <i class="fas fa-clock"></i> Timeline
                        </h5>
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <strong>Complaint Submitted</strong>
                                    <p class="text-muted mb-0">{{ complaint.createdAt|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>

                            {% if complaint.updatedAt %}
                            <div class="timeline-item">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <strong>Last Updated</strong>
                                    <p class="text-muted mb-0">{{ complaint.updatedAt|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>
                            {% endif %}

                            {% if complaint.assignedTo %}
                            <div class="timeline-item">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <strong>Assigned to Support Team</strong>
                                    <p class="text-muted mb-0">Your complaint is being reviewed</p>
                                </div>
                            </div>
                            {% endif %}

                            {% if complaint.resolvedAt %}
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <strong>Resolved</strong>
                                    <p class="text-muted mb-0">{{ complaint.resolvedAt|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Info Card -->
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <h5 class="mb-3" style="color: #fff !important;">
                            <i class="fas fa-info-circle"></i> Information
                        </h5>
                        
                        <div class="info-row">
                            <strong>Status:</strong>
                            <span class="badge bg-{{ complaint.status.badgeClass }}">
                                <i class="{{ complaint.status.icon }}"></i>
                                {{ complaint.status.label }}
                            </span>
                        </div>

                        <div class="info-row">
                            <strong>Priority:</strong>
                            <span class="badge bg-{{ complaint.priority.badgeClass }}">
                                <i class="{{ complaint.priority.icon }}"></i>
                                {{ complaint.priority.label }}
                            </span>
                        </div>

                        <div class="info-row">
                            <strong>Category:</strong>
                            <span style="color: #fff !important;">{{ complaint.category.label }}</span>
                        </div>

                        <div class="info-row">
                            <strong>Submitted:</strong>
                            <span style="color: #fff !important;">{{ complaint.createdAt|date('d/m/Y H:i') }}</span>
                        </div>

                        {% if complaint.assignedTo %}
                        <div class="info-row">
                            <strong>Assigned:</strong>
                            <span style="color: #43e97b !important;">
                                <i class="fas fa-check-circle"></i> Support Team
                            </span>
                        </div>
                        {% endif %}

                        {% if complaint.resolvedAt %}
                        <div class="info-row">
                            <strong>Resolved:</strong>
                            <span style="color: #fff !important;">{{ complaint.resolvedAt|date('d/m/Y H:i') }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions Card -->
                {% if complaint.isPending %}
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <h5 class="mb-3" style="color: #fff !important;">
                            <i class="fas fa-cog"></i> Actions
                        </h5>
                        
                        <form method="post" action="{{ path('app_complaints_delete', {id: complaint.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this complaint?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-complaint-' ~ complaint.id) }}">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash"></i> Delete Complaint
                            </button>
                        </form>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> You can only delete pending complaints
                        </small>
                    </div>
                </div>
                {% endif %}

                <!-- Help Card -->
                <div class="card">
                    <div class="card-body p-4">
                        <h6 style="color: #fff !important;">
                            <i class="fas fa-question-circle"></i> Need More Help?
                        </h6>
                        <p class="text-muted small mb-0">
                            If you have additional questions about this complaint, you can submit a new one or contact our support team directly.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
