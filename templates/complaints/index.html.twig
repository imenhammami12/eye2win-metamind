{% extends 'base.html.twig' %}

{% block title %}My Complaints{% endblock %}

{% block body %}
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>My Complaints</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 style="color: #fff !important;">Support Tickets</h3>
                    <a href="{{ path('app_complaints_new') }}" class="btn btn_1">
                        <i class="fas fa-plus"></i> Submit New Complaint
                    </a>
                </div>
            </div>
        </div>

        {% if complaints|length > 0 %}
        <div class="row">
            {% for complaint in complaints %}
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="complaint-icon-direct">
                                        <i class="{{ complaint.category.icon }}"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-2" style="color: #fff !important;">
                                            <a href="{{ path('app_complaints_show', {id: complaint.id}) }}" 
                                               style="color: #fff !important; text-decoration: none;">
                                                {{ complaint.subject }}
                                            </a>
                                        </h5>
                                        <p class="mb-3" style="color: rgba(255, 255, 255, 0.7) !important; font-size: 0.9rem;">
                                            {{ complaint.description|length > 150 ? complaint.description|slice(0, 150) ~ '...' : complaint.description }}
                                        </p>
                                        <div class="d-flex gap-2 flex-wrap">
                                            <span class="badge bg-{{ complaint.status.badgeClass }}">
                                                <i class="{{ complaint.status.icon }}"></i>
                                                {{ complaint.status.label }}
                                            </span>
                                            <span class="badge bg-{{ complaint.priority.badgeClass }}">
                                                <i class="{{ complaint.priority.icon }}"></i>
                                                {{ complaint.priority.label }}
                                            </span>
                                            <span class="badge bg-secondary">
                                                <i class="{{ complaint.category.icon }}"></i>
                                                {{ complaint.category.label }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <div class="info-row mb-2">
                                    <small style="color: rgba(255, 255, 255, 0.6) !important;">
                                        <i class="fas fa-calendar"></i>
                                        Submitted: {{ complaint.createdAt|date('d/m/Y H:i') }}
                                    </small>
                                </div>
                                {% if complaint.updatedAt %}
                                <div class="info-row mb-2">
                                    <small style="color: rgba(255, 255, 255, 0.6) !important;">
                                        <i class="fas fa-clock"></i>
                                        Updated: {{ complaint.updatedAt|date('d/m/Y H:i') }}
                                    </small>
                                </div>
                                {% endif %}
                                <div class="info-row mb-3">
                                    <small style="color: rgba(255, 255, 255, 0.6) !important;">
                                        <i class="fas fa-ticket-alt"></i>
                                        Ticket #{{ complaint.id }}
                                    </small>
                                </div>
                                <div class="mt-2">
                                    <a href="{{ path('app_complaints_show', {id: complaint.id}) }}" 
                                       class="btn btn-sm btn-outline-light">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body p-5">
                        <div class="text-center py-5">
                            <div style="font-size: 4rem; color: rgba(255, 255, 255, 0.3);">
                                <i class="fas fa-inbox"></i>
                            </div>
                            <h4 class="mt-4" style="color: #fff !important;">No Complaints Yet</h4>
                            <p style="color: rgba(255, 255, 255, 0.7) !important;">
                                You haven't submitted any complaints. If you're experiencing any issues, feel free to submit one.
                            </p>
                            <a href="{{ path('app_complaints_new') }}" class="btn btn_1 mt-3">
                                <i class="fas fa-plus"></i> Submit Your First Complaint
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</section>

<style>
.card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.08);
}

.card-body {
    color: #fff;
}

.complaint-icon-direct {
    font-size: 3rem;
    color: #667eea;
    flex-shrink: 0;
    transition: all 0.3s ease;
    text-shadow: 0 2px 8px rgba(102, 126, 234, 0.5);
}

.card:hover .complaint-icon-direct {
    transform: scale(1.1);
    color: #764ba2;
    text-shadow: 0 4px 12px rgba(118, 75, 162, 0.6);
}

.badge {
    padding: 0.375rem 0.75rem;
    font-weight: 500;
    font-size: 0.75rem;
}

.info-row {
    display: block;
    margin-bottom: 0.5rem;
}

.info-row i {
    margin-right: 0.25rem;
    opacity: 0.8;
}

a.text-white:hover {
    color: #43e97b !important;
    transition: color 0.3s ease;
}

.btn-outline-light {
    border-color: rgba(255, 255, 255, 0.3);
    color: #fff;
}

.btn-outline-light:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    color: #fff;
}
</style>
{% endblock %}
