{% extends 'base.html.twig' %}

{% block title %}{{ agent.name }} Guides • Eye2Win Metamind{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/guides-enhanced.css') }}">
    <style>
        * {
            transition: color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease, transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body { 
            background: linear-gradient(135deg, #0a0e27 0%, #10141e 50%, #0a0e27 100%);
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Header with Agent Stats */
        .agent-header {
            background: linear-gradient(135deg, rgba(255, 0, 0, 0.05) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 2px solid rgba(255, 0, 0, 0.3);
            border-bottom: 3px solid #ff0000;
            padding: 30px 40px;
            border-radius: 16px;
            margin-bottom: 40px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 30px;
        }

        .agent-header-left {
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .agent-header-image {
            width: 90px;
            height: 90px;
            border-radius: 14px;
            overflow: hidden;
            border: 3px solid rgba(76, 211, 227, 0.5);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
            flex-shrink: 0;
        }

        .agent-header-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .agent-header-title h1 {
            color: #fff;
            font-size: 44px;
            font-weight: 900;
            margin: 0;
            letter-spacing: -1px;
        }

        .close-btn {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.1) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 2px solid rgba(76, 211, 227, 0.3);
            color: #4cd3e3;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 11px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .close-btn:hover {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.2) 0%, rgba(76, 211, 227, 0.1) 100%);
            border-color: #ff0000;
            color: #ff0000;
            box-shadow: 0 8px 20px rgba(76, 211, 227, 0.2);
        }

        /* Filter Section */
        .filter-section {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 40px;
            animation: slideDown 0.6s ease;
        }

        .filter-label {
            color: #aeb8c9;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .map-select {
            background: linear-gradient(135deg, rgba(26, 31, 46, 0.8) 0%, rgba(11, 17, 31, 0.8) 100%);
            border: 2px solid rgba(76, 211, 227, 0.3);
            border-radius: 10px;
            padding: 12px 18px;
            color: #4cd3e3;
            font-weight: 600;
            font-size: 14px;
            min-width: 200px;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .map-select:hover,
        .map-select:focus {
            border-color: #ff0000;
            box-shadow: 0 8px 25px rgba(76, 211, 227, 0.2);
            outline: none;
        }

        .map-select option {
            background: #0b111f;
            color: #4cd3e3;
            font-weight: 600;
        }

        /* Video Cards Grid */
        .videos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
            animation: slideUp 0.6s ease;
        }

        .video-card {
            background: linear-gradient(135deg, rgba(26, 31, 46, 0.8) 0%, rgba(11, 17, 31, 0.8) 100%);
            border: 2px solid rgba(255, 0, 0, 0.1);
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            cursor: pointer;
        }

        .video-card:hover {
            border-color: #ff0000;
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(255, 0, 0, 0.15);
        }

        /* Thumbnail Container with Play Button */
        .video-thumbnail-container {
            position: relative;
            width: 100%;
            padding-top: 56.25%; /* 16:9 aspect ratio */
            overflow: hidden;
            background: #000;
        }

        .video-thumbnail {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .video-card:hover .video-thumbnail {
            transform: scale(1.05);
            filter: brightness(0.7);
        }

        /* Play Button Overlay */
        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 70px;
            height: 70px;
            background: rgba(255, 0, 0, 0.8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #fff;
            opacity: 0;
            transition: all 0.3s ease;
            box-shadow: 0 0 30px rgba(255, 0, 0, 0.4);
            cursor: pointer;
            z-index: 10;
        }

        .video-card:hover .play-button {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1.1);
        }

        .play-button:active {
            transform: translate(-50%, -50%) scale(0.95);
        }

        /* Video Info */
        .video-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .video-title {
            color: #fff;
            font-size: 15px;
            font-weight: 700;
            margin-bottom: 12px;
            line-height: 1.4;
            letter-spacing: 0.2px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .video-metadata {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .video-uploader {
            color: #4cd3e3;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .video-likes {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #aeb8c9;
            font-size: 12px;
            font-weight: 600;
        }

        .video-likes i {
            color: #ff0000;
            font-size: 14px;
        }

        .video-likes:hover {
            color: #ff0000;
        }

        .video-action-button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.15) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 1.5px solid rgba(76, 211, 227, 0.4);
            color: #4cd3e3;
            border-radius: 10px;
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .video-action-button:hover {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.3) 0%, rgba(76, 211, 227, 0.15) 100%);
            border-color: #4cd3e3;
            box-shadow: 0 8px 20px rgba(76, 211, 227, 0.2);
            color: #fff;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7a8fa3;
        }

        .empty-state i {
            font-size: 64px;
            color: #ff0000;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 16px;
            margin: 0;
            color: #aeb8c9;
        }

        /* Video Modal */
        .video-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            z-index: 1000;
            padding: 20px;
            box-sizing: border-box;
            animation: fadeIn 0.3s ease;
        }

        .video-modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .video-modal-content {
            position: relative;
            width: 100%;
            max-width: 1000px;
            background: #000;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.9);
        }

        .video-modal-header {
            background: linear-gradient(135deg, rgba(255, 0, 0, 0.05) 0%, rgba(76, 211, 227, 0.05) 100%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .video-modal-title {
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            margin: 0;
        }

        .video-modal-close {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.1) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 2px solid rgba(76, 211, 227, 0.3);
            color: #4cd3e3;
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 20px;
        }

        .video-modal-close:hover {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.2) 0%, rgba(76, 211, 227, 0.1) 100%);
            border-color: #ff0000;
            color: #ff0000;
        }

        .video-modal-iframe {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-modal-iframe iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Animations */
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .agent-header {
                flex-direction: column;
                padding: 25px 20px;
                text-align: center;
            }

            .agent-header-left {
                flex-direction: column;
            }

            .agent-header-title h1 {
                font-size: 32px;
            }

            .close-btn {
                width: 100%;
                justify-content: center;
            }

            .filter-section {
                flex-direction: column;
                align-items: stretch;
            }

            .map-select {
                min-width: 100%;
            }

            .videos-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
                gap: 18px;
            }

            .video-card {
                border-radius: 10px;
            }

            .video-info {
                padding: 15px;
            }

            .video-title {
                font-size: 13px;
            }
        }

        @media (max-width: 480px) {
            .videos-grid {
                grid-template-columns: 1fr;
            }

            .agent-header-title h1 {
                font-size: 24px;
            }

            .agent-header-image {
                width: 70px;
                height: 70px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Agent Header with Stats -->
    <div class="agent-header">
        <div class="agent-header-left">
            <div class="agent-header-image">
                <img src="{{ agent.image }}" alt="{{ agent.name }}">
            </div>
            <div class="agent-header-title">
                <h1>{{ agent.name }}</h1>
                <p style="color: #4cd3e3; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 8px;">{{ game.name }}</p>
            </div>
        </div>



        <a href="{{ path('app_guides_game', {gameSlug: game.slug}) }}" class="close-btn">
            <i class="fas fa-chevron-left"></i>
            Retour aux Agents
        </a>
        <a href="{{ path('app_guides') }}" class="close-btn">
            <i class="fas fa-chevron-up"></i>
            Choisir un Jeu
        </a>
    </div>

    <!-- Filter Section -->
    <div class="guide-stat-grid">
        <div class="guide-stat-card">
            <div class="guide-stat-label">Guides Total</div>
            <div class="guide-stat-value" id="guidesTotalCount">{{ guides|length }}</div>
        </div>
        <div class="guide-stat-card">
            <div class="guide-stat-label">Visible</div>
            <div class="guide-stat-value" id="guidesVisibleCount">{{ guides|length }}</div>
        </div>
        <div class="guide-stat-card">
            <div class="guide-stat-label">Total Likes</div>
            <div class="guide-stat-value" id="guidesLikesCount">0</div>
        </div>
    </div>

    <div class="filter-section">
        <label class="filter-label" for="mapFilter">
            <i class="fas fa-map"></i> Map
        </label>
        <select id="mapFilter" class="map-select">
            {% for map in maps %}
                <option value="{{ map|lower }}">{{ map }}</option>
            {% endfor %}
        </select>
        <input id="videoSearchInput" class="guide-input" type="text" placeholder="Rechercher un guide...">
    </div>
    <div class="guide-results-note" id="videosResultsNote">{{ guides|length }} vidéo(s) affichée(s)</div>

    <!-- Videos Grid -->
    {% if guides %}
        <div class="videos-grid">
            {% for video in guides %}
                <div class="video-card" data-map="{{ video.map|lower }}" data-video-id="{{ video.id }}" data-video-url="{{ video.videoUrl }}" data-video-title="{{ video.title }}" data-video-type="{{ video.videoUrl starts with '/uploads/guide-videos/' ? 'local' : 'embed' }}" data-uploader="{{ video.uploadedBy ? video.uploadedBy.username|lower : '' }}" data-likes="{{ video.likes }}">
                    <div class="video-thumbnail-container">
                        <img src="{{ video.thumbnail ?: 'https://via.placeholder.com/350x200?text=Guide+Video' }}" alt="{{ video.title }}" class="video-thumbnail">
                        <div class="play-button" role="button" tabindex="0">
                            <i class="fas fa-play"></i>
                        </div>
                    </div>
                    <div class="video-info">
                        <h3 class="video-title">{{ video.title }}</h3>
                        <div class="video-metadata">
                            <span class="video-uploader">{{ video.uploadedBy ? video.uploadedBy.username : 'Unknown' }}</span>
                            <span class="video-likes">
                                <i class="fas fa-heart"></i> {{ video.likes }}
                            </span>
                        </div>
                        <button type="button" class="video-action-button video-play-btn">
                            <i class="fas fa-play"></i> Regarder
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <i class="fas fa-video"></i>
            <p>Aucune vidéo disponible pour cet agent</p>
        </div>
    {% endif %}

    <!-- Video Modal -->
    <div id="videoModal" class="video-modal">
        <div class="video-modal-content">
            <div class="video-modal-header">
                <h2 class="video-modal-title" id="videoModalTitle">Titre vidéo</h2>
                <div class="video-modal-close" id="videoModalClose">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <div class="video-modal-iframe">
                <iframe id="videoIframe" src="" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
                <video id="videoPlayer" controls style="display:none; width:100%; height:100%; background:#000;" preload="metadata"></video>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const mapFilter = document.getElementById('mapFilter');
    const videoCards = document.querySelectorAll('.video-card');
    const videoModal = document.getElementById('videoModal');
    const videoIframe = document.getElementById('videoIframe');
    const videoPlayer = document.getElementById('videoPlayer');
    const videoModalTitle = document.getElementById('videoModalTitle');
    const videoModalClose = document.getElementById('videoModalClose');
    const videoPlayBtns = document.querySelectorAll('.video-play-btn');
    const playButtons = document.querySelectorAll('.play-button');
    const videoSearchInput = document.getElementById('videoSearchInput');
    const guidesVisibleCount = document.getElementById('guidesVisibleCount');
    const guidesTotalCount = document.getElementById('guidesTotalCount');
    const videosResultsNote = document.getElementById('videosResultsNote');
    const guidesLikesCount = document.getElementById('guidesLikesCount');

    function applyVideoFilters() {
        const selectedMap = (mapFilter?.value || 'all').toLowerCase();
        const query = (videoSearchInput?.value || '').trim().toLowerCase();
        let shown = 0;
        let likesTotal = 0;

        videoCards.forEach(card => {
            const cardMap = (card.getAttribute('data-map') || '').toLowerCase();
            const title = (card.getAttribute('data-video-title') || '').toLowerCase();
            const uploader = (card.getAttribute('data-uploader') || '').toLowerCase();
            const mapMatch = selectedMap === 'all' || cardMap === selectedMap || cardMap === 'all';
            const searchMatch = query === '' || title.includes(query) || uploader.includes(query);
            const visible = mapMatch && searchMatch;

            card.classList.toggle('guide-hidden', !visible);
            if (visible) {
                shown++;
                likesTotal += Number(card.getAttribute('data-likes') || 0);
            }
        });

        if (guidesVisibleCount) guidesVisibleCount.textContent = String(shown);
        if (guidesTotalCount) guidesTotalCount.textContent = String(videoCards.length);
        if (guidesLikesCount) guidesLikesCount.textContent = String(likesTotal);
        if (videosResultsNote) videosResultsNote.textContent = `${shown} vidéo(s) affichée(s)`;
    }

    // Fonction pour ouvrir la vidéo
    function openVideo(videoCard) {
        const videoUrl = videoCard.getAttribute('data-video-url');
        const videoTitle = videoCard.getAttribute('data-video-title');
        const videoType = videoCard.getAttribute('data-video-type');

        if (videoType === 'local') {
            videoIframe.style.display = 'none';
            videoIframe.src = '';
            videoPlayer.style.display = 'block';
            videoPlayer.src = videoUrl;
            videoPlayer.load();
            videoPlayer.play().catch(() => {});
        } else {
            videoPlayer.pause();
            videoPlayer.removeAttribute('src');
            videoPlayer.style.display = 'none';
            videoIframe.style.display = 'block';
            videoIframe.src = videoUrl;
        }

        videoModalTitle.textContent = videoTitle;
        videoModal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    // Filtrer les vidéos par map
    mapFilter?.addEventListener('change', applyVideoFilters);
    videoSearchInput?.addEventListener('input', applyVideoFilters);

    // Clic sur le bouton "Regarder"
    videoPlayBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const videoCard = this.closest('.video-card');
            openVideo(videoCard);
        });
    });

    // Clic sur l'icone play de la vignette - DIRECTEMENT
    playButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.stopPropagation();
            const videoCard = this.closest('.video-card');
            openVideo(videoCard);
        });

        // Support au clavier (Entrée)
        btn.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                e.stopPropagation();
                const videoCard = this.closest('.video-card');
                openVideo(videoCard);
            }
        });
    });

    // Fermer le modal au clic sur le bouton X
    videoModalClose.addEventListener('click', function() {
        videoModal.classList.remove('active');
        videoIframe.src = '';
        videoPlayer.pause();
        videoPlayer.removeAttribute('src');
        videoPlayer.style.display = 'none';
        videoIframe.style.display = 'block';
        document.body.style.overflow = '';
    });

    // Fermer le modal au clic en dehors
    videoModal.addEventListener('click', function(e) {
        if (e.target === videoModal) {
            videoModal.classList.remove('active');
            videoIframe.src = '';
            videoPlayer.pause();
            videoPlayer.removeAttribute('src');
            videoPlayer.style.display = 'none';
            videoIframe.style.display = 'block';
            document.body.style.overflow = '';
        }
    });

    // Fermer le modal avec la touche Échap
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && videoModal.classList.contains('active')) {
            videoModal.classList.remove('active');
            videoIframe.src = '';
            videoPlayer.pause();
            videoPlayer.removeAttribute('src');
            videoPlayer.style.display = 'none';
            videoIframe.style.display = 'block';
            document.body.style.overflow = '';
        }
    });

    applyVideoFilters();
});
</script>
{% endblock %}
