{% extends 'base.html.twig' %}

{% block title %}Guides • Eye2Win Metamind{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/guides-enhanced.css') }}">
    <style>
        * {
            transition: color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease, transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body { 
            background: linear-gradient(135deg, #0a0e27 0%, #10141e 50%, #0a0e27 100%);
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Page Header */
        .guides-header {
            background: linear-gradient(135deg, rgba(255, 0, 0, 0.05) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 2px solid rgba(255, 0, 0, 0.3);
            border-left: 6px solid #ff0000;
            padding: 50px 40px;
            border-radius: 16px;
            margin-bottom: 50px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            animation: slideUp 0.6s ease;
        }

        .guides-header h1 {
            color: #fff;
            font-size: 52px;
            font-weight: 900;
            margin-bottom: 15px;
            letter-spacing: -1px;
            background: linear-gradient(135deg, #fff 0%, #4cd3e3 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .guides-header h1 i {
            color: #ff0000;
            font-size: 48px;
        }

        .guides-header p {
            color: #aeb8c9;
            font-size: 16px;
            line-height: 1.6;
            margin: 0;
        }

        /* Filter Section */
        .filter-section {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 40px;
            flex-wrap: wrap;
            animation: slideDown 0.6s ease;
        }

        .filter-label {
            color: #aeb8c9;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
        }

        .map-select {
            background: linear-gradient(135deg, rgba(26, 31, 46, 0.8) 0%, rgba(11, 17, 31, 0.8) 100%);
            border: 2px solid rgba(76, 211, 227, 0.3);
            border-radius: 10px;
            padding: 12px 18px;
            color: #4cd3e3;
            font-weight: 600;
            font-size: 14px;
            min-width: 200px;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .map-select:hover,
        .map-select:focus {
            border-color: #ff0000;
            box-shadow: 0 8px 25px rgba(76, 211, 227, 0.2);
            outline: none;
        }

        .map-select option {
            background: #0b111f;
            color: #4cd3e3;
            font-weight: 600;
        }

        /* Agent Section */
        .agent-section {
            margin-bottom: 60px;
            animation: slideUp 0.6s ease;
        }

        .agent-title {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgba(255, 0, 0, 0.2);
        }

        .agent-title h2 {
            color: #fff;
            font-size: 32px;
            font-weight: 900;
            margin: 0;
            letter-spacing: -0.5px;
        }

        .agent-title i {
            color: #ff0000;
            font-size: 32px;
        }

        /* Video Cards Grid */
        .videos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .video-card {
            background: linear-gradient(135deg, rgba(26, 31, 46, 0.8) 0%, rgba(11, 17, 31, 0.8) 100%);
            border: 2px solid rgba(255, 0, 0, 0.1);
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            cursor: pointer;
            animation: slideUp 0.6s ease;
        }

        .video-card:hover {
            border-color: #ff0000;
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(255, 0, 0, 0.15);
        }

        /* Thumbnail Container with Play Button */
        .video-thumbnail-container {
            position: relative;
            width: 100%;
            padding-top: 56.25%; /* 16:9 aspect ratio */
            overflow: hidden;
            background: #000;
        }

        .video-thumbnail {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .video-card:hover .video-thumbnail {
            transform: scale(1.05);
            filter: brightness(0.7);
        }

        /* Play Button Overlay */
        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 70px;
            height: 70px;
            background: rgba(255, 0, 0, 0.8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #fff;
            opacity: 0;
            transition: all 0.3s ease;
            box-shadow: 0 0 30px rgba(255, 0, 0, 0.4);
        }

        .video-card:hover .play-button {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1.1);
        }

        /* Video Info */
        .video-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .video-title {
            color: #fff;
            font-size: 15px;
            font-weight: 700;
            margin-bottom: 12px;
            line-height: 1.4;
            letter-spacing: 0.2px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .video-metadata {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .video-uploader {
            color: #4cd3e3;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .video-likes {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #aeb8c9;
            font-size: 12px;
            font-weight: 600;
        }

        .video-likes i {
            color: #ff0000;
            font-size: 14px;
        }

        .video-likes:hover {
            color: #ff0000;
        }

        .video-action-button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.15) 0%, rgba(76, 211, 227, 0.05) 100%);
            border: 1.5px solid rgba(76, 211, 227, 0.4);
            color: #4cd3e3;
            border-radius: 10px;
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .video-action-button:hover {
            background: linear-gradient(135deg, rgba(76, 211, 227, 0.3) 0%, rgba(76, 211, 227, 0.15) 100%);
            border-color: #4cd3e3;
            box-shadow: 0 8px 20px rgba(76, 211, 227, 0.2);
            color: #fff;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7a8fa3;
        }

        .empty-state i {
            font-size: 64px;
            color: #ff0000;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 16px;
            margin: 0;
            color: #aeb8c9;
        }

        /* Animations */
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .guides-header {
                padding: 30px 20px;
            }

            .guides-header h1 {
                font-size: 32px;
            }

            .filter-section {
                flex-direction: column;
                align-items: stretch;
            }

            .map-select {
                min-width: 100%;
            }

            .agent-title h2 {
                font-size: 24px;
            }

            .videos-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
                gap: 18px;
            }

            .video-card {
                border-radius: 10px;
            }

            .video-info {
                padding: 15px;
            }

            .video-title {
                font-size: 13px;
            }
        }

        @media (max-width: 480px) {
            .videos-grid {
                grid-template-columns: 1fr;
            }

            .guides-header h1 {
                font-size: 24px;
                gap: 10px;
            }

            .guides-header h1 i {
                font-size: 28px;
            }

            .agent-title h2 {
                font-size: 20px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Header -->
    <div class="guides-header">
        <h1>
            <i class="fas fa-play-circle"></i>
            Guides Valorant
        </h1>
        <p>Découvrez les meilleures techniques et stratégies par agent. Apprenez des meilleurs joueurs de la communauté.</p>
    </div>

    <!-- Filter Section -->
    <div class="guide-stat-grid">
        <div class="guide-stat-card">
            <div class="guide-stat-label">Agents</div>
            <div class="guide-stat-value" id="indexAgentsCount">{{ guides_data|length }}</div>
        </div>
        <div class="guide-stat-card">
            <div class="guide-stat-label">Visible Videos</div>
            <div class="guide-stat-value" id="indexVisibleVideosCount">0</div>
        </div>
    </div>

    <div class="filter-section">
        <label class="filter-label" for="mapFilter">
            <i class="fas fa-map"></i> Filtrer par Map :
        </label>
        <select id="mapFilter" class="map-select">
            {% for map in maps %}
                <option value="{{ map|lower }}">{{ map }}</option>
            {% endfor %}
        </select>
        <input id="indexSearchInput" class="guide-input" type="text" placeholder="Rechercher agent ou guide...">
    </div>
    <div class="guide-results-note" id="indexResultsNote">0 vidéo(s) affichée(s)</div>

    <!-- Guides by Agent -->
    {% for guide in guides_data %}
        <div class="agent-section" data-agent="{{ guide.agent|lower }}">
            <div class="agent-title">
                <i class="fas fa-user-shield"></i>
                <h2>{{ guide.agent }}</h2>
            </div>

            {% if guide.videos %}
                <div class="videos-grid">
                    {% for video in guide.videos %}
                        <div class="video-card" data-map="{{ video.map|default('all')|lower }}" data-title="{{ video.title|lower }}" data-agent="{{ guide.agent|lower }}">
                            <div class="video-thumbnail-container">
                                <img src="{{ video.thumbnail }}" alt="{{ video.title }}" class="video-thumbnail">
                                <div class="play-button">
                                    <i class="fas fa-play"></i>
                                </div>
                            </div>
                            <div class="video-info">
                                <h3 class="video-title">{{ video.title }}</h3>
                                <div class="video-metadata">
                                    <span class="video-uploader">{{ video.uploader }}</span>
                                    <span class="video-likes">
                                        <i class="fas fa-heart"></i> {{ video.likes }}
                                    </span>
                                </div>
                                <a href="{{ video.videoUrl }}" target="_blank" class="video-action-button">
                                    <i class="fas fa-external-link-alt"></i> Regarder
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <i class="fas fa-video"></i>
                    <p>Aucune vidéo disponible pour cet agent</p>
                </div>
            {% endif %}
        </div>
    {% endfor %}

    <!-- Empty guides message -->
    {% if not guides_data %}
        <div class="empty-state" style="grid-column: 1 / -1;">
            <i class="fas fa-inbox"></i>
            <p>Aucun guide disponible pour le moment</p>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const mapFilter = document.getElementById('mapFilter');
    const searchInput = document.getElementById('indexSearchInput');
    const agentSections = document.querySelectorAll('.agent-section');
    const visibleVideosCount = document.getElementById('indexVisibleVideosCount');
    const resultsNote = document.getElementById('indexResultsNote');

    function applyIndexFilters() {
        const selectedMap = (mapFilter?.value || 'all').toLowerCase();
        const query = (searchInput?.value || '').trim().toLowerCase();
        let visibleVideos = 0;

        agentSections.forEach(section => {
            const cards = section.querySelectorAll('.video-card');
            let sectionHasVisibleCards = false;

            cards.forEach(card => {
                const map = (card.dataset.map || 'all').toLowerCase();
                const title = (card.dataset.title || '').toLowerCase();
                const agent = (card.dataset.agent || '').toLowerCase();

                const mapMatch = selectedMap === 'all' || map === selectedMap || map === 'all';
                const searchMatch = query === '' || title.includes(query) || agent.includes(query);
                const show = mapMatch && searchMatch;

                card.classList.toggle('guide-hidden', !show);
                if (show) {
                    sectionHasVisibleCards = true;
                    visibleVideos++;
                }
            });

            section.classList.toggle('guide-hidden', !sectionHasVisibleCards);
        });

        if (visibleVideosCount) visibleVideosCount.textContent = String(visibleVideos);
        if (resultsNote) resultsNote.textContent = `${visibleVideos} vidéo(s) affichée(s)`;
    }

    mapFilter?.addEventListener('change', applyIndexFilters);
    searchInput?.addEventListener('input', applyIndexFilters);
    applyIndexFilters();
});
</script>
{% endblock %}
