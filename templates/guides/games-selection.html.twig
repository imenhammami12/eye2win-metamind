{% extends 'base.html.twig' %}

{% block title %}Guides • Eye2Win Metamind{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/guides-enhanced.css') }}">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap');

        :root {
            --primary-red: #ff0844;
            --primary-cyan: #00d9ff;
            --primary-purple: #a855f7;
            --dark-bg: #0a0d1a;
            --card-bg: rgba(15, 19, 35, 0.85);
            --glass-border: rgba(255, 255, 255, 0.08);
            --glow-red: rgba(255, 8, 68, 0.5);
            --glow-cyan: rgba(0, 217, 255, 0.5);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body { 
            background: #0a0d1a;
            color: #fff;
            font-family: 'Inter', 'Segoe UI', sans-serif;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 20% 30%, rgba(255, 8, 68, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(0, 217, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, rgba(168, 85, 247, 0.1) 0%, transparent 50%);
            animation: bgFloat 20s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes bgFloat {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(30px, -30px) rotate(1deg); }
            66% { transform: translate(-30px, 30px) rotate(-1deg); }
        }

        .container {
            position: relative;
            z-index: 1;
        }

        /* Ultra-Modern Page Header */
        .guides-header {
            background: linear-gradient(135deg, var(--card-bg) 0%, rgba(20, 25, 45, 0.85) 100%);
            border: 1px solid var(--glass-border);
            border-radius: 32px;
            padding: 70px 50px;
            margin-bottom: 60px;
            box-shadow: 
                0 8px 32px 0 rgba(0, 0, 0, 0.37),
                inset 0 1px 0 0 rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px) saturate(180%);
            animation: headerGlow 3s ease-in-out infinite alternate, slideDown 0.8s cubic-bezier(0.16, 1, 0.3, 1);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .guides-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.08), transparent);
            animation: shimmer 3s infinite;
        }

        @keyframes headerGlow {
            0% { box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37), inset 0 1px 0 0 rgba(255, 255, 255, 0.05), 0 0 40px rgba(255, 8, 68, 0.1); }
            100% { box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37), inset 0 1px 0 0 rgba(255, 255, 255, 0.05), 0 0 60px rgba(0, 217, 255, 0.15); }
        }

        @keyframes shimmer {
            0% { left: -100%; }
            50%, 100% { left: 200%; }
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .guides-header h1 {
            font-size: 64px;
            font-weight: 900;
            letter-spacing: -2px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #fff 0%, var(--primary-cyan) 50%, var(--primary-purple) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            animation: textGlow 2s ease-in-out infinite alternate;
            position: relative;
            z-index: 1;
        }

        @keyframes textGlow {
            0% { filter: drop-shadow(0 0 20px rgba(255, 8, 68, 0.4)); }
            100% { filter: drop-shadow(0 0 30px rgba(0, 217, 255, 0.6)); }
        }

        .guides-header h1 i {
            background: linear-gradient(135deg, var(--primary-red), var(--primary-cyan));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 56px;
            animation: iconPulse 2s ease-in-out infinite;
        }

        @keyframes iconPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .guides-header p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 18px;
            line-height: 1.8;
            margin: 0 0 30px 0;
            font-weight: 400;
            position: relative;
            z-index: 1;
        }

        /* CTA Button */
        .cta-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-cyan) 100%);
            border: none;
            color: #fff;
            padding: 18px 36px;
            border-radius: 16px;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 1.5px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            text-decoration: none;
            position: relative;
            z-index: 1;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(255, 8, 68, 0.4);
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .cta-button:hover::before {
            width: 400px;
            height: 400px;
        }

        .cta-button:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 12px 40px rgba(255, 8, 68, 0.6);
        }

        .cta-button i {
            font-size: 18px;
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            z-index: 1;
        }

        .cta-button:hover i {
            transform: rotate(90deg) scale(1.2);
        }

        .cta-button span {
            position: relative;
            z-index: 1;
        }

        /* Stats Grid with Glassmorphism */
        .guide-stat-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
        }

        .guide-stat-card {
            background: linear-gradient(135deg, rgba(255, 8, 68, 0.1) 0%, rgba(0, 217, 255, 0.05) 100%);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 30px;
            text-align: center;
            backdrop-filter: blur(20px) saturate(180%);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.25);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .guide-stat-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .guide-stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 16px 48px 0 rgba(255, 8, 68, 0.2);
            border-color: rgba(255, 8, 68, 0.4);
        }

        .guide-stat-card:hover::before {
            opacity: 1;
        }

        .guide-stat-label {
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
            margin-bottom: 10px;
        }

        .guide-stat-value {
            font-size: 36px;
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary-red), var(--primary-cyan));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Search Toolbar */
        .guide-toolbar {
            margin-bottom: 30px;
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
        }

        .guide-input {
            width: 100%;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 18px 28px;
            color: #fff;
            font-size: 16px;
            font-family: 'Inter', sans-serif;
            backdrop-filter: blur(20px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        }

        .guide-input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .guide-input:focus {
            outline: none;
            border-color: var(--primary-cyan);
            background: rgba(255, 255, 255, 0.05);
            box-shadow: 0 0 0 4px rgba(0, 217, 255, 0.1), 0 8px 24px rgba(0, 217, 255, 0.2);
            transform: translateY(-2px);
        }

        .guide-results-note {
            text-align: center;
            color: rgba(255, 255, 255, 0.5);
            font-size: 14px;
            margin-bottom: 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        /* Ultra-Modern Games Grid */
        .games-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 32px;
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Premium Game Card with 3D Effect */
        .game-card {
            background: linear-gradient(135deg, rgba(20, 25, 45, 0.9) 0%, rgba(15, 19, 35, 0.9) 100%);
            border: 1px solid var(--glass-border);
            border-radius: 28px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(20px) saturate(180%);
            transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            display: flex;
            flex-direction: column;
            position: relative;
            cursor: pointer;
            transform-style: preserve-3d;
            perspective: 1000px;
        }

        .game-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, 
                rgba(255, 8, 68, 0.15) 0%, 
                rgba(0, 217, 255, 0.15) 50%, 
                rgba(168, 85, 247, 0.15) 100%);
            opacity: 0;
            transition: opacity 0.5s ease;
            pointer-events: none;
            z-index: 1;
        }

        .game-card::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(135deg, var(--primary-red), var(--primary-cyan), var(--primary-purple));
            border-radius: 28px;
            opacity: 0;
            z-index: -1;
            transition: opacity 0.5s ease;
        }

        .game-card:hover {
            transform: translateY(-16px) rotateX(5deg) scale(1.03);
            box-shadow: 
                0 30px 70px rgba(255, 8, 68, 0.3),
                0 0 80px rgba(0, 217, 255, 0.2);
        }

        .game-card:hover::before {
            opacity: 1;
        }

        .game-card:hover::after {
            opacity: 0.3;
        }

        /* Game Image with Enhanced Effects */
        .game-image-container {
            width: 100%;
            height: 280px;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
            z-index: 2;
        }

        .game-image-container::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, transparent 30%, rgba(0, 0, 0, 0.5) 100%);
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .game-card:hover .game-image-container::before {
            opacity: 1;
        }

        .game-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 20px;
            transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
            filter: brightness(0.9);
        }

        .game-card:hover .game-image {
            transform: scale(1.15) rotate(3deg);
            box-shadow: 0 20px 50px rgba(255, 8, 68, 0.4);
            filter: brightness(1.1);
        }

        /* Game Info Section */
        .game-info {
            padding: 32px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 16px;
            position: relative;
            z-index: 2;
        }

        .game-name {
            color: #fff;
            font-size: 22px;
            font-weight: 900;
            letter-spacing: -0.5px;
            margin: 0;
            line-height: 1.3;
            transition: all 0.3s ease;
        }

        .game-card:hover .game-name {
            background: linear-gradient(135deg, var(--primary-red), var(--primary-cyan));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transform: translateX(5px);
        }

        .game-description {
            color: rgba(255, 255, 255, 0.6);
            font-size: 14px;
            line-height: 1.6;
            margin: 0;
            flex-grow: 1;
            font-weight: 400;
        }

        /* Premium Button with Magnetic Effect */
        .game-button {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            background: linear-gradient(135deg, rgba(255, 8, 68, 0.2) 0%, rgba(0, 217, 255, 0.2) 100%);
            border: 1px solid rgba(255, 8, 68, 0.4);
            color: #fff;
            padding: 16px;
            border-radius: 16px;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 13px;
            letter-spacing: 1.5px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            text-decoration: none;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .game-button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .game-button:hover::before {
            width: 300px;
            height: 300px;
        }

        .game-card:hover .game-button {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-cyan) 100%);
            border-color: var(--primary-cyan);
            box-shadow: 0 8px 30px rgba(0, 217, 255, 0.4);
            transform: translateY(-4px);
        }

        .game-button i {
            font-size: 16px;
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            z-index: 1;
        }

        .game-card:hover .game-button i {
            transform: translateX(5px);
        }

        .game-button span {
            position: relative;
            z-index: 1;
        }

        /* Hidden State */
        .guide-hidden {
            display: none;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .guides-header {
                padding: 50px 30px;
                border-radius: 24px;
            }

            .guides-header h1 {
                font-size: 42px;
                gap: 15px;
            }

            .cta-button {
                padding: 16px 28px;
                font-size: 13px;
            }

            .guides-header h1 i {
                font-size: 38px;
            }

            .guides-header p {
                font-size: 16px;
            }

            .games-grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }

            .game-card {
                border-radius: 20px;
            }

            .game-info {
                padding: 24px;
            }

            .game-name {
                font-size: 20px;
            }
        }

        @media (max-width: 480px) {
            .guides-header {
                padding: 40px 20px;
            }

            .guides-header h1 {
                font-size: 32px;
                gap: 12px;
            }

            .cta-button {
                padding: 14px 24px;
                font-size: 12px;
            }

            .guides-header h1 i {
                font-size: 28px;
            }

            .guides-header p {
                font-size: 14px;
            }

            .game-image-container {
                height: 180px;
            }

            .game-image {
                width: 120px;
                height: 120px;
            }

            .game-info {
                padding: 20px;
                gap: 14px;
            }

            .game-name {
                font-size: 18px;
            }

            .game-description {
                font-size: 13px;
            }

            .game-button {
                padding: 14px;
                font-size: 12px;
            }

            .guide-stat-value {
                font-size: 28px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Header -->
    <div class="guides-header">
        <h1>
            <i class="fas fa-play-circle"></i>
            Guides Complets
        </h1>
        <p>Choisis ton jeu et découvre les meilleures stratégies par champions / agents.</p>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_guide_upload') }}" class="cta-button">
                <span>Add Guide</span>
                <i class="fas fa-plus-circle"></i>
            </a>
        {% endif %}
    </div>

    <!-- Games Grid -->
    <div class="guide-stat-grid">
        <div class="guide-stat-card">
            <div class="guide-stat-label">Total Games</div>
            <div class="guide-stat-value" id="totalGamesCount">{{ games|length }}</div>
        </div>
        <div class="guide-stat-card">
            <div class="guide-stat-label">Visible</div>
            <div class="guide-stat-value" id="visibleGamesCount">{{ games|length }}</div>
        </div>
    </div>

    <div class="guide-toolbar">
        <input id="gameSearchInput" class="guide-input" type="text" placeholder="Rechercher un jeu...">
    </div>
    <div class="guide-results-note" id="gamesResultsNote">{{ games|length }} résultat(s)</div>

    <div class="games-grid">
        {% for game in games %}
            <div class="game-card" data-name="{{ game.name|lower }}" data-description="{{ game.description|default('')|lower }}">
                <div class="game-image-container">
                    <img src="{{ game.icon }}" alt="{{ game.name }}" class="game-image">
                </div>
                <div class="game-info">
                    <h2 class="game-name">{{ game.name }}</h2>
                    <p class="game-description">{{ game.description }}</p>
                    <a href="{{ path('app_guides_game', {gameSlug: game.slug}) }}" class="game-button">
                        <span>Accéder aux Guides</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('gameSearchInput');
    const cards = document.querySelectorAll('.game-card');
    const visibleCount = document.getElementById('visibleGamesCount');
    const totalCount = document.getElementById('totalGamesCount');
    const resultsNote = document.getElementById('gamesResultsNote');

    function applyFilters() {
        const query = (searchInput?.value || '').trim().toLowerCase();
        let shown = 0;

        cards.forEach(card => {
            const haystack = `${card.dataset.name || ''} ${card.dataset.description || ''}`;
            const match = query === '' || haystack.includes(query);
            card.classList.toggle('guide-hidden', !match);
            if (match) {
                shown++;
            }
        });

        if (visibleCount) visibleCount.textContent = String(shown);
        if (totalCount) totalCount.textContent = String(cards.length);
        if (resultsNote) resultsNote.textContent = `${shown} résultat(s)`;
    }

    searchInput?.addEventListener('input', applyFilters);
    applyFilters();
});
</script>
{% endblock %}
