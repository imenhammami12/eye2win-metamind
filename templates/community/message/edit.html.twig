{% extends 'base.html.twig' %}

{% block title %}Edit Message{% endblock %}

{% block body %}
<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Edit Message</h2>
                            <p><a href="{{ path('app_home') }}">Home</a> <span>/</span> <a href="{{ path('community_channels_index') }}">Channels</a> <span>/</span> Edit Message</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="team-form-card">
                    <div class="form-card-header">
                        <i class="fas fa-edit"></i>
                        <h4>Edit Message</h4>
                    </div>
                    
                    <div class="form-card-body">
                        {{ form_start(form) }}
                        
                        <div class="form-group-custom mb-4">
                            {{ form_widget(form) }}
                        </div>
                        
                        <div class="form-actions">
                            <button type="submit" class="btn_1">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a href="{{ app.request.headers.get('referer') ?: path('community_channels_index') }}" class="btn_2">
                                <i class="fas fa-times-circle"></i> Cancel
                            </a>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* Reuse the same styles from team creation */
.team-form-card {
    background: linear-gradient(135deg, rgba(11,17,31,0.95) 0%, rgba(20,25,40,0.95) 100%);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(255,0,0,0.1);
    border: 1px solid rgba(255,0,0,0.2);
}

.form-card-header {
    background: linear-gradient(to right, #ff0000 0%, #c6019a 100%);
    padding: 25px 30px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.form-card-header i {
    font-size: 28px;
    color: #fff;
}

.form-card-header h4 {
    margin: 0;
    color: #fff;
    font-size: 24px;
    font-weight: 600;
}

.form-card-body {
    padding: 40px;
}

@media (max-width: 768px) {
    .form-card-body {
        padding: 25px 20px;
    }
}

.form-group-custom {
    margin-bottom: 30px;
}

.form-actions {
    display: flex;
    gap: 15px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid rgba(255,255,255,0.1);
}

.form-actions .btn_1,
.form-actions .btn_2 {
    flex: 1;
    text-align: center;
    padding: 18px 30px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

@media (max-width: 576px) {
    .form-actions {
        flex-direction: column;
    }
}
</style>
{% endblock %}
