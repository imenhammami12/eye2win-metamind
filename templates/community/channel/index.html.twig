{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">

        <div class="esport-hero">
            <div class="d-flex justify-content-between align-items-center flex-wrap" style="gap:12px;">
                <div>
                    <h2>Channels</h2>
                    <p class="mb-0">DISCOVER THE CHANNELS</p>
                </div>

                {% if is_granted('ROLE_USER') %}
                    <a class="btn btn-accent" href="{{ path('community_channels_new') }}">
                        + New Channel
                    </a>
                {% endif %}
            </div>
        </div>

        <div class="row channel-grid">
            {% for c in channels %}
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card channel-card">
                        <div class="card-body d-flex flex-column">

                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="channel-title">{{ c.name }}</div>
                                    <div class="channel-meta mt-1">{{ c.game }} • {{ c.isActive }}</div>
                                </div>

                                <span class="badge-esport">{{ c.type|upper }}</span>
                            </div>

                            <div class="mt-3 d-flex gap-2" style="gap:8px; flex-wrap:wrap;">
                                <a class="btn btn-soft btn-sm"
                                   href="{{ path('community_channels_show', {id: c.id}) }}">
                                    Open
                                </a>

                                {% if app.user and c.createdBy == app.user.userIdentifier %}
                                    <a class="btn btn-warning btn-sm"
                                       href="{{ path('community_channels_edit', {id: c.id}) }}">
                                        Edit
                                    </a>

                                    <form method="post"
                                          action="{{ path('community_channels_delete', {id: c.id}) }}"
                                          onsubmit="return confirm('Supprimer ce channel ?');"
                                          style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_channel_' ~ c.id) }}">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                {% endif %}
                            </div>

                            <div class="mt-auto pt-3" style="color: rgba(255,255,255,0.55); font-size: 12px;">
                                Channel ID: #{{ c.id }}
                            </div>

                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="card channel-card">
                        <div class="card-body text-center" style="color: rgba(255,255,255,0.75);">
                            Aucun channel disponible.
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
