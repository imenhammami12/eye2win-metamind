{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Channels</h2>
            {% if is_granted('ROLE_USER') %}
                <a class="btn btn-danger" href="{{ path('community_channels_new') }}">+ Nouveau Channel</a>
            {% endif %}

        </div>

        {% for c in channels %}
            <div class="card mb-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">{{ c.name }}</h5>
                        <small>{{ c.game }} â€¢ {{ c.type }}</small>
                    </div>

                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-light"
                           href="{{ path('community_channels_show', {id: c.id}) }}">
                            Open
                        </a>

                        {% if app.user and c.createdBy == app.user.userIdentifier %}
                            <a class="btn btn-warning"
                               href="{{ path('community_channels_edit', {id: c.id}) }}">
                                Edit
                            </a>

                            <form method="post"
                                  action="{{ path('community_channels_delete', {id: c.id}) }}"
                                  onsubmit="return confirm('Supprimer ce channel ?');">
                                <input type="hidden"
                                       name="_token"
                                       value="{{ csrf_token('delete_channel_' ~ c.id) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>


        {% else %}
            <p>Aucun channel disponible.</p>
        {% endfor %}
    </div>
{% endblock %}
