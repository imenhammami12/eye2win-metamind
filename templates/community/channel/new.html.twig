{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <div class="card p-4" style="background: rgba(0,0,0,0.35); border: 1px solid rgba(255,255,255,0.08); border-radius: 16px;">
            <h2 class="mb-2">Create a Channel</h2>
            <p class="text-muted mb-4">Create your space • It's going to be validated by an admin ✅</p>

            {{ form_start(form) }}

            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.game) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.type) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.imageUrl) }}
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button class="btn btn-danger">Create</button>
                <a href="{{ path('community_channels_index') }}" class="btn btn-secondary">Cancel</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
