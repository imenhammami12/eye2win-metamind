                //         //row.querySelector('.msg-deleted')?.textContent = 'this message is deleted.';
                //     }
                //     row.querySelectorAll('.msg-files').forEach(el => el.remove());
                //     return;
                // }

                if (data.type === 'delete') {
                    if (!row) return;

                    // remove actions (edit/delete)
                    const actions = row.querySelector('.msg-actions');
                    if (actions) actions.remove();

                    // remove any attachments
                    row.querySelectorAll('.msg-files').forEach(el => el.remove());

                    // ‚úÖ ensure a deleted label exists inside bubble
                    const bubble = row.querySelector('.bubble');
                    if (bubble) {
                        // remove old text if any
                        bubble.querySelectorAll('.msg-text').forEach(el => el.remove());
                        // remove existing deleted label (avoid duplicates)
                        bubble.querySelectorAll('.msg-deleted').forEach(el => el.remove());

                        const del = document.createElement('div');
                        del.className = 'msg-deleted';
                        del.textContent = 'this message is deleted.';
                        bubble.appendChild(del);
                    }

                    return;
                }

                // ‚úÖ EDIT: update existing row content
                if (data.type === 'edit') {
                    if (!row) return;
                    const txt = row.querySelector('.msg-text');
                    if (txt) txt.textContent = data.content ?? '';
                    const time = row.querySelector('.msg-time');
                    if (time && data.editedAt) time.textContent = data.editedAt + ' (edited)';
                    return;
                }

                // ‚úÖ NEW: append only if not existing
                if (row) return;

                const isMe = (currentUserEmail && data.senderEmail === currentUserEmail);
                const html = buildMessageHtml(data, isMe);
                chatStream.insertAdjacentHTML('beforeend', html);
                scrollToBottom();
            };

            const fileInput = document.getElementById('msg-files');
            const preview = document.getElementById('files-preview');

            // if (fileInput && preview) {
            //     fileInput.addEventListener('change', () => {
            //         const files = Array.from(fileInput.files || []);
            //         preview.textContent = files.length
