        .chat-hero{
            background: rgba(0,0,0,0.35);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 18px;
            padding: 22px 22px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.35);
            position: relative;
            overflow: hidden;
        }
        .chat-hero:before{
            content:"";
            position:absolute;
            inset:-2px;
            background: radial-gradient(circle at 20% 20%, rgba(255,0,80,0.20), transparent 40%),
            radial-gradient(circle at 80% 30%, rgba(0,220,255,0.18), transparent 45%),
            radial-gradient(circle at 40% 90%, rgba(120,0,255,0.12), transparent 55%);
            filter: blur(10px);
            z-index:0;
        }
        .chat-hero > *{ position:relative; z-index:1; }

        .chat-title{
            font-size: 34px;
            font-weight: 800;
            color: #fff;
            margin: 0;
            letter-spacing: .3px;
            text-shadow: 0 8px 18px rgba(0,0,0,0.45);
        }
        .chat-sub{
            margin-top: 6px;
            color: rgba(255,255,255,0.70);
            font-size: 14px;
            line-height: 1.4;
        }
        .chat-pill{
            display:inline-flex;
            align-items:center;
            gap:8px;
            padding: 6px 10px;
