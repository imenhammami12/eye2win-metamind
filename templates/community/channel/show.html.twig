            //const es = new EventSource(url); // ‚úÖ no cookies needed
            const es = new EventSource(mercureUrl, { withCredentials: true });

            es.onopen = () => console.log("‚úÖ Mercure connected");
            es.onerror = (e) => console.log("‚ùå Mercure error", e);

            es.onmessage = (event) => {
                const data = JSON.parse(event.data);
                if (!data || !data.id) return;

                const row = document.querySelector(`[data-msg-id="${data.id}"]`);

                // ‚úÖ DELETE: update existing row (do not append)
                // if (data.type === 'delete') {
                //     if (!row) return;
