{% extends 'base.html.twig' %}

{% block body %}
    <style>
        /* ======= eSport Chat UI (scoped) ======= */
        .chat-wrap{
            margin-top: 28px;
            margin-bottom: 50px;
        }
        .chat-hero{
            background: rgba(0,0,0,0.35);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 18px;
            padding: 22px 22px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.35);
            position: relative;
            overflow: hidden;
        }
        .chat-hero:before{
            content:"";
            position:absolute;
            inset:-2px;
            background: radial-gradient(circle at 20% 20%, rgba(255,0,80,0.20), transparent 40%),
            radial-gradient(circle at 80% 30%, rgba(0,220,255,0.18), transparent 45%),
            radial-gradient(circle at 40% 90%, rgba(120,0,255,0.12), transparent 55%);
            filter: blur(10px);
            z-index:0;
        }
        .chat-hero > *{ position:relative; z-index:1; }

        .chat-title{
            font-size: 34px;
            font-weight: 800;
            color: #fff;
            margin: 0;
            letter-spacing: .3px;
            text-shadow: 0 8px 18px rgba(0,0,0,0.45);
        }
        .chat-sub{
            margin-top: 6px;
            color: rgba(255,255,255,0.70);
            font-size: 14px;
            line-height: 1.4;
        }
        .chat-pill{
            display:inline-flex;
            align-items:center;
            gap:8px;
            padding: 6px 10px;
            border-radius: 999px;
            border: 1px solid rgba(255,255,255,0.10);
            background: rgba(255,255,255,0.06);
            color: rgba(255,255,255,0.85);
            font-size: 12px;
            margin-top: 10px;
        }

        .chat-panel{
            margin-top: 18px;
            background: rgba(0,0,0,0.28);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        }

        /* Scrollable message area */
        .chat-stream{
            height: min(62vh, 560px);
            overflow-y: auto;
            padding: 18px 16px;
        }
        .chat-stream::-webkit-scrollbar{ width: 10px; }
        .chat-stream::-webkit-scrollbar-thumb{
            background: rgba(255,255,255,0.12);
            border-radius: 999px;
        }

        .msg-row{
            display:flex;
            margin-bottom: 14px;
            gap: 10px;
        }
        .msg-row.me{ justify-content: flex-end; }
        .msg-row.other{ justify-content: flex-start; }

        .avatar{
            width: 36px;
            height: 36px;
            border-radius: 12px;
            display:flex;
            align-items:center;
            justify-content:center;
            background: rgba(255,255,255,0.07);
            border: 1px solid rgba(255,255,255,0.10);
            color: rgba(255,255,255,0.85);
            font-weight: 700;
            font-size: 13px;
            flex: 0 0 auto;
            user-select:none;
        }

        .bubble{
            max-width: 78%;
            border-radius: 16px;
            padding: 12px 12px 10px 12px;
            border: 1px solid rgba(255,255,255,0.10);
            background: rgba(255,255,255,0.06);
            position: relative;
        }
        .me .bubble{
            background: linear-gradient(135deg, rgba(255,0,80,0.18), rgba(0,220,255,0.12));
            border-color: rgba(255,0,80,0.20);
        }

        .msg-top{
            display:flex;
            align-items:center;
            justify-content: space-between;
            gap: 10px;
            margin-bottom: 6px;
        }
        .msg-name{
            color: rgba(255,255,255,0.92);
            font-weight: 700;
            font-size: 13px;
        }
        .msg-time{
            color: rgba(255,255,255,0.55);
            font-size: 11px;
            white-space: nowrap;
        }
        .msg-text{
            color: rgba(255,255,255,0.86);
            font-size: 14px;
            line-height: 1.35;
            white-space: pre-wrap;
            word-break: break-word;
        }
        .msg-deleted{
            color: rgba(255,255,255,0.55);
            font-style: italic;
            font-size: 13px;
        }

        /* 3 dots dropdown */
        .msg-actions{
            position: relative;
            margin-left: auto;
        }
        .dots-btn{
            border: 0;
            background: transparent;
            color: rgba(255,255,255,0.70);
            width: 30px;
            height: 30px;
            border-radius: 10px;
            display:flex;
            align-items:center;
            justify-content:center;
            cursor: pointer;
        }
        .dots-btn:hover{
            background: rgba(255,255,255,0.08);
            color: rgba(255,255,255,0.95);
        }
        .dots-menu{
            min-width: 150px;
            background: rgba(15,18,25,0.98);
            border: 1px solid rgba(255,255,255,0.10);
            border-radius: 14px;
            padding: 6px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.45);
        }
        .dots-item{
            display:flex;
            align-items:center;
            gap:10px;
            width:100%;
            padding: 9px 10px;
            border-radius: 10px;
            color: rgba(255,255,255,0.85);
            text-decoration:none;
            font-size: 13px;
            border:0;
            background: transparent;
            text-align:left;
        }
        .dots-item:hover{ background: rgba(255,255,255,0.08); }
        .dots-danger{ color: #ff5a7a; }

        /* Composer */
        .chat-compose{
            padding: 14px 16px;
            border-top: 1px solid rgba(255,255,255,0.08);
            background: rgba(0,0,0,0.18);
        }
        .compose-row{
            display:flex;
            gap: 10px;
            align-items: flex-end;
        }
        .compose-row textarea{
            background: rgba(255,255,255,0.06);
            border: 1px solid rgba(255,255,255,0.10);
            color: rgba(255,255,255,0.90);
            border-radius: 14px;
            padding: 12px 12px;
            width: 100%;
            min-height: 54px;
            resize: vertical;
        }
        .compose-row textarea:focus{
            outline: none;
            border-color: rgba(0,220,255,0.35);
            box-shadow: 0 0 0 3px rgba(0,220,255,0.12);
        }
        .btn-send{
            border: 0;
            border-radius: 14px;
            padding: 12px 14px;
            background: #ff2d55;
            color: #fff;
            font-weight: 700;
            display:inline-flex;
            align-items:center;
            gap: 8px;
            box-shadow: 0 10px 25px rgba(255,45,85,0.25);
            white-space: nowrap;
        }
        .btn-send:hover{ filter: brightness(1.05); }

        /* Inline edit panel */
        .edit-panel{
            background: rgba(0,0,0,0.22);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 14px;
            padding: 10px;
        }
        .edit-panel textarea{
            background: rgba(255,255,255,0.06);
            border: 1px solid rgba(255,255,255,0.10);
            color: rgba(255,255,255,0.90);
            border-radius: 12px;
            padding: 10px;
            width:100%;
            min-height: 70px;
        }
        .edit-actions{
            display:flex;
            gap: 10px;
            margin-top: 10px;
        }
        #files-preview{
            display:flex;
            flex-wrap:wrap;
            gap:8px;
            margin-top:8px;
        }

        .file-chip{
            display:inline-flex;
            align-items:center;
            gap:8px;
            padding:6px 10px;
            border-radius:14px;
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.10);
            color: rgba(255,255,255,0.90);
            font-size: 12px;
        }

        .file-chip .file-size{
            opacity:.7;
        }

        .file-chip .file-remove{
            border:0;
            background: transparent;
            color: rgba(255,255,255,0.75);
            cursor:pointer;
            font-size: 14px;
            line-height: 1;
        }

        .file-chip .file-remove:hover{
            color:#ff5a7a;
        }
    </style>

    <div class="container chat-wrap">

        <div class="chat-hero">
            <div class="d-flex justify-content-between align-items-start flex-wrap" style="gap:12px;">
                <div>
                    <h2 class="chat-title">{{ channel.name }}</h2>
                    <div class="chat-sub">{{ channel.description }}</div>
                    <div class="chat-pill">
                        <i class="fas fa-hashtag"></i> Channel ‚Ä¢ Chat Room
                    </div>
                </div>

                <a class="btn btn-soft" href="{{ path('community_channels_index') }}" style="align-self:center;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <div class="chat-panel">
            <div class="chat-stream" id="chatStream">

                {% for m in messages %}
                    {% set isMe = app.user and (m.senderEmail == app.user.userIdentifier) %}
                    {% include 'community/message/_row.html.twig' with {
                        m: m,
                        channel: channel,
                        isMe: isMe,
                        showActions: isMe and not m.isDeleted and not (editId is defined and editId == m.id and editForm is not null),
                        editId: editId,
                        editForm: editForm
                    } %}
                {% else %}
                    <div class="text-center" style="color: rgba(255,255,255,0.75); padding: 30px 10px;">
                        No message at the moment. Start a conversation üî•
                    </div>
                {% endfor %}

            </div>

            <div class="chat-compose">
                {% if is_granted('ROLE_USER') %}

                    {{ form_start(messageForm, { attr: { id: 'message-form' } }) }}
                    <div class="compose-row">

                        {{ form_widget(messageForm.content, {'attr': {'placeholder': 'Type here...', 'rows': 2}}) }}

                        {# ‚úÖ hidden file input #}
                        {# ‚úÖ keep Symfony id, just hide input nicely #}
                        {{ form_widget(messageForm.files, { attr: { class: 'file-input-hidden' } }) }}

                        <label for="{{ messageForm.files.vars.id }}" class="btn-send" style="cursor:pointer;" title="Attach file">
                            <i class="fas fa-paperclip"></i>
                        </label>

                        <button class="btn-send" type="submit">
                            <i class="fas fa-paper-plane"></i> Send
                        </button>
                    </div>

{#                    <div id="files-preview" style="margin-top:6px; font-size:12px; color: rgba(255,255,255,0.7);"></div>#}
                    <div id="compose-error" style="margin-top:6px; font-size:12px; color: #ff6b81;"></div>
                    <div id="files-preview" style="margin-top:6px; font-size:12px; color: rgba(255,255,255,0.7);"></div>
                    {{ form_end(messageForm) }}



                {% else %}
                    <div class="text-muted">Login to send a message.</div>
                {% endif %}
            </div>
        </div>

    </div>

