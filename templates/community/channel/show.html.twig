    <script>
        (function () {
            const chatStream = document.getElementById('chatStream');
            const form = document.querySelector('.chat-compose form');
            const textarea = form ? form.querySelector('textarea') : null;

            function scrollToBottom() {
                if (chatStream) chatStream.scrollTop = chatStream.scrollHeight;
            }

            scrollToBottom();
            const currentUserEmail = "{{ app.user ? app.user.userIdentifier : '' }}";

            // ‚úÖ Mercure topic per channel
            const topic = "urn:channel:{{ channel.id }}";
            // ‚úÖ This generates the URL AND sets the auth cookie for subscribing
            // Docs: use withCredentials:true so cookie is sent to the hub. :contentReference[oaicite:5]{index=5}
            const hub = "http://127.0.0.1:3000/.well-known/mercure";
            const url = hub + "?topic=" + encodeURIComponent(topic);

            const es = new EventSource(url); // ‚úÖ no cookies needed
            es.onopen = () => console.log("‚úÖ Mercure connected");
            es.onerror = (e) => console.log("‚ùå Mercure error", e);

            es.onmessage = (event) => {
                const data = JSON.parse(event.data);
                if (!data || !data.id) return;

                const row = document.querySelector(`[data-msg-id="${data.id}"]`);

                // ‚úÖ DELETE: update existing row (do not append)
                if (data.type === 'delete') {
                    if (!row) return;
                    // remove actions
                    const actions = row.querySelector('.msg-actions');
                    if (actions) actions.remove();                    // replace content with deleted label
                    const txt = row.querySelector('.msg-text');
                    if (txt) {
                        txt.className = 'msg-deleted';
                        txt.textContent = 'this message is deleted.';
                    } else {
                        const del = row.querySelector('.msg-deleted');
                        if (del) del.textContent = 'this message is deleted.';
                        //row.querySelector('.msg-deleted')?.textContent = 'this message is deleted.';
                    }
                    return;
                }

                // ‚úÖ EDIT: update existing row content
                if (data.type === 'edit') {
                    if (!row) return;
                    const txt = row.querySelector('.msg-text');
                    if (txt) txt.textContent = data.content ?? '';
                    const time = row.querySelector('.msg-time');
                    if (time && data.editedAt) time.textContent = data.editedAt + ' (edited)';
                    return;
                }

                // ‚úÖ NEW: append only if not existing
                if (row) return;

                const isMe = (currentUserEmail && data.senderEmail === currentUserEmail);
                const html = buildMessageHtml(data, isMe);
                chatStream.insertAdjacentHTML('beforeend', html);
                scrollToBottom();
            };


            function escapeHtml(str) {
                return String(str ?? '')
                    .replaceAll("&", "&amp;")
                    .replaceAll("<", "&lt;")
                    .replaceAll(">", "&gt;")
                    .replaceAll('"', "&quot;")
                    .replaceAll("'", "&#039;");
            }

            function buildMessageHtml(m, isMe) {
                const senderName = escapeHtml(m.senderName);
                const sentAt = escapeHtml(m.sentAt);

                const avatarLeft = `
        <div class="avatar" title="${senderName}">
            ${senderName.slice(0,1).toUpperCase()}
        </div>
    `;

                const avatarRight = `
        <div class="avatar" title="You" style="background: rgba(255,45,85,0.18); border-color: rgba(255,45,85,0.20);">
            <i class="fas fa-user"></i>
        </div>
    `;

                const body = m.isDeleted
                    ? `<div class="msg-deleted">this message is deleted.</div>`
                    : `<div class="msg-text">${escapeHtml(m.content)}</div>`;

                // ‚ö†Ô∏è No actions dropdown in realtime inserted messages
                return `
        <div class="msg-row ${isMe ? 'me' : 'other'}" data-msg-id="${m.id}">
            ${isMe ? '' : avatarLeft}
            <div class="bubble">
                <div class="msg-top">
                    <div class="d-flex align-items-center gap-2" style="gap:10px;">
                        <div class="msg-name">${senderName}</div>
                        <div class="msg-time">${sentAt}</div>
                    </div>
                </div>
                ${body}
            </div>
            ${isMe ? avatarRight : ''}
        </div>
    `;
            }


            // ‚úÖ Send message without refresh
            if (form && textarea) {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    const fd = new FormData(form);
                    const res = await fetch(form.action, {
                        method: 'POST',
                        body: fd,
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    });

                    if (!res.ok) return;

                    const json = await res.json();
                    if (json.ok && json.html) {
                        const existing = document.querySelector(`[data-msg-id="${json.id}"]`);
                        if (existing) {
                            // Mercure inserted it first without actions -> replace with sender version (with actions)
                            existing.outerHTML = json.html;
                        } else {
                            chatStream.insertAdjacentHTML('beforeend', json.html);
                        }
                        scrollToBottom();
                        textarea.value = '';
                    }
                });
                textarea.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        form.requestSubmit(); // triggers your existing submit handler
                    }
                });
            }
        })();

        chatStream.addEventListener('submit', async (e) => {
            const form = e.target;
            if (!(form instanceof HTMLFormElement)) return;

            // match delete forms
            if (!form.action.includes('/messages/') || !form.action.endsWith('/delete')) return;

            e.preventDefault();

            const res = await fetch(form.action, {
                method: 'POST',
                body: new FormData(form),
                headers: {'X-Requested-With': 'XMLHttpRequest'}
            });

            if (!res.ok) return;
        });

    </script>

