                if (form && textarea) {
                    form.addEventListener('submit', async (e) => {
                        e.preventDefault();

                        const errorBox = document.getElementById('compose-error');
                        if (errorBox) errorBox.textContent = '';

                        const fd = new FormData(form);

                        let res;
                        try {
