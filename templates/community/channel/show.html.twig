{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <h2>{{ channel.name }}</h2>
        <p class="text-muted">{{ channel.description }}</p>

        <hr>

        <h5>Messages</h5>
        <div class="mb-4">
            {% for m in messages %}
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <strong>{{ m.senderName }}</strong>
                            <small>{{ m.sentAt|date('d/m/Y H:i') }}</small>
                        </div>
                        <div class="mt-2">{{ m.content }}</div>

                        {% if app.user and m.senderEmail == app.user.userIdentifier %}
                            <div class="mt-2">
                                <a class="btn btn-sm btn-outline-warning" href="{{ path('community_message_edit', {id: m.id}) }}">Edit</a>
                                <form method="post" action="{{ path('community_message_delete', {id: m.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_message_' ~ m.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <p>Aucun message.</p>
            {% endfor %}
        </div>

        {% if is_granted('ROLE_USER') %}
            <h5>Envoyer un message</h5>
            {{ form_start(messageForm) }}
            {{ form_row(messageForm.content) }}
            <button class="btn btn-danger">Envoyer</button>
            {{ form_end(messageForm) }}
        {% else %}
            <p class="text-muted">Connecte-toi pour envoyer un message.</p>
        {% endif %}
    </div>
{% endblock %}
