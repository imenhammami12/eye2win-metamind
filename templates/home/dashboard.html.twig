{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin - EyeTwin{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Dashboard Admin</h2>
                        <p><a href="{{ path('app_home') }}">Accueil</a> <span>-</span> Dashboard</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="mb-4">Vidéos uploadées</h3>

                        {% if videos is empty %}
                            <div class="alert alert-info">Aucune vidéo disponible.</div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Titre</th>
                                            <th>Uploaded by</th>
                                            <th>Status</th>
                                            <th>CreatedAt</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for video in videos %}
                                            <tr>
                                                <td>{{ video.title }}</td>
                                                <td>{{ video.uploadedBy ? video.uploadedBy.username : '—' }}</td>
                                                <td>{{ video.status }}</td>
                                                <td>{{ video.createdAt ? video.createdAt|date('d/m/Y H:i') : '—' }}</td>
                                                <td>
                                                    <a href="{{ path('app_video_show', { id: video.id }) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                                    <a href="{{ path('app_admin_video_edit', { id: video.id }) }}" class="btn btn-sm btn-outline-secondary">Éditer</a>
                                                    <form method="post" action="{{ path('app_admin_video_delete', { id: video.id }) }}" style="display:inline-block" onsubmit="return confirm('Supprimer cette vidéo ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_video_' ~ video.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}