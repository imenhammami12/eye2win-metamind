{% extends 'base.html.twig' %}

{% block title %}Dashboard - EyeTwin{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Dashboard</h2>
                        <p><a href="{{ path('app_home') }}">Accueil</a> <span>-</span> Dashboard</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-lg-8">
                <h2>Mes vidéos</h2>
            </div>
            <div class="col-lg-4 text-lg-right">
                <a href="{{ path('app_video_upload') }}" class="btn btn-primary">Ajouter une vidéo</a>
            </div>
        </div>

        {% if videos is empty %}
            <div class="alert alert-info">Aucune vidéo pour le moment.</div>
        {% else %}
            <div class="row">
                {% for video in videos %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ video.title }}</h5>
                                <p class="text-muted">{{ video.gameType }}</p>
                                <video class="w-100" controls preload="metadata">
                                    <source src="{{ video.videoUrl }}" type="video/mp4">
                                </video>
                            </div>
                            <div class="card-footer bg-white">
                                <a href="{{ path('app_video_show', { id: video.id }) }}" class="btn btn-sm btn-outline-primary">Voir détails</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}