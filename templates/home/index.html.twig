{% extends 'base.html.twig' %}

{% block title %}Accueil - EyeTwin eSport Platform{% endblock %}

{% block body %}
<!-- Banner Section -->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h1>Bienvenue sur EyeTwin eSport</h1>
                        <p>La plateforme eSport de référence pour l'analyse intelligente, 
                           le coaching personnalisé et les tournois compétitifs.</p>
                        {% if not app.user %}
                            <a href="{{ path('app_register') }}" class="btn_1">
                                Commencer maintenant <i class="fas fa-arrow-right"></i>
                            </a>
                            <a href="{{ path('app_login') }}" class="btn_2">
                                Se connecter
                            </a>
                        {% else %}
                            <a href="{{ path('app_dashboard') }}" class="btn_1">
                                Accéder au Dashboard <i class="fas fa-tachometer-alt"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}