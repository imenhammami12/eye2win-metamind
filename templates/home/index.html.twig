{% extends 'base.html.twig' %}

{% block title %}Home - EyeTwin eSport Platform{% endblock %}

{% block body %}
<!-- Banner Section -->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h1>Welcome to EyeTwin eSport</h1>
                        <p>The leading eSport platform for intelligent analysis,
                           personalized coaching, and competitive tournaments.</p>
                        {% if not app.user %}
                            <a href="{{ path('app_register') }}" class="btn_1">
                                Get started now <i class="fas fa-arrow-right"></i>
                            </a>
                            <a href="{{ path('app_login') }}" class="btn_2">
                                Sign in
                            </a>
                        {% else %}
                            <a href="{{ path('app_video_upload') }}" class="btn_1">
                                Upload a video <i class="fas fa-upload"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% if app.user %}
<section class="blog_part section_padding">
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-lg-8">
                <h2>Your recent videos</h2>
            </div>
            <div class="col-lg-4 text-lg-right">
                <a href="{{ path('app_video_upload') }}" class="btn btn-primary">Add a video</a>
            </div>
        </div>

        {% if videos is empty %}
            <div class="alert alert-info">No videos yet.</div>
        {% else %}
            <div class="row">
                {% for video in videos %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ video.title }}</h5>
                                <p class="text-muted mb-2">{{ video.gameType }}</p>
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <span class="text-muted">
                                        <i class="bi bi-person me-1"></i>{{ video.uploadedBy.username }}
                                    </span>
                                    {% if video.visibility == 'PUBLIC' %}
                                        <span class="badge bg-success">PUBLIC</span>
                                    {% else %}
                                        <span class="badge bg-secondary">PRIVATE</span>
                                    {% endif %}
                                </div>
                                {% if video.uploadedBy == app.user %}
                                    <small class="text-primary fw-semibold">My video</small>
                                {% elseif video.visibility == 'PUBLIC' %}
                                    <small class="text-success fw-semibold">Public video</small>
                                {% endif %}
                                <video class="w-100" controls preload="metadata">
                                    <source src="{{ video.videoUrl }}" type="video/mp4">
                                </video>
                            </div>
                            <div class="card-footer bg-white">
                                <a href="{{ path('app_video_show', { id: video.id }) }}" class="btn btn-sm btn-outline-primary">View details</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endif %}
{% endblock %}