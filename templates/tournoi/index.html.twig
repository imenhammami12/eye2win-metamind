{% extends 'base.html.twig' %}

{% block title %}Tournaments - EyeTwin{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2>Tournaments</h2>
                            <p><a href="{{ path('app_home') }}">Home</a> <span>-</span> Tournaments</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tournament List -->
    <section class="tournaments_list section_padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section_tittle text-center">
                        <h2>Ongoing & Upcoming Tournaments</h2>
                        <p>Join the excitement! Browse our tournaments and check out the match schedules.</p>
                    </div>
                </div>
            </div>
            
            <div class="row">
                {% for tournament in tournaments %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="single_gaming_tournament card border-0 shadow h-100" style="background-color: #1a1a2e; color: #fff; overflow: hidden; transition: transform 0.3s ease;">
                            <div class="tournament_img position-relative">
                                {% if tournament.image %}
                                    <img src="{{ asset('uploads/tournois/' ~ tournament.image) }}" 
                                         class="card-img-top" 
                                         alt="{{ tournament.nom }}" 
                                         style="height: 220px; object-fit: cover; filter: brightness(0.8);">
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center" style="height: 220px; background: linear-gradient(45deg, #16213e, #0f3460);">
                                        <i class="fas fa-trophy fa-4x text-white-50"></i>
                                    </div>
                                {% endif %}
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge rounded-pill px-3 py-2" style="background-color: #e94560; font-size: 0.85rem;">
                                        {{ tournament.typeTournoi ? tournament.typeTournoi.name : 'Tournament' }}
                                    </span>
                                </div>
                                <div class="position-absolute bottom-0 start-0 w-100 p-3" style="background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);">
                                    <h4 class="card-title mb-0 text-white text-shadow">{{ tournament.nom }}</h4>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column pt-4">
                                <div class="tournament_meta mb-4">
                                    <div class="d-flex align-items-center mb-2" style="color: #aeb8c9;">
                                        <i class="far fa-calendar-alt me-2" style="color: #e94560;"></i>
                                        <small>{{ tournament.dateDebut ? tournament.dateDebut|date('M d, Y') : 'TBA' }} - {{ tournament.dateFin ? tournament.dateFin|date('M d, Y') : 'TBA' }}</small>
                                    </div>
                                    <div class="d-flex align-items-center" style="color: #aeb8c9;">
                                        <i class="fas fa-gamepad me-2" style="color: #e94560;"></i>
                                        <small>{{ tournament.matchs|length }} Matches</small>
                                    </div>
                                </div>
                                
                                <p class="card-text mb-4 flex-grow-1" style="color: #aeb8c9;">
                                    {{ tournament.description|u.truncate(100, '...') }}
                                </p>
                                
                                <a href="{{ path('app_tournoi_show', {'id': tournament.id}) }}" class="btn w-100 mt-auto" style="background-color: #0f3460; color: white; border: 1px solid #16213e; transition: all 0.3s;">
                                    View Details <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <div class="alert alert-dark border-0" style="background-color: #1a1a2e; color: #fff;">
                            <i class="fas fa-info-circle me-2"></i>
                            No tournaments available currently.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
