{% extends 'base.html.twig' %}

{% block title %}Tournaments - EyeTwin{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2>Tournaments</h2>
                            <p><a href="{{ path('app_home') }}">Home</a> <span>-</span> Tournaments</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tournament List -->
    <section class="tournaments_list section_padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section_tittle text-center">
                        <h2>Ongoing & Upcoming Tournaments</h2>
                        <p>Join the excitement! Browse our tournaments and check out the match schedules.</p>
                    </div>
                </div>
            </div>
            
            <div class="row">
                {% for tournament in tournaments %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="single_gaming_tournament card border-0 shadow-sm h-100">
                            <div class="tournament_img position-relative">
                                {% if tournament.image %}
                                    <img src="{{ asset('uploads/tournois/' ~ tournament.image) }}" 
                                         class="card-img-top" 
                                         alt="{{ tournament.nom }}" 
                                         style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-dark d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-trophy fa-3x text-white-50"></i>
                                    </div>
                                {% endif %}
                                <span class="badge bg-primary position-absolute top-0 end-0 m-3">
                                    {{ tournament.typeTournoi ? tournament.typeTournoi.name : 'Tournament' }}
                                </span>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h4 class="card-title mb-3">{{ tournament.nom }}</h4>
                                <p class="card-text text-muted mb-3 flex-grow-1">
                                    {{ tournament.description|u.truncate(100, '...') }}
                                </p>
                                
                                <div class="tournament_meta mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="far fa-calendar-alt text-primary me-2"></i>
                                        <small>{{ tournament.dateDebut ? tournament.dateDebut|date('M d, Y') : 'TBA' }} - {{ tournament.dateFin ? tournament.dateFin|date('M d, Y') : 'TBA' }}</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-gamepad text-primary me-2"></i>
                                        <small>{{ tournament.matchs|length }} Matches</small>
                                    </div>
                                </div>
                                
                                <a href="{{ path('app_tournoi_show', {'id': tournament.id}) }}" class="btn btn_1 w-100 mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No tournaments available at the moment. Check back soon!
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
