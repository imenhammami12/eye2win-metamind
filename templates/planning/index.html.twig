{% extends 'base.html.twig' %}

{% block title %}Plannings - EyeTwin{% endblock %}

{% block body %}
    <!-- breadcrumb -->
    <section class="breadcrumb breadcrumb_bg" style="position: relative; overflow: hidden; background: #0f172a;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2 style="font-weight: 800; text-transform: uppercase; letter-spacing: 1px; color: #fff;">Our Sessions</h2>
                            <p style="color: #94a3b8;"><a href="{{ path('app_home') }}" style="color: #cbd5e1;">Home</a> <span style="color: #64748b;">-</span> Planning</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb end -->

    <!-- planning list -->
    <section class="blog_part section_padding" style="background-color: #0b1120;">
        <div class="container">
            <!-- Sort Controls -->
            <div class="mb-4">
                <div class="row align-items-center">
                    <div class="col-12 d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <h4 style="color: #f8fafc; margin-bottom: 0;">
                            <i class="bi bi-calendar-event me-2"></i>Available Sessions
                        </h4>
                        {% if app.user %}
                            <div class="d-flex gap-4">
                                <a href="javascript:void(0)" id="open-coaching-ai" class="btn-coaching-premium" style="margin-right: 20px;" title="Get AI-powered coaching advice">
                                    <i class="fas fa-brain me-2"></i>
                                    <span>AI Coaching Advisor</span>
                                </a>
                                <a href="{{ path('app_my_sessions') }}" class="btn-history-premium" title="View my joined sessions">
                                    <i class="fas fa-history me-2"></i>
                                    <span>My History</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                {% for planning in plannings %}
                    <div class="col-lg-4 col-md-6 mb-5">
                        <div class="planning-card">
                            <div class="planning-img-wrapper">
                                {% if planning.image %}
                                    <img src="{{ asset('uploads/planning/' ~ planning.image) }}" alt="planning image">
                                {% else %}
                                    <img src="https://via.placeholder.com/400x300?text=EyeTwin+Session" alt="placeholder">
                                {% endif %}
                                <div class="category-badge">
                                    {{ planning.type.value }}
                                </div>
                                <div class="date-badge">
                                    <span class="day">{{ planning.date|date('d') }}</span>
                                    <span class="month">{{ planning.date|date('M') }}</span>
                                </div>
                            </div>
                            
                            <div class="planning-content">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="level-tag"><i class="fas fa-signal me-1"></i> {{ planning.level.value }}</span>
                                    {% if planning.needPartner %}
                                        <span class="partner-tag"><i class="fas fa-users me-1"></i> Partner Needed</span>
                                    {% endif %}
                                </div>

                                <h3 class="planning-title">{{ planning.description|length > 60 ? planning.description|slice(0, 60) ~ '...' : planning.description }}</h3>
                                
                                <div class="planning-details">
                                    <div class="detail-item">
                                        <i class="far fa-clock"></i>
                                        <span>{{ planning.time|date('H:i') }}</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>{{ planning.localisation }}</span>
                                    </div>
                                </div>

                                <hr class="divider">

                                <!-- Review & Rating Form -->
                                <div class="rating-container" data-planning-id="{{ planning.id }}">
                                    <div class="rating-label">Rate this session:</div>
                                    <div class="stars mb-3">
                                        <i class="star far fa-star" data-rating="1"></i>
                                        <i class="star far fa-star" data-rating="2"></i>
                                        <i class="star far fa-star" data-rating="3"></i>
                                        <i class="star far fa-star" data-rating="4"></i>
                                        <i class="star far fa-star" data-rating="5"></i>
                                    </div>
                                    
                                    <form action="{{ path('app_planning_review', {id: planning.id}) }}" method="POST" class="review-form d-none" id="form-review-{{ planning.id }}">
                                        <input type="hidden" name="rating" id="rating-input-{{ planning.id }}" value="0">
                                        <div class="mb-3">
                                            <textarea name="content" class="form-control" rows="2" placeholder="Tell us what you thought..." style="background: rgba(0,0,0,0.2); border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 10px;"></textarea>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-sm btn-primary flex-grow-1" style="background: var(--primary-accent); border: none; border-radius: 8px;">
                                                Send Feedback
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary btn-cancel-review" style="border-radius: 8px; color: #94a3b8; border-color: rgba(255,255,255,0.1);">
                                                Cancel
                                            </button>
                                        </div>
                                    </form>
                                    <div class="rating-feedback"></div>
                                </div>

                                <hr class="divider">

                                <div class="text-center">
                                    {% if app.user and planning.id in userSessionPlanningIds %}
                                        <button class="btn-join" disabled style="opacity: 0.6; cursor: not-allowed;">
                                            <i class="bi bi-check-circle me-2"></i>Already Joined
                                        </button>
                                    {% else %}
                                        <a href="{{ path('app_planning_join', {id: planning.id}) }}" class="btn-join">Join Session</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-lg-8">
                        <div class="empty-state-card text-center p-5">
                            <div class="icon-box mb-4">
                                <i class="fas fa-calendar-times"></i>
                            </div>
                            <h3 class="text-white">No planning available</h3>
                            <p class="text-muted">Come back later to discover our upcoming game sessions.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <style>
        /* Dark Theme Variables */
        :root {
            --dark-bg: #0b1120;
            --card-bg: #1e293b;
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --primary-accent: #6366f1; /* Indigo */
            --card-border: rgba(255,255,255,0.05);
        }

        /* Card Design */
        .planning-card {
            background: var(--card-bg);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            transition: all 0.4s ease;
            height: 100%;
            position: relative;
            border: 1px solid var(--card-border);
        }

        .planning-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
            border-color: rgba(99, 102, 241, 0.3);
        }

        /* Image Area */
        .planning-img-wrapper {
            position: relative;
            height: 240px;
            overflow: hidden;
        }

        .planning-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
            filter: brightness(0.9);
        }

        .planning-card:hover .planning-img-wrapper img {
            transform: scale(1.05);
            filter: brightness(1);
        }

        /* Badges */
        .category-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(15, 23, 42, 0.9); /* Dark bg */
            padding: 8px 16px;
            border-radius: 30px;
            font-size: 0.85rem;
            font-weight: 700;
            color: #fff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(4px);
        }

        .date-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: var(--primary-accent);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
        }

        .date-badge .day {
            font-size: 1.4rem;
            font-weight: 800;
            line-height: 1;
        }

        .date-badge .month {
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 600;
        }

        /* Content Area */
        .planning-content {
            padding: 25px;
        }

        .level-tag {
            font-size: 0.85rem;
            color: #ccc;
            background: rgba(255,255,255,0.05);
            padding: 5px 12px;
            border-radius: 8px;
            font-weight: 600;
            border: 1px solid rgba(255,255,255,0.05);
        }

        .partner-tag {
            font-size: 0.75rem;
            color: #34d399; /* Emerald 400 */
            background: rgba(52, 211, 153, 0.1);
            padding: 5px 12px;
            border-radius: 8px;
            font-weight: 700;
            border: 1px solid rgba(52, 211, 153, 0.2);
        }

        .planning-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 20px;
            line-height: 1.4;
            color: var(--text-main);
            min-height: 56px;
        }

        .planning-details {
            display: flex;
            gap: 20px;
            color: var(--text-muted);
            font-size: 0.95rem;
            margin-bottom: 20px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .detail-item i {
            color: var(--primary-accent);
        }

        .divider {
            margin: 0 0 20px 0;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        /* Button */
        .btn-join {
            background: linear-gradient(45deg, #6366f1, #4f46e5);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
            text-decoration: none;
            display: block;
            text-align: center;
        }

        .btn-join:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.5);
            color: white;
            filter: brightness(1.1);
        }

        /* Star Rating Styles */
        .rating-container {
            text-align: center;
            padding: 15px 0;
        }

        .rating-label {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-bottom: 10px;
            font-weight: 500;
        }

        .stars {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-bottom: 8px;
        }

        .star {
            font-size: 1.5rem;
            color: #fbbf24; /* Amber 400 */
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .star:hover {
            transform: scale(1.2);
            filter: drop-shadow(0 0 8px rgba(251, 191, 36, 0.6));
        }

        .star.filled {
            font-weight: 900; /* fas (solid) */
        }

        .star.far {
            font-weight: 400; /* far (regular/outline) */
        }

        .rating-feedback {
            font-size: 0.75rem;
            color: var(--primary-accent);
            min-height: 18px;
            font-weight: 600;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .rating-feedback.show {
            opacity: 1;
        }

        /* Empty State */
        .empty-state-card {
            background: var(--card-bg);
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            border: 1px solid var(--card-border);
        }
        
        .icon-box {
            display: inline-flex;
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            color: var(--text-muted);
            font-size: 2rem;
        }

        /* Chatbot Styles */
        .chatbot-button {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
            transition: all 0.3s ease;
            z-index: 1000;
            border: none;
        }

        .chatbot-button:hover {
            transform: scale(1.1);
            box-shadow: 0 12px 35px rgba(99, 102, 241, 0.6);
        }

        .chatbot-button i {
            color: white;
            font-size: 1.5rem;
        }

        /* Premium History Button Integrated */
        .btn-history-premium {
            background: rgba(99, 102, 241, 0.1);
            color: #818cf8;
            border: 1px solid rgba(99, 102, 241, 0.3);
            padding: 10px 25px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            text-decoration: none;
            backdrop-filter: blur(10px);
        }

        .btn-history-premium:hover {
            background: rgba(99, 102, 241, 0.2);
            color: #ffffff;
            border-color: #6366f1;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
        }

        .btn-history-premium i {
            font-size: 1.1rem;
            transition: transform 0.4s ease;
        }

        .btn-history-premium:hover i {
            transform: rotate(-30deg);
        }

        /* Coaching AI Button - Harmonized to Indigo */
        .btn-coaching-premium {
            background: rgba(99, 102, 241, 0.1);
            color: #818cf8;
            border: 1px solid rgba(99, 102, 241, 0.3);
            padding: 10px 25px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            text-decoration: none;
            backdrop-filter: blur(10px);
        }

        .btn-coaching-premium:hover {
            background: rgba(99, 102, 241, 0.2);
            color: #ffffff;
            border-color: #6366f1;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
        }

        /* Coaching Modal Styling */
        .coaching-modal {
            display: none;
            position: fixed;
            z-index: 10000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.7);
            backdrop-filter: blur(5px);
        }

        .coaching-content {
            background: #111827;
            border: 1px solid rgba(139, 92, 246, 0.3);
            margin: 10% auto;
            padding: 30px;
            width: 80%;
            max-width: 700px;
            border-radius: 20px;
            color: #f8fafc;
            box-shadow: 0 25px 50px -12px rgba(139, 92, 246, 0.5);
            position: relative;
        }

        .coaching-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            padding-bottom: 15px;
        }

        .coaching-close {
            color: #94a3b8;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.3s;
        }

        .coaching-close:hover {
            color: #ef4444;
        }

        #coaching-result {
            line-height: 1.6;
            max-height: 400px;
            overflow-y: auto;
            padding-right: 10px;
        }

        #coaching-result h3, #coaching-result h4 {
            color: #a78bfa;
            margin-top: 15px;
        }

        .loading-spinner {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px;
        }

        .chatbot-window {
            position: fixed;
            bottom: 100px;
            right: 30px;
            width: 380px;
            height: 550px;
            background: #1e293b;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.5);
            display: none;
            flex-direction: column;
            z-index: 999;
            border: 1px solid rgba(99, 102, 241, 0.3);
            overflow: hidden;
        }

        .chatbot-window.active {
            display: flex;
            animation: slideUp 0.3s ease;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chatbot-header {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 20px 20px 0 0;
        }

        .chatbot-header h3 {
            margin: 0;
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
        }

        .chatbot-close {
            background: rgba(255,255,255,0.2);
            border: none;
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .chatbot-close:hover {
            background: rgba(255,255,255,0.3);
        }

        .chatbot-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .chatbot-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chatbot-messages::-webkit-scrollbar-track {
            background: rgba(255,255,255,0.05);
        }

        .chatbot-messages::-webkit-scrollbar-thumb {
            background: rgba(99, 102, 241, 0.5);
            border-radius: 3px;
        }

        .chat-message {
            display: flex;
            gap: 10px;
            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chat-message.user {
            flex-direction: row-reverse;
        }

        .message-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            font-size: 1rem;
        }

        .message-avatar.bot {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            color: white;
        }

        .message-avatar.user {
            background: rgba(255,255,255,0.1);
            color: #94a3b8;
        }

        .message-content {
            max-width: 70%;
            padding: 12px 16px;
            border-radius: 15px;
            font-size: 0.9rem;
            line-height: 1.5;
            white-space: pre-wrap;
        }

        .chat-message.bot .message-content {
            background: rgba(99, 102, 241, 0.15);
            color: #f8fafc;
            border: 1px solid rgba(99, 102, 241, 0.2);
        }

        .chat-message.user .message-content {
            background: rgba(255,255,255,0.1);
            color: #f8fafc;
        }

        .typing-indicator {
            display: none;
            gap: 4px;
            padding: 12px 16px;
        }

        .typing-indicator.active {
            display: flex;
        }

        .typing-dot {
            width: 8px;
            height: 8px;
            background: #6366f1;
            border-radius: 50%;
            animation: typing 1.4s infinite;
        }

        .typing-dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-dot:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes typing {
            0%, 60%, 100% {
                transform: translateY(0);
                opacity: 0.7;
            }
            30% {
                transform: translateY(-10px);
                opacity: 1;
            }
        }

        .chatbot-quick-questions {
            padding: 10px 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .quick-question-btn {
            background: rgba(99, 102, 241, 0.15);
            border: 1px solid rgba(99, 102, 241, 0.3);
            color: #cbd5e1;
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .quick-question-btn:hover {
            background: rgba(99, 102, 241, 0.25);
            border-color: rgba(99, 102, 241, 0.5);
        }

        .chatbot-input-area {
            padding: 15px 20px;
            border-top: 1px solid rgba(255,255,255,0.1);
            display: flex;
            gap: 10px;
        }

        .chatbot-input {
            flex: 1;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 25px;
            padding: 12px 18px;
            color: #f8fafc;
            font-size: 0.9rem;
            outline: none;
            transition: all 0.2s;
        }

        .chatbot-input:focus {
            background: rgba(255,255,255,0.08);
            border-color: rgba(99, 102, 241, 0.5);
        }

        .chatbot-input::placeholder {
            color: #64748b;
        }

        .chatbot-send {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .chatbot-send:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
        }

        .chatbot-send:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        @media (max-width: 768px) {
            .chatbot-window {
                width: calc(100% - 40px);
                right: 20px;
                left: 20px;
                height: 500px;
            }

            .chatbot-button {
                bottom: 20px;
                right: 20px;
            }
        }
    </style>

    {% if app.user %}
    {% endif %}

    <!-- Chatbot UI -->
    <button class="chatbot-button" id="chatbotButton">
        <i class="fas fa-comments"></i>
    </button>

    <div class="chatbot-window" id="chatbotWindow">
        <div class="chatbot-header">
            <h3><i class="fas fa-robot me-2"></i>Assistant E-Sport</h3>
            <button class="chatbot-close" id="chatbotClose">
                <i class="fas fa-times"></i>
            </button>
        </div>

