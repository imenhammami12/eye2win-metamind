    {# Coaching Modal Structure #}
    <div id="coachingModal" class="coaching-modal">
        <div class="coaching-content">
            <div class="coaching-header">
                <h2 style="margin: 0; font-size: 1.5rem; color: #818cf8;">
                    <i class="fas fa-brain me-2"></i>EyeTwin Coaching AI
                </h2>
                <span class="coaching-close">&times;</span>
            </div>
            <div id="coaching-result">
                <!-- Recommendations will be loaded here -->
            </div>
            <div class="mt-4 text-center">
                <button class="btn btn-sm btn-outline-secondary coaching-close">Close</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Chatbot functionality
            const chatbotButton = document.getElementById('chatbotButton');
            const chatbotWindow = document.getElementById('chatbotWindow');
            const chatbotClose = document.getElementById('chatbotClose');
            const chatbotMessages = document.getElementById('chatbotMessages');
            const chatbotInput = document.getElementById('chatbotInput');
            const chatbotSend = document.getElementById('chatbotSend');
            const quickQuestionBtns = document.querySelectorAll('.quick-question-btn');

            if (chatbotButton) {
                // Toggle chatbot window
                chatbotButton.addEventListener('click', () => {
                    chatbotWindow.classList.add('active');
                    chatbotInput.focus();
                });
            }

            if (chatbotClose) {
                chatbotClose.addEventListener('click', () => {
                    chatbotWindow.classList.remove('active');
                });
            }

            // Add message to chat
            function addMessage(text, isUser = false) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `chat-message ${isUser ? 'user' : 'bot'}`;
                
                const avatar = document.createElement('div');
                avatar.className = `message-avatar ${isUser ? 'user' : 'bot'}`;
                avatar.innerHTML = isUser ? '<i class="fas fa-user"></i>' : '<i class="fas fa-robot"></i>';
                
                const content = document.createElement('div');
                content.className = 'message-content';
                content.textContent = text;
                
                messageDiv.appendChild(avatar);
                messageDiv.appendChild(content);
                chatbotMessages.appendChild(messageDiv);
                
                // Scroll to bottom
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            // Show typing indicator
            function showTypingIndicator() {
                const typingDiv = document.createElement('div');
                typingDiv.className = 'chat-message bot';
                typingDiv.id = 'typingIndicator';
                
                const avatar = document.createElement('div');
                avatar.className = 'message-avatar bot';
                avatar.innerHTML = '<i class="fas fa-robot"></i>';
                
                const indicator = document.createElement('div');
                indicator.className = 'typing-indicator active';
                indicator.innerHTML = '<div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>';
                
                typingDiv.appendChild(avatar);
                typingDiv.appendChild(indicator);
                chatbotMessages.appendChild(typingDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            function hideTypingIndicator() {
                const typingIndicator = document.getElementById('typingIndicator');
                if (typingIndicator) {
                    typingIndicator.remove();
                }
            }

            // Send message to chatbot
            async function sendMessage(question) {
                if (!question.trim()) return;
                
                // Add user message
                addMessage(question, true);
                chatbotInput.value = '';
                chatbotSend.disabled = true;
                
                // Show typing indicator
                showTypingIndicator();
                
                try {
                    const response = await fetch('/api/chatbot/ask', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ question })
                    });
                    
                    const data = await response.json();
                    
                    // Hide typing indicator
                    hideTypingIndicator();
                    
                    if (data.success) {
                        addMessage(data.response, false);
                    } else {
                        addMessage('D√©sol√©, une erreur est survenue. Veuillez r√©essayer.', false);
                    }
                } catch (error) {
                    hideTypingIndicator();
                    addMessage('Erreur de connexion. Veuillez v√©rifier votre connexion internet.', false);
                } finally {
                    chatbotSend.disabled = false;
                }
            }

            if (chatbotSend) {
                // Send button click
                chatbotSend.addEventListener('click', () => {
                    sendMessage(chatbotInput.value);
                });
            }

            if (chatbotInput) {
                // Enter key to send
                chatbotInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        sendMessage(chatbotInput.value);
                    }
                });
            }

            // Quick question buttons
            quickQuestionBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const question = btn.getAttribute('data-question');
                    sendMessage(question);
                });
            });

            // ========== STAR RATING FUNCTIONALITY ==========
            
            function updateStars(container, rating) {
                const stars = container.querySelectorAll('.star');
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.remove('far');
                        star.classList.add('fas', 'filled');
                    } else {
                        star.classList.remove('fas', 'filled');
                        star.classList.add('far');
                    }
                });
            }

            function showFeedback(container, message) {
                const feedback = container.querySelector('.rating-feedback');
                if (feedback) {
                    feedback.textContent = message;
                    feedback.classList.add('show');
                    setTimeout(() => {
                        feedback.classList.remove('show');
                    }, 2000);
                }
            }

            function saveRating(planningId, rating) {
                localStorage.setItem(`planning_rating_${planningId}`, rating);
            }

            function loadRating(planningId) {
                return localStorage.getItem(`planning_rating_${planningId}`);
            }

            document.querySelectorAll('.rating-container').forEach(container => {
                const planningId = container.getAttribute('data-planning-id');
                const stars = container.querySelectorAll('.star');
                
                const savedRating = loadRating(planningId);
                if (savedRating) {
                    updateStars(container, parseInt(savedRating));
                }
                
                stars.forEach((star, index) => {
                    star.addEventListener('mouseenter', () => {
                        updateStars(container, index + 1);
                    });
                });
                
                const starsContainer = container.querySelector('.stars');
                if (starsContainer) {
                    starsContainer.addEventListener('mouseleave', () => {
                        const currentRating = loadRating(planningId) || 0;
                        updateStars(container, parseInt(currentRating));
                    });
                }
                
                stars.forEach((star, index) => {
                    star.addEventListener('click', () => {
                        const rating = index + 1;
                        saveRating(planningId, rating);
                        updateStars(container, rating);

                        // Show the review form
                        const reviewForm = document.getElementById(`form-review-${planningId}`);
                        const ratingInput = document.getElementById(`rating-input-${planningId}`);
                        if (reviewForm && ratingInput) {
                            reviewForm.classList.remove('d-none');
                            reviewForm.style.animation = 'fadeIn 0.5s ease';
                            ratingInput.value = rating;
                        }

                        showFeedback(container, `‚úì √âvaluation : ${rating} √©toile${rating > 1 ? 's' : ''}`);
                    });
                });

                // Cancel button logic
                const cancelBtn = container.querySelector('.btn-cancel-review');
                if (cancelBtn) {
                    cancelBtn.addEventListener('click', () => {
                        const reviewForm = document.getElementById(`form-review-${planningId}`);
                        if (reviewForm) {
                            reviewForm.classList.add('d-none');
                            const textarea = reviewForm.querySelector('textarea');
                            if (textarea) textarea.value = '';
                        }
                    });
                }

                // AJAX submission logic
                const reviewForm = document.getElementById(`form-review-${planningId}`);
                if (reviewForm) {
                    reviewForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        const formData = new FormData(this);
                        const submitBtn = this.querySelector('button[type="submit"]');
                        const originalBtnText = submitBtn.innerHTML;
                        
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...';

                        fetch(this.action, {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                reviewForm.classList.add('v-none'); // Hide form
                                setTimeout(() => reviewForm.classList.add('d-none'), 300);
                                showFeedback(container, `‚úì ${data.message}`);
                                // Clear textarea
                                const textarea = reviewForm.querySelector('textarea');
                                if (textarea) textarea.value = '';
                            } else {
                                showFeedback(container, `‚úó Erreur: ${data.message || 'Error'}`);
                                submitBtn.disabled = false;
                                submitBtn.innerHTML = originalBtnText;
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            showFeedback(container, '‚úó Connection error. Please try again.');
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalBtnText;
                        });
                    });
                }
            });

            /* --- Coaching AI Logic --- */
            const coachingModal = document.getElementById('coachingModal');
            const openCoachingBtn = document.getElementById('open-coaching-ai');
            const closeCoachingBtns = document.querySelectorAll('.coaching-close');
            const coachingResult = document.getElementById('coaching-result');

            if (openCoachingBtn && coachingModal) {
                openCoachingBtn.addEventListener('click', function() {
                    coachingModal.style.display = "block";
                    coachingResult.innerHTML = `
                        <div class="loading-spinner">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Analyse en cours...</span>
                            </div>
                            <span class="ms-3">Your AI Coach is analyzing your history...</span>
                        </div>
                    `;

                    fetch('/api/recommander-sessions')
                        .then(response => response.json())
                        .then(data => {
                            if (data.content) {
                                let formattedText = data.content.replace(/\n/g, '<br>');
                                
                                // Basic Markdown bold/list conversion if marked is not present
                                formattedText = formattedText.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                                formattedText = formattedText.replace(/^\*\s(.*)/gm, '<li>$1</li>');
                                if (formattedText.includes('<li>')) {
                                    formattedText = formattedText.replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>');
                                }

                                coachingResult.innerHTML = `
                                    <div class="coach-intro mb-3">
                                        <i class="fas fa-quote-left text-primary me-2"></i>
                                        <span class="fw-bold">Tips from your EyeTwin Coach:</span>
                                    </div>
                                    <div class="recommendations-text p-3" style="background: rgba(255,255,255,0.03); border-radius: 10px; border: 1px solid rgba(139, 92, 246, 0.2);">
                                        ${formattedText}
                                    </div>
                                `;
                            } else {
                                throw new Error("Empty response from AI");
                            }
                        })
                        .catch(error => {
                            coachingResult.innerHTML = "<p class='text-danger'>Sorry, an error occurred while generating your recommendations.</p>";
                        });
                });
            }

            closeCoachingBtns.forEach(btn => {
                btn.onclick = function() {
                    coachingModal.style.display = "none";
                }
            });

            window.onclick = function(event) {
                if (event.target == coachingModal) {
                    coachingModal.style.display = "none";
                }
            }
        });
    </script>
