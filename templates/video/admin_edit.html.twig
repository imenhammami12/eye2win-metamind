{% extends 'base.html.twig' %}

{% block title %}Éditer vidéo{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Éditer vidéo</h2>
                        <p><a href="{{ path('app_dashboard') }}">Dashboard</a> <span>-</span> {{ video.title }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.title) }}
                            {{ form_row(form.gameType) }}
                            {{ form_row(form.status) }}
                            <button class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('app_dashboard') }}" class="btn btn-light">Annuler</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
