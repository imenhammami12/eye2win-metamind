{% extends 'base.html.twig' %}

{% block title %}Create a Team{% endblock %}

{% block body %}
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Create a Team</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-4"><i class="fas fa-users"></i> New Team</h4>
                        
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                            <small class="form-text text-muted">The name must be unique and representative</small>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.maxMembers) }}
                            {{ form_widget(form.maxMembers) }}
                            {{ form_errors(form.maxMembers) }}
                            <small class="form-text text-muted">Maximum number of members (between 1 and 50)</small>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.logoFile) }}
                            {{ form_widget(form.logoFile) }}
                            {{ form_errors(form.logoFile) }}
                            <small class="form-text text-muted">Accepted formats: JPG, PNG, GIF, WEBP (Max: 2MB)</small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Create Team
                            </button>
                            <a href="{{ path('app_teams_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
