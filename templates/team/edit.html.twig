{% extends 'base.html.twig' %}

{% block title %}Edit {{ team.name }}{% endblock %}

{% block body %}
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Edit {{ team.name }}</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-4"><i class="fas fa-edit"></i> Edit Team</h4>
                        
                        {% if team.logo %}
                        <div class="mb-3 text-center">
                            <img src="{{ asset('uploads/teams/' ~ team.logo) }}" alt="{{ team.name }}" 
                                 class="img-thumbnail" style="max-height: 200px;">
                            <p class="text-muted small mt-2">Current logo</p>
                        </div>
                        {% endif %}
                        
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.maxMembers) }}
                            {{ form_widget(form.maxMembers) }}
                            {{ form_errors(form.maxMembers) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.logoFile) }}
                            {{ form_widget(form.logoFile) }}
                            {{ form_errors(form.logoFile) }}
                            <small class="form-text text-muted">Leave blank to keep current logo</small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a href="{{ path('app_teams_show', {id: team.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
