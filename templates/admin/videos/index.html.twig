{% extends 'admin_layout.html.twig' %}

{% block title %}Videos - Administration{% endblock %}
{% block page_title %}Videos{% endblock %}

{% block body %}
{# Filters and Search #}
<div class="table-card mb-4 fade-in">
    <div class="table-header">
        <h5><i class="bi bi-funnel me-2"></i>Filters & Search</h5>
    </div>
    
    <form method="get" action="{{ path('admin_videos_index') }}" class="p-3">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">
                    <i class="bi bi-search me-1"></i>Search
                </label>
                <div class="search-bar">
                    <i class="search-icon bi bi-search"></i>
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Title, game type, uploader..."
                           value="{{ search }}"
                           autocomplete="off">
                </div>
            </div>
            
            <div class="col-md-3">
                <label class="form-label">
                    <i class="bi bi-toggle-on me-1"></i>Status
                </label>
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="UPLOADED" {{ statusFilter == 'UPLOADED' ? 'selected' : '' }}>UPLOADED</option>
                    <option value="PROCESSING" {{ statusFilter == 'PROCESSING' ? 'selected' : '' }}>PROCESSING</option>
                    <option value="READY" {{ statusFilter == 'READY' ? 'selected' : '' }}>READY</option>
                    <option value="FAILED" {{ statusFilter == 'FAILED' ? 'selected' : '' }}>FAILED</option>
                </select>
            </div>
            
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
                {% if search or statusFilter %}
                    <a href="{{ path('admin_videos_index') }}" class="btn btn-outline-secondary" title="Clear filters">
                        <i class="bi bi-x-lg"></i>
                    </a>
                {% endif %}
            </div>
        </div>
    </form>
</div>

{# Results Summary #}
<div class="mb-3 fade-in" style="animation-delay: 0.1s;">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <h6 class="text-muted mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Found <strong>{{ videos|length }}</strong> video{{ videos|length != 1 ? 's' : '' }}
        </h6>
        <a href="{{ path('admin_videos_create') }}" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add Video
        </a>
    </div>
</div>

<div class="row g-4 fade-in">
    <div class="col-12">
        <div class="table-card">
            <div class="table-header">
                <h5><i class="bi bi-camera-video me-2"></i>Video management</h5>
            </div>
            <div class="p-4">
                {% if videos is empty %}
                    <div class="empty-state text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 64px; opacity: 0.2;"></i>
                        <h4 class="mt-3 mb-2">No Videos Found</h4>
                        <p class="text-muted">Try adjusting your search criteria or add a new video</p>
                        <a href="{{ path('admin_videos_create') }}" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i>Add First Video
                        </a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="custom-table table">
                            <thead>
                                <tr>
                                    <th style="width: 260px;">Title</th>
                                    <th style="width: 180px;">Uploaded by</th>
                                    <th style="width: 120px;">Status</th>
                                    <th style="width: 150px;">Created at</th>
                                    <th style="width: 180px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for video in videos %}
                                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                                        <td>
                                            <strong>{{ video.title }}</strong>
                                            {% if video.gameType %}
                                                <div class="text-muted small">{{ video.gameType }}</div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ video.uploadedBy ? video.uploadedBy.username : '—' }}
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ video.status }}</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3 me-1"></i>
                                                {{ video.createdAt ? video.createdAt|date('M d, Y H:i') : '—' }}
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Video actions">
                                                <a href="{{ path('admin_videos_show', { id: video.id }) }}" class="btn btn-sm btn-info" title="View" data-bs-toggle="tooltip">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('admin_video_edit', { id: video.id }) }}" class="btn btn-sm btn-warning" title="Edit" data-bs-toggle="tooltip">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="confirmAction('{{ path('admin_video_delete', { id: video.id }) }}', '{{ csrf_token('delete_video_' ~ video.id) }}', 'Delete this video?')"
                                                        title="Delete"
                                                        data-bs-toggle="tooltip">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Quick Stats #}
{% if videos|length > 0 %}
<div class="row g-3 mt-4 fade-in" style="animation-delay: 0.2s;">
    <div class="col-xl-3 col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                <i class="bi bi-camera-video text-white"></i>
            </div>
            <div class="stat-card-title">Total Videos</div>
            <div class="stat-card-value">{{ videos|length }}</div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
                <i class="bi bi-check-circle text-white"></i>
            </div>
            <div class="stat-card-title">Ready</div>
            <div class="stat-card-value">{{ videos|filter(v => v.status == 'READY')|length }}</div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #f6d365, #fda085);">
                <i class="bi bi-hourglass-split text-white"></i>
            </div>
            <div class="stat-card-title">Processing</div>
            <div class="stat-card-value">{{ videos|filter(v => v.status == 'PROCESSING')|length }}</div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #ff6b6b, #f06595);">
                <i class="bi bi-x-circle text-white"></i>
            </div>
            <div class="stat-card-title">Failed</div>
            <div class="stat-card-value">{{ videos|filter(v => v.status == 'FAILED')|length }}</div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
