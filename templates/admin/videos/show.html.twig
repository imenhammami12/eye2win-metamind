{% extends 'admin_layout.html.twig' %}

{% block title %}{{ video.title }} - Video Details{% endblock %}
{% block page_title %}Video Details{% endblock %}

{% block body %}
<div class="mb-3 fade-in">
    <a href="{{ path('admin_videos_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="table-card fade-in" style="animation-delay: 0.1s;">
            <div class="table-header">
                <h5><i class="bi bi-play-circle me-2"></i>Video Preview</h5>
            </div>
            <div class="p-4">
                <p class="text-muted mb-2">{{ video.gameType }}</p>
                <video class="w-100" controls preload="metadata">
                    <source src="{{ video.videoUrl }}" type="video/mp4">
                </video>
                <div class="mt-3">
                    <span class="badge bg-info">{{ video.status }}</span>
                    {% if video.duration %}
                        <span class="badge bg-light text-dark">Duration: {{ video.duration|number_format(1) }}s</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="table-card fade-in" style="animation-delay: 0.15s;">
            <div class="table-header">
                <h5><i class="bi bi-info-circle me-2"></i>Information</h5>
            </div>
            <div class="p-4">
                <p class="mb-1"><strong>Title:</strong> {{ video.title }}</p>
                <p class="mb-1"><strong>Uploaded by:</strong> {{ video.uploadedBy ? video.uploadedBy.username : '—' }}</p>
                <p class="mb-1"><strong>Created at:</strong> {{ video.createdAt ? video.createdAt|date('M d, Y H:i') : '—' }}</p>
                {% if video.publicId %}
                    <p class="mb-0"><strong>Public ID:</strong> {{ video.publicId }}</p>
                {% endif %}
            </div>
        </div>

        <div class="table-card mt-4 fade-in" style="animation-delay: 0.2s;">
            <div class="table-header">
                <h5><i class="bi bi-gear me-2"></i>Actions</h5>
            </div>
            <div class="p-4 d-grid gap-2">
                <a href="{{ path('admin_video_edit', { id: video.id }) }}" class="btn btn-warning">
                    <i class="bi bi-pencil me-2"></i>Edit Video
                </a>
                <button type="button"
                        class="btn btn-danger"
                        onclick="confirmAction('{{ path('admin_video_delete', { id: video.id }) }}', '{{ csrf_token('delete_video_' ~ video.id) }}', 'Delete this video?')">
                    <i class="bi bi-trash me-2"></i>Delete Video
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="table-card fade-in" style="animation-delay: 0.25s;">
            <div class="table-header">
                <h5><i class="bi bi-bar-chart-line me-2"></i>Player Stats</h5>
            </div>
            <div class="p-4">
                {% if playerStats is empty %}
                    <div class="empty-state text-center py-4">
                        <i class="bi bi-inbox" style="font-size: 64px; opacity: 0.2;"></i>
                        <h4 class="mt-3 mb-2">No stats available</h4>
                        <p class="text-muted">Stats will appear here once generated.</p>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="custom-table table">
                            <thead>
                                <tr>
                                    <th>Score</th>
                                    <th>Accuracy</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stat in playerStats %}
                                    <tr>
                                        <td>{{ stat.score }}</td>
                                        <td>{{ stat.accuracy }}%</td>
                                        <td>{{ stat.actionsCount }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
