{% extends 'admin_layout.html.twig' %}

{% block title %}Coach Application #{{ application.id }}{% endblock %}
{% block page_title %}Application Details{% endblock %}

{% block body %}
<div class="mb-3 fade-in">
    <a href="{{ path('admin_coach_applications_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row g-4">
    {# Applicant Info #}
   
    <div class="col-lg-4 fade-in" style="animation-delay: 0.1s;">
    <div class="table-card h-100">
        <div class="text-center p-4">

            {# Avatar #}
            <div class="mb-3">
                {% if application.user.profilePicture %}
                    <img src="{{ asset('uploads/profiles/' ~ application.user.profilePicture) }}"
                         alt="{{ application.user.username }}"
                         style="width:100px;height:100px;border-radius:50%;object-fit:cover;
                                border:4px solid rgba(102,126,234,.2);
                                box-shadow:0 4px 12px rgba(0,0,0,.1);">
                {% else %}
                    <div style="width:100px;height:100px;margin:0 auto;border-radius:50%;
                                background:linear-gradient(135deg,#667eea,#764ba2);
                                display:flex;align-items:center;justify-content:center;
                                color:white;font-size:36px;font-weight:bold;
                                box-shadow:0 4px 12px rgba(0,0,0,.1);">
                        {{ application.user.username|slice(0,2)|upper }}
                    </div>
                {% endif %}
            </div>

            {# Name #}
            <h5 class="mb-1">
                {{ application.user.fullName ?? application.user.username }}
            </h5>
            <p class="text-muted mb-2">
                <i class="bi bi-at"></i>{{ application.user.username }}
            </p>

            {# Badges #}
            <div class="mb-3">
                <span class="badge bg-warning">
                    <i class="bi bi-award-fill me-1"></i>Coach Applicant
                </span>

                <span class="badge bg-{{ application.status.badgeClass }}">
                    <i class="bi bi-{{ 
                        application.status.value == 'APPROVED' ? 'check-circle' :
                        application.status.value == 'REJECTED' ? 'x-circle' :
                        application.status.value == 'UNDER_REVIEW' ? 'eye' : 'clock'
                    }} me-1"></i>
                    {{ application.status.label }}
                </span>
            </div>

            {# Bio #}
            <div class="mb-3 p-3"
                 style="background:rgba(255,255,255,.03);border-radius:8px;min-height:80px;">
                {% if application.user.bio %}
                    <p class="text-muted small mb-0" style="line-height:1.5;">
                        {{ application.user.bio|slice(0,120) }}
                        {% if application.user.bio|length > 120 %}...{% endif %}
                    </p>
                {% else %}
                    <p class="text-muted small mb-0 fst-italic">
                        No bio provided
                    </p>
                {% endif %}
            </div>

            <hr>

            {# Mini Stats #}
            <div class="row text-center mb-3">
                <div class="col-4">
                    <div style="padding:8px;border-radius:8px;background:rgba(102,126,234,.1);">
                        <i class="bi bi-calendar-plus" style="color:#667eea;"></i>
                        <small class="d-block text-muted mt-1">Applied</small>
                        <strong>{{ application.submittedAt|date('m/Y') }}</strong>
                    </div>
                </div>

                <div class="col-4">
                    <div style="padding:8px;border-radius:8px;background:rgba(67,233,123,.1);">
                        <i class="bi bi-person-check" style="color:#43e97b;"></i>
                        <small class="d-block text-muted mt-1">Joined</small>
                        <strong>{{ application.user.createdAt|date('m/Y') }}</strong>
                    </div>
                </div>

                <div class="col-4">
                    <div style="padding:8px;border-radius:8px;background:rgba(74,172,254,.1);">
                        <i class="bi bi-grid-3x3" style="color:#4facfe;"></i>
                        <small class="d-block text-muted mt-1">Teams</small>
                        <strong>{{ application.user.teamMemberships|length }}</strong>
                    </div>
                </div>
            </div>

            {# Actions #}
            <div class="d-grid gap-2">
                <a href="{{ path('admin_users_show', {id: application.user.id}) }}"
                   class="btn btn-sm btn-primary">
                    <i class="bi bi-eye me-2"></i>View Profile
                </a>

                <a href="mailto:{{ application.user.email }}"
                   class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-envelope me-2"></i>Contact
                </a>
            </div>

        </div>
    </div>
</div>

    {# Application Details #}
    <div class="col-lg-8">
        {# Certifications #}
        <div class="table-card mb-4 fade-in" style="animation-delay: 0.2s;">
            <div class="table-header">
                <h5><i class="bi bi-award me-2"></i>Certifications</h5>
            </div>
            <div class="p-3">
                <p style="white-space: pre-wrap; line-height: 1.6;">{{ application.certifications }}</p>
            </div>
        </div>
        
        {# Experience #}
        <div class="table-card mb-4 fade-in" style="animation-delay: 0.25s;">
            <div class="table-header">
                <h5><i class="bi bi-briefcase me-2"></i>Experience</h5>
            </div>
            <div class="p-3">
                <p style="white-space: pre-wrap; line-height: 1.6;">{{ application.experience }}</p>
            </div>
        </div>
        
        {# CV File #}
        {% if application.cvFile %}
            <div class="table-card mb-4 fade-in" style="animation-delay: 0.3s;">
                <div class="table-header">
                    <h5><i class="bi bi-file-earmark-pdf me-2"></i>Resume/CV</h5>
                </div>
                <div class="p-3">
                    <a href="{{ asset('uploads/cv/' ~ application.cvFile) }}" 
                       target="_blank" 
                       class="btn btn-outline-primary">
                        <i class="bi bi-download me-2"></i>Download CV
                    </a>
                    <small class="text-muted ms-3">
                        <i class="bi bi-file-earmark-text me-1"></i>{{ application.cvFile }}
                    </small>
                </div>
            </div>
        {% endif %}
        
        {# Documents #}
        {% if application.documents %}
            <div class="table-card mb-4 fade-in" style="animation-delay: 0.35s;">
                <div class="table-header">
                    <h5><i class="bi bi-folder me-2"></i>Additional Documents</h5>
                </div>
                <div class="p-3">
                    <p style="line-height: 1.6;">{{ application.documents }}</p>
                </div>
            </div>
        {% endif %}
        
        {# Review Comment (if exists) #}
        {% if application.reviewComment %}
            <div class="alert alert-{{ application.status.value == 'APPROVED' ? 'success' : 'danger' }} fade-in" style="animation-delay: 0.4s;">
                <h6 class="alert-heading">
                    <i class="bi bi-chat-left-text me-2"></i>Review Comment
                </h6>
                <p class="mb-0" style="line-height: 1.6;">{{ application.reviewComment }}</p>
            </div>
        {% endif %}
        
        {# Actions #}
        {% if application.status.value != 'APPROVED' and application.status.value != 'REJECTED' %}
            <div class="row g-3 fade-in" style="animation-delay: 0.45s;">
                <div class="col-md-6" id="approve-section">
                    <div class="table-card">
                        <div class="table-header" style="background: linear-gradient(135deg, #43e97b, #38f9d7); color: white;">
                            <h6 class="mb-0"><i class="bi bi-check-circle me-2"></i>Approve Application</h6>
                        </div>
                        <form method="post" action="{{ path('admin_coach_applications_approve', {id: application.id}) }}" class="p-3">
                            <input type="hidden" name="_token" value="{{ csrf_token('approve-' ~ application.id) }}">
                            
                            <div class="mb-3">
                                <label class="form-label">Comment (Optional)</label>
                                <textarea name="comment" 
                                          class="form-control" 
                                          rows="3" 
                                          placeholder="Congratulations on your application..."></textarea>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>This comment will be sent to the applicant
                                </small>
                            </div>
                            
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-2"></i>Approve This Application
                            </button>
                            
                            <small class="text-muted d-block mt-2 text-center">
                                <i class="bi bi-shield-check me-1"></i>User will receive COACH role and a notification
                            </small>
                        </form>
                    </div>
                </div>
                
                <div class="col-md-6" id="reject-section">
                    <div class="table-card">
                        <div class="table-header" style="background: linear-gradient(135deg, #ff6b6b, #ee5a6f); color: white;">
                            <h6 class="mb-0"><i class="bi bi-x-circle me-2"></i>Reject Application</h6>
                        </div>
                        <form method="post" action="{{ path('admin_coach_applications_reject', {id: application.id}) }}" class="p-3">
                            <input type="hidden" name="_token" value="{{ csrf_token('reject-' ~ application.id) }}">
                            
                            <div class="mb-3">
                                <label class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                                <textarea name="comment" 
                                          class="form-control" 
                                          rows="3" 
                                          required
                                          placeholder="Please specify the reason for rejection..."></textarea>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>This comment will be sent to the applicant
                                </small>
                            </div>
                            
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-x-circle me-2"></i>Reject This Application
                            </button>
                            
                            <small class="text-muted d-block mt-2 text-center">
                                <i class="bi bi-envelope me-1"></i>User will receive a notification with your comment
                            </small>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}
        
        
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
// Smooth scroll to sections when using anchor links
document.addEventListener('DOMContentLoaded', function() {
    // Check if URL has hash
    if (window.location.hash) {
        const target = document.querySelector(window.location.hash);
        if (target) {
            setTimeout(() => {
                target.scrollIntoView({ behavior: 'smooth', block: 'center' });
                target.style.animation = 'pulse 1s ease-in-out 2';
            }, 300);
        }
    }
});

// Add pulse animation
const style = document.createElement('style');
style.textContent = `
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.02); box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3); }
    }
`;
document.head.appendChild(style);
</script>
{% endblock %}
