{% extends 'admin_layout.html.twig' %}

{% block title %}Teams Management{% endblock %}
{% block page_title %}Teams Management{% endblock %}

{% block body %}


{# ================= FILTERS ================= #}
<div class="table-card mb-4 fade-in" style="animation-delay: 0.1s;">
    <div class="table-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h5>
        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="true">
            <i class="bi bi-chevron-down"></i>
        </button>
    </div>

    <div class="collapse show" id="filterCollapse">
        <form method="get" class="p-3" id="filterForm">
            <div class="row g-3">
                {# Search Bar #}
                <div class="col-md-6">
                    <label class="form-label">
                        <i class="bi bi-search me-1"></i>Search
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" 
                               name="search" 
                               class="form-control" 
                               placeholder="Team name, description, owner..."
                               value="{{ search }}"
                               id="searchInput">
                        {% if search %}
                            <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('searchInput').value=''; document.getElementById('filterForm').submit();">
                                <i class="bi bi-x"></i>
                            </button>
                        {% endif %}
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Search in team name, description, and owner
                    </small>
                </div>
                
                {# Status Filter #}
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-toggle-on me-1"></i>Status
                    </label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Teams</option>
                        <option value="active" {{ statusFilter == 'active' ? 'selected' : '' }}>Active</option>
                        <option value="inactive" {{ statusFilter == 'inactive' ? 'selected' : '' }}>Inactive</option>
                    </select>
                </div>
                
                {# Sort By #}
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-sort-down me-1"></i>Sort By
                    </label>
                    <div class="input-group">
                        <select name="sort_by" class="form-select" onchange="this.form.submit()">
                            <option value="createdAt" {{ sortBy == 'createdAt' ? 'selected' : '' }}>Created Date</option>
                            <option value="name" {{ sortBy == 'name' ? 'selected' : '' }}>Team Name</option>
                            <option value="maxMembers" {{ sortBy == 'maxMembers' ? 'selected' : '' }}>Max Members</option>
                        </select>
                        <select name="sort_order" class="form-select" style="max-width: 100px;" onchange="this.form.submit()">
                            <option value="DESC" {{ sortOrder == 'DESC' ? 'selected' : '' }}>↓ DESC</option>
                            <option value="ASC" {{ sortOrder == 'ASC' ? 'selected' : '' }}>↑ ASC</option>
                        </select>
                    </div>
                </div>
                
                {# Action Buttons #}
                <div class="col-md-12 d-flex gap-2">
                    {% if statusFilter or search %}
                        <a href="{{ path('admin_teams_index') }}" class="btn btn-outline-secondary flex-fill">
                            <i class="bi bi-x-lg me-1"></i>Clear All Filters
                        </a>
                    {% endif %}
                    
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="bi bi-funnel me-2"></i>Apply Filters
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

{# ================= SUMMARY ================= #}
<div class="mb-3 fade-in" style="animation-delay: 0.15s;">
    <h6 class="text-muted mb-0">
        <i class="bi bi-info-circle me-2"></i>
        Found <strong>{{ teams|length }}</strong> team{{ teams|length != 1 ? 's' : '' }}
        {% if statusFilter or search %}
            <span class="badge bg-primary">Filtered</span>
        {% endif %}
    </h6>
</div>

{# ================= TEAMS TABLE ================= #}
<div class="table-card fade-in" style="animation-delay: 0.2s;">
    <div class="table-header">
        <h5><i class="bi bi-grid-3x3 me-2"></i>Teams List</h5>
    </div>

    {% if teams|length > 0 %}
    <div class="table-responsive">
        <table class="custom-table table">
            <thead>
                <tr>
                    <th style="width:70px;text-align:center;">Logo</th>
                    <th style="width:220px;">Team Name</th>
                    <th style="width:180px;">Owner</th>
                    <th style="width:160px;">Members</th>
                    <th style="width:120px;">Status</th>
                    <th style="width:130px;">Created</th>
                    <th style="width:180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    {% set activeMembers = team.teamMemberships
                        |filter(m => m.status.value == 'ACTIVE')
                        |length %}

                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                        {# Logo #}
                        <td style="text-align:center;">
                            {% if team.logo %}
                                <img src="{{ asset('uploads/teams/' ~ team.logo) }}"
                                     class="user-avatar-table"
                                     alt="{{ team.name }}"
                                     loading="lazy">
                            {% else %}
                                <div class="user-avatar-placeholder mx-auto">
                                    {{ team.name|slice(0,2)|upper }}
                                </div>
                            {% endif %}
                        </td>

                        {# Name #}
                        <td>
                            <a href="{{ path('admin_teams_show', {id: team.id}) }}" class="text-decoration-none" style="color: #43e97b;">
                                <strong>{{ team.name }}</strong>
                            </a>
                            {% if team.description %}
                                <div class="text-muted small" style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    {{ team.description }}
                                </div>
                            {% endif %}
                        </td>

                        {# Owner #}
                        <td>
                            <a href="{{ path('admin_users_show', {id: team.owner.id}) }}" class="text-decoration-none" style="color: #4facfe;">
                                <i class="bi bi-person-circle me-1"></i>
                                {{ team.owner.username }}
                            </a>
                        </td>

                        {# Members #}
                        <td>
                            <div class="progress" style="height:24px; background: rgba(255, 255, 255, 0.1);">
                                <div class="progress-bar" 
                                     style="width: {{ (activeMembers / team.maxMembers * 100)|round }}%; background: linear-gradient(135deg, #667eea, #764ba2);"
                                     data-bs-toggle="tooltip"
                                     title="{{ activeMembers }} active members">
                                    <strong>{{ activeMembers }}/{{ team.maxMembers }}</strong>
                                </div>
                            </div>
                        </td>

                        {# Status #}
                        <td>
                            {% if team.isActive %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Active
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Inactive
                                </span>
                            {% endif %}
                        </td>

                        {# Created #}
                        <td>
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>
                                {{ team.createdAt|date('M d, Y') }}
                                <br>
                                <i class="bi bi-clock me-1"></i>
                                {{ team.createdAt|date('h:i A') }}
                            </small>
                        </td>

                        {# Actions #}
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_teams_show', {id: team.id}) }}"
                                   class="btn btn-sm btn-info"
                                   data-bs-toggle="tooltip"
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <button type="button"
                                        class="btn btn-sm btn-{{ team.isActive ? 'warning' : 'success' }}"
                                        onclick="confirmAction(
                                            '{{ path('admin_teams_toggle_status', {id: team.id}) }}',
                                            '{{ csrf_token('toggle-status-' ~ team.id) }}',
                                            'Change team status?'
                                        )"
                                        data-bs-toggle="tooltip"
                                        title="{{ team.isActive ? 'Deactivate' : 'Activate' }}">
                                    <i class="bi bi-{{ team.isActive ? 'pause-circle' : 'play-circle' }}"></i>
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-danger"
                                        onclick="confirmAction(
                                            '{{ path('admin_teams_delete', {id: team.id}) }}',
                                            '{{ csrf_token('delete-' ~ team.id) }}',
                                            'Delete this team permanently? This action cannot be undone!'
                                        )"
                                        data-bs-toggle="tooltip"
                                        title="Delete Team">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
        <div class="text-center text-muted py-5">
            <div class="empty-state">
                <i class="bi bi-inbox" style="font-size:64px;opacity:.2;"></i>
                <h4 class="mt-3 mb-2">No Teams Found</h4>
                {% if statusFilter or search %}
                    <p class="text-muted">Try adjusting your filters</p>
                    <a href="{{ path('admin_teams_index') }}" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="bi bi-x-lg me-1"></i>Clear Filters
                    </a>
                {% else %}
                    <p class="text-muted">No teams have been created yet</p>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Bootstrap tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl, {
            delay: { show: 300, hide: 100 }
        });
    });
    
    // Row highlight on hover
    document.querySelectorAll('.custom-table tbody tr').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(2px)';
        });
        
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
    
    // Real-time search (optional - debounced)
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
        let timeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                // Auto-submit after 500ms of no typing
                // Uncomment the line below if you want auto-submit
                // document.getElementById('filterForm').submit();
            }, 500);
        });
    }
});

function confirmAction(url, token, message) {
    if (confirm(message)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = url;

        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = '_token';
        input.value = token;

        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}
