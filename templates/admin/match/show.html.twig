{% extends 'admin_layout.html.twig' %}

{% block title %}Match Details{% endblock %}
{% block page_title %}Match Details{% endblock %}

{% block body %}
<div class="mb-3 fade-in">
    <a href="{{ path('admin_tournoi_matches_index', {id: match.tournoi.id}) }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Match List
    </a>
</div>

<div class="row justify-content-center fade-in" style="animation-delay: 0.1s;">
    <div class="col-lg-8">
        <div class="table-card">
            <div class="card-header-gradient" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); padding: 1.5rem; border-radius: 16px 16px 0 0;">
                <h5 class="mb-0 text-white text-center">
                    {{ match.equipe1 }} <span class="mx-2 opacity-75">vs</span> {{ match.equipe2 }}
                </h5>
            </div>
            
            <div class="p-4">
                <div class="text-center mb-4">
                    <div class="display-4 fw-bold text-white mb-2">
                        {{ match.score }}
                    </div>
                    <span class="badge bg-secondary">Final Score</span>
                </div>

                <div class="row g-4 justify-content-center">
                    <div class="col-md-5">
                        <div class="p-3 rounded" style="background: rgba(255,255,255,0.05); text-align: center;">
                            <div class="text-muted small mb-1">TEAM 1</div>
                            <h4 class="mb-0 text-white">{{ match.equipe1 }}</h4>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="p-3 rounded" style="background: rgba(255,255,255,0.05); text-align: center;">
                            <div class="text-muted small mb-1">TEAM 2</div>
                            <h4 class="mb-0 text-white">{{ match.equipe2 }}</h4>
                        </div>
                    </div>
                </div>

                <hr class="border-secondary my-4 opacity-25">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-event fs-4 text-info me-3"></i>
                            <div>
                                <small class="text-white-50 d-block">Date played</small>
                                <span class="text-white lead">{{ match.dateMatch ? match.dateMatch|date('F d, Y') : 'N/A' }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-award fs-4 text-warning me-3"></i>
                            <div>
                                <small class="text-white-50 d-block">Prix / Reward</small>
                                <span class="text-white lead">{{ match.prix ? match.prix.name : 'None' }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-trophy fs-4 text-primary me-3"></i>
                            <div>
                                <small class="text-white-50 d-block">Tournament</small>
                                <a href="{{ path('admin_tournoi_show', {id: match.tournoi.id}) }}" class="text-decoration-none">
                                    <span class="text-white lead hover-underline">{{ match.tournoi.nom }}</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top border-secondary border-opacity-25">
                    <a href="{{ path('admin_matches_edit', {id: match.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Edit
                    </a>
                    <button type="button" 
                            class="btn btn-danger"
                            onclick="confirmAction('{{ path('admin_matches_delete', {id: match.id}) }}', '{{ csrf_token('delete-' ~ match.id) }}', 'Delete this match?')">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
