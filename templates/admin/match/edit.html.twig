{% extends 'admin_layout.html.twig' %}

{% block title %}Edit Match - {{ tournoi.nom }}{% endblock %}
{% block page_title %}Edit Match{% endblock %}

{% block body %}
<div class="mb-3 fade-in">
    <a href="{{ path('admin_tournoi_matches_index', {id: tournoi.id}) }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Matches
    </a>
</div>

<div class="row justify-content-center fade-in" style="animation-delay: 0.1s;">
    <div class="col-lg-8">
        <div class="table-card">
            <div class="card-header-gradient" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 1.5rem; border-radius: 16px 16px 0 0;">
                <h5 class="mb-0 text-white"><i class="bi bi-pencil-square me-2"></i>Edit Match Information</h5>
            </div>
            
            {{ form_start(form, {'attr': {'class': 'p-4', 'id': 'editMatchForm', 'novalidate': 'novalidate'}}) }}
                
                <div class="row g-4">
                    {# Teams #}
                    <div class="col-md-6 form-group-enhanced">
                        <label class="form-label fw-bold">Equipe 1</label>
                        {{ form_widget(form.equipe1, {'attr': {'class': 'form-control'}}) }}
                        <div class="custom-error-message">{{ form_errors(form.equipe1) }}</div>
                    </div>

                    <div class="col-md-6 form-group-enhanced">
                        <label class="form-label fw-bold">Equipe 2</label>
                        {{ form_widget(form.equipe2, {'attr': {'class': 'form-control'}}) }}
                        <div class="custom-error-message">{{ form_errors(form.equipe2) }}</div>
                    </div>

                    {# Score #}
                    <div class="col-md-6 form-group-enhanced">
                        <label class="form-label fw-bold">Score</label>
                        {{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
                        <div class="custom-error-message">{{ form_errors(form.score) }}</div>
                    </div>

                    {# Date #}
                    <div class="col-md-6 form-group-enhanced">
                        <label class="form-label fw-bold">Date du Match</label>
                        {{ form_widget(form.dateMatch, {'attr': {'class': 'form-control'}}) }}
                        <div class="custom-error-message">{{ form_errors(form.dateMatch) }}</div>
                    </div>

                    {# Prix #}
                    <div class="col-md-6 form-group-enhanced">
                        <label class="form-label fw-bold">Prix</label>
                        {{ form_widget(form.prix, {'attr': {'class': 'form-select'}}) }}
                        <div class="custom-error-message">{{ form_errors(form.prix) }}</div>
                    </div>
                </div>
                
                {# Action Buttons #}
                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-warning" id="submitBtn">
                        <i class="bi bi-check-circle me-2"></i>Update Match
                    </button>
                    <a href="{{ path('admin_tournoi_matches_index', {id: tournoi.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
