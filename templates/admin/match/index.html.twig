{% extends 'admin_layout.html.twig' %}

{% block title %}Match Management - {{ tournoi.nom }}{% endblock %}
{% block page_title %}Matches for {{ tournoi.nom }}{% endblock %}

{% block body %}

{# Navigation & Summary #}
<div class="mb-3 fade-in" style="animation-delay: 0.1s;">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <a href="{{ path('admin_tournoi_index') }}" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-2"></i>Back to Tournois
            </a>
            <span class="text-muted">
                <i class="bi bi-info-circle me-2"></i>
                Found <strong>{{ matches|length }}</strong> match{{ matches|length != 1 ? 'es' : '' }}
            </span>
        </div>
        {# Create button #}
        <a href="{{ path('admin_tournoi_matches_create', {id: tournoi.id}) }}" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>New Match
        </a>
    </div>
</div>

{# Matches Table #}
<div class="table-card fade-in" style="animation-delay: 0.2s;">
    <div class="table-header">
        <h5><i class="bi bi-controller me-2"></i>Match List</h5>
    </div>
    
    <div class="table-responsive">
        <table class="custom-table table">
            <thead>
                <tr>
                    <th>Equipe 1</th>
                    <th>Score</th>
                    <th>Equipe 2</th>
                    <th>Date</th>
                    <th>Prix</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for match in matches %}
                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                        <td>
                            <strong>{{ match.equipe1 }}</strong>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark fs-6">
                                {{ match.score }}
                            </span>
                        </td>
                        <td>
                            <strong>{{ match.equipe2 }}</strong>
                        </td>
                        <td>
                            {{ match.dateMatch ? match.dateMatch|date('M d, Y') : 'N/A' }}
                        </td>
                        <td>
                            {% if match.prix %}
                                <span class="badge bg-info">{{ match.prix.name }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_matches_show', {'id': match.id}) }}" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('admin_matches_edit', {'id': match.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-danger" 
                                        title="Delete"
                                        onclick="confirmAction('{{ path('admin_matches_delete', {'id': match.id}) }}', '{{ csrf_token('delete-' ~ match.id) }}', 'Are you sure you want to delete this match?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted py-5">
                            <div class="empty-state">
                                <i class="bi bi-controller" style="font-size: 64px; opacity: 0.2;"></i>
                                <h4 class="mt-3 mb-2">No Matches Found</h4>
                                <p class="text-muted">Add a match to this tournament to get started</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
