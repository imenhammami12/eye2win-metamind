{% extends 'admin_layout.html.twig' %}

{% block page_title %}Edit Channel{% endblock %}

{% block body %}
    <div class="table-card fade-in">
        <div class="table-card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Edit: {{ channel.name }}</h4>
            <a class="btn btn-outline-light" href="{{ path('admin_channels_index') }}">Back</a>
        </div>

        <div class="p-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-warning mt-3">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
