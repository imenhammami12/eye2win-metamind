{% extends 'admin_layout.html.twig' %}
{% block body %}
    <h2>Channels Pending</h2>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>Name</th><th>Game</th><th>Type</th><th>CreatedBy</th><th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for c in channels %}
            <tr>
                <td>{{ c.name }}</td>
                <td>{{ c.game }}</td>
                <td>{{ c.type }}</td>
                <td>{{ c.createdBy }}</td>
                <td>
                    <form method="post" action="{{ path('admin_channels_approve', {id: c.id}) }}" style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('approve_' ~ c.id) }}">
                        <button class="btn btn-sm btn-success">Approve</button>
                    </form>

                    <form method="post" action="{{ path('admin_channels_reject', {id: c.id}) }}" style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('reject_' ~ c.id) }}">
                        <input name="reason" placeholder="Reason..." />
                        <button class="btn btn-sm btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
