{% extends "admin_layout.html.twig" %}

{% block title %}{{ agent ? 'Edit Agent' : 'New Agent' }}{% endblock %}

{% block body %}
<div class="container-fluid py-4" style="max-width: 700px;">
    <h1 class="mb-4">{{ agent ? 'Edit Agent' : 'Create New Agent' }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.game) }}
            {{ form_widget(form.game) }}
            {{ form_errors(form.game) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ agent ? 'Update' : 'Create' }}</button>
        <a href="{{ path('app_agent_list') }}" class="btn btn-secondary">Cancel</a>
    {{ form_end(form) }}
</div>
{% endblock %}
