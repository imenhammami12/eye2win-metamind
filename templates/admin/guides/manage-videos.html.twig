{% extends "admin_layout.html.twig" %}

{% block title %}Manage Guide Videos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/guides-enhanced.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Manage Guide Videos</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_guide_pending') }}" class="btn btn-warning">Pending Only</a>
            <a href="{{ path('app_guide_admin_new') }}" class="btn btn-danger">+ Add Guide Video</a>
        </div>
    </div>

    {% if guides is empty %}
        <div class="alert alert-info">No guide videos found.</div>
    {% else %}
        <div class="admin-guide-statline">
            <span class="admin-guide-chip">Total: <strong id="manageTotalCount">{{ guides|length }}</strong></span>
            <span class="admin-guide-chip">Visible: <strong id="manageVisibleCount">{{ guides|length }}</strong></span>
            <span class="admin-guide-chip">Approved visible: <strong id="manageApprovedCount">0</strong></span>
        </div>

        <div class="admin-guide-toolbar">
            <input id="manageSearch" class="guide-input" type="text" placeholder="Search title or uploader...">
            <select id="manageStatusFilter" class="guide-select">
                <option value="all">All status</option>
                <option value="approved">Approved</option>
                <option value="pending">Pending</option>
                <option value="rejected">Rejected</option>
            </select>
            <select id="manageGameFilter" class="guide-select">
                <option value="all">All games</option>
                {% for guide in guides %}
                    <option value="{{ guide.game.name|lower }}">{{ guide.game.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Game</th>
                        <th>Agent</th>
                        <th>Map</th>
                        <th>Uploader</th>
                        <th>Date</th>
                        <th>Video</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for guide in guides %}
                        <tr data-title="{{ guide.title|lower }}" data-uploader="{{ guide.uploadedBy.username|lower }}" data-status="{{ guide.status|lower }}" data-game="{{ guide.game.name|lower }}">
                            <td>{{ guide.title }}</td>
                            <td>
                                {% if guide.status == 'approved' %}
                                    <span class="badge bg-success">Approved</span>
                                {% elseif guide.status == 'rejected' %}
                                    <span class="badge bg-danger">Rejected</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">Pending</span>
                                {% endif %}
                            </td>
                            <td>{{ guide.game.name }}</td>
                            <td>{{ guide.agent ? guide.agent.name : '-' }}</td>
                            <td>{{ guide.map }}</td>
                            <td>{{ guide.uploadedBy.username }}</td>
                            <td>{{ guide.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ guide.videoUrl }}" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-light">
                                    Open
                                </a>
                            </td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a href="{{ path('app_guide_admin_edit', {id: guide.id}) }}" class="btn btn-sm btn-primary">Edit</a>

                                    <form method="post" action="{{ path('app_guide_approve', {id: guide.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ guide.id) }}">
                                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                    </form>

                                    <form method="post" action="{{ path('app_guide_reject', {id: guide.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ guide.id) }}">
                                        <button type="submit" class="btn btn-sm btn-warning">Reject</button>
                                    </form>

                                    <form method="post" action="{{ path('app_guide_admin_delete', {id: guide.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ guide.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete guide permanently?')">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const rows = document.querySelectorAll('tbody tr[data-title]');
    const searchInput = document.getElementById('manageSearch');
    const statusFilter = document.getElementById('manageStatusFilter');
    const gameFilter = document.getElementById('manageGameFilter');
    const totalEl = document.getElementById('manageTotalCount');
    const visibleEl = document.getElementById('manageVisibleCount');
    const approvedEl = document.getElementById('manageApprovedCount');

    if (gameFilter) {
        const seen = new Set(['all']);
        [...gameFilter.options].forEach(option => {
            const value = option.value;
            if (seen.has(value)) {
                option.remove();
            } else {
                seen.add(value);
            }
        });
    }

    function applyManageFilters() {
        const query = (searchInput?.value || '').trim().toLowerCase();
        const status = (statusFilter?.value || 'all').toLowerCase();
        const game = (gameFilter?.value || 'all').toLowerCase();

        let visible = 0;
        let approved = 0;

        rows.forEach(row => {
            const title = row.dataset.title || '';
            const uploader = row.dataset.uploader || '';
            const rowStatus = row.dataset.status || '';
            const rowGame = row.dataset.game || '';

            const searchMatch = query === '' || title.includes(query) || uploader.includes(query);
            const statusMatch = status === 'all' || rowStatus === status;
            const gameMatch = game === 'all' || rowGame === game;
            const show = searchMatch && statusMatch && gameMatch;

            row.classList.toggle('guide-hidden', !show);
            if (show) {
                visible++;
                if (rowStatus === 'approved') approved++;
            }
        });

        if (totalEl) totalEl.textContent = String(rows.length);
        if (visibleEl) visibleEl.textContent = String(visible);
        if (approvedEl) approvedEl.textContent = String(approved);
    }

    searchInput?.addEventListener('input', applyManageFilters);
    statusFilter?.addEventListener('change', applyManageFilters);
    gameFilter?.addEventListener('change', applyManageFilters);
    applyManageFilters();
});
</script>
{% endblock %}