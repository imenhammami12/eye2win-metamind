{% extends "admin_layout.html.twig" %}

{% block title %}Manage Agents{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Agents</h1>
        <a href="{{ path('app_agent_new') }}" class="btn btn-primary">+ Add Agent</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Game</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for agent in agents %}
                    <tr>
                        <td>{{ agent.name }}</td>
                        <td>{{ agent.slug }}</td>
                        <td>{{ agent.game.name }}</td>
                        <td>
                            <a href="{{ path('app_agent_edit', {id: agent.id}) }}" class="btn btn-sm btn-info">Edit</a>
                            <form method="post" action="{{ path('app_agent_delete', {id: agent.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete agent?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="4">No agents found.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
