{% extends 'admin_layout.html.twig' %}

{% block title %}Tournoi Management{% endblock %}
{% block page_title %}Tournoi Management{% endblock %}

{% block body %}

{# Filters and Search #}
<div class="table-card mb-4 fade-in">
    <div class="table-header">
        <h5><i class="bi bi-funnel me-2"></i>Filters & Search</h5>
    </div>
    
    <form method="get" action="{{ path('admin_tournoi_index') }}" class="p-3">
        <div class="row g-3">
            <div class="col-md-5">
                <label class="form-label">
                    <i class="bi bi-search me-1"></i>Search
                </label>
                <div class="search-bar">
                    <i class="search-icon bi bi-search"></i>
                    <input type="text" 
                           name="search" 
                           class="form-control" 
                           placeholder="Name, description..." 
                           value="{{ search }}"
                           autocomplete="off">
                </div>
            </div>
            
            <div class="col-md-4">
                <label class="form-label">
                    <i class="bi bi-trophy me-1"></i>Type
                </label>
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    {% for typeOption in types %}
                        <option value="{{ typeOption.value }}" {{ typeFilter == typeOption.value ? 'selected' : '' }}>
                            {{ typeOption.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
                {% if search or typeFilter %}
                    <a href="{{ path('admin_tournoi_index') }}" class="btn btn-outline-secondary" title="Clear filters">
                        <i class="bi bi-x-lg"></i>
                    </a>
                {% endif %}
            </div>
            
            {# Preserve Sort params #}
            <input type="hidden" name="sort" value="{{ sort }}">
            <input type="hidden" name="direction" value="{{ direction }}">
        </div>
    </form>
</div>

{# Tournois Table #}
<div class="table-card fade-in" style="animation-delay: 0.2s;">
    <div class="table-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Tournois List</h5>
        <span class="badge bg-light text-dark">
            {{ tournois|length }} found
        </span>
    </div>
    
    <div class="table-responsive">
        <table class="custom-table table table-hover">
            <thead>
                <tr>
                    <th style="width: 70px; text-align: center;">Image</th>
                    
                    {# Sortable Header Macro or Manual #}
                    <th>
                        <a href="{{ path('admin_tournoi_index', {
                            search: search, 
                            type: typeFilter, 
                            sort: 'nom', 
                            direction: sort == 'nom' and direction == 'ASC' ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark d-flex align-items-center">
                            Nom
                            {% if sort == 'nom' %}
                                <i class="bi bi-sort-{{ direction == 'ASC' ? 'alpha-down' : 'alpha-down-alt' }} ms-1 text-primary"></i>
                            {% else %}
                                <i class="bi bi-arrow-down-up ms-1 text-muted small opacity-50"></i>
                            {% endif %}
                        </a>
                    </th>

                    <th>
                        <a href="{{ path('admin_tournoi_index', {
                            search: search, 
                            type: typeFilter, 
                            sort: 'typeTournoi', 
                            direction: sort == 'typeTournoi' and direction == 'ASC' ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark d-flex align-items-center">
                            Type
                            {% if sort == 'typeTournoi' %}
                                <i class="bi bi-sort-{{ direction == 'ASC' ? 'down' : 'up' }} ms-1 text-primary"></i>
                            {% else %}
                                <i class="bi bi-arrow-down-up ms-1 text-muted small opacity-50"></i>
                            {% endif %}
                        </a>
                    </th>

                    <th>
                        <a href="{{ path('admin_tournoi_index', {
                            search: search, 
                            type: typeFilter, 
                            sort: 'dateDebut', 
                            direction: sort == 'dateDebut' and direction == 'ASC' ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark d-flex align-items-center">
                            Dates
                            {% if sort == 'dateDebut' %}
                                <i class="bi bi-sort-{{ direction == 'ASC' ? 'numeric-down' : 'numeric-down-alt' }} ms-1 text-primary"></i>
                            {% else %}
                                <i class="bi bi-arrow-down-up ms-1 text-muted small opacity-50"></i>
                            {% endif %}
                        </a>
                    </th>

                    <th>Description</th>
                    <th>Matchs</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tournoi in tournois %}
                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                        <td style="width: 70px; text-align: center;">
                            {% if tournoi.image %}
                                <img src="{{ asset('uploads/tournois/' ~ tournoi.image) }}" 
                                     alt="{{ tournoi.nom }}" 
                                     class="user-avatar-table"
                                     style="border-radius: 4px;"
                                     loading="lazy">
                            {% else %}
                                <div class="user-avatar-placeholder mx-auto" style="border-radius: 4px;">
                                    <i class="bi bi-trophy"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            <strong>{{ tournoi.nom }}</strong>
                        </td>
                        <td>
                            <span class="badge bg-secondary">
                                {{ tournoi.typeTournoi ? tournoi.typeTournoi.name : 'N/A' }}
                            </span>
                        </td>
                        <td>
                            <div><small class="text-muted">Start:</small> {{ tournoi.dateDebut ? tournoi.dateDebut|date('M d, Y') : 'N/A' }}</div>
                            <div><small class="text-muted">End:</small> {{ tournoi.dateFin ? tournoi.dateFin|date('M d, Y') : 'N/A' }}</div>
                        </td>
                        <td>
                            <small class="text-muted d-block text-truncate" style="max-width: 150px;">
                                {{ tournoi.description|default('No description') }}
                            </small>
                        </td>
                        <td>
                            <a href="{{ path('admin_tournoi_matches_index', {'id': tournoi.id}) }}" class="text-decoration-none">
                                <span class="badge bg-light text-dark border hover-effect">
                                    {{ tournoi.matchs|length }} matchs
                                </span>
                            </a>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_tournoi_show', {'id': tournoi.id}) }}" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('admin_tournoi_edit', {'id': tournoi.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-danger" 
                                        title="Delete"
                                        onclick="confirmAction('{{ path('admin_tournoi_delete', {'id': tournoi.id}) }}', '{{ csrf_token('delete-' ~ tournoi.id) }}', 'Are you sure you want to delete this tournament? This action cannot be undone.')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted py-5">
                            <div class="empty-state">
                                <i class="bi bi-trophy" style="font-size: 64px; opacity: 0.2;"></i>
                                <h4 class="mt-3 mb-2">No Tournois Found</h4>
                                <p class="text-muted">Create a new tournoi to get started</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
