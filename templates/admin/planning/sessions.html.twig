{% extends 'admin_layout.html.twig' %}

{% block title %}Training Sessions - {{ planning.description }}{% endblock %}
{% block page_title %}Training Sessions{% endblock %}

{% block body %}
<!-- Planning Info Card -->
<div class="table-card mb-4 fade-in">
    <div class="table-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h5><i class="bi bi-calendar-event me-2"></i>Planning Details</h5>
    </div>
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                {% if planning.image %}
                    <img src="{{ asset('uploads/planning/' ~ planning.image) }}" 
                         alt="Planning" 
                         class="img-fluid rounded"
                         style="max-height: 100px; object-fit: cover;">
                {% endif %}
            </div>
            <div class="col-md-10">
                <h4 class="mb-2">{{ planning.description }}</h4>
                <div class="row">
                    <div class="col-md-3">
                        <small class="text-muted d-block">Type</small>
                        <span class="badge bg-primary">{{ planning.type.value }}</span>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted d-block">Level</small>
                        <span class="badge bg-info">{{ planning.level.value }}</span>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted d-block">Date</small>
                        <strong>{{ planning.date|date('M d, Y') }}</strong>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted d-block">Location</small>
                        <strong>{{ planning.localisation }}</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sessions List -->
<div class="table-card fade-in" style="animation-delay: 0.1s;">
    <div class="table-header">
        <h5><i class="bi bi-people me-2"></i>Registered Participants ({{ sessions|length }})</h5>
    </div>
    
    <div class="table-responsive">
        <table class="custom-table table">
            <thead>
                <tr>
                    <th>Participant</th>
                    <th>Email</th>
                    <th>Joined At</th>
                    <th>Status</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for session in sessions %}
                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle me-2">
                                    {{ session.user.username|slice(0, 1)|upper }}
                                </div>
                                <strong>{{ session.user.username }}</strong>
                            </div>
                        </td>
                        <td>{{ session.user.email }}</td>
                        <td>
                            <i class="bi bi-clock text-primary me-1"></i>
                            {{ session.joinedAt|date('M d, Y H:i') }}
                        </td>
                        <td>
                            {% if session.status == 'en attente' %}
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split me-1"></i>Pending
                                </span>
                            {% elseif session.status == 'confirmé' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Confirmed
                                </span>
                            {% elseif session.status == 'annulé' %}
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Cancelled
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">{{ session.status }}</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_session_show', {id: session.id}) }}" 
                                   class="btn btn-sm btn-light-info text-info border-0"
                                   title="View"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-eye h5 mb-0"></i>
                                </a>
                                <a href="{{ path('admin_session_edit', {id: session.id}) }}" 
                                   class="btn btn-sm btn-light-warning text-warning border-0"
                                   title="Edit"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-pencil h5 mb-0"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-light-danger text-danger border-0"
                                        onclick="openDeleteModal('{{ path('admin_session_delete', {id: session.id}) }}', '{{ csrf_token('delete-session-' ~ session.id) }}')"
                                        title="Delete"
                                        data-bs-toggle="tooltip">
                                    <i class="bi bi-trash h5 mb-0"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">
                            <div class="empty-state">
                                <i class="bi bi-person-x" style="font-size: 64px; opacity: 0.2;"></i>
                                <h4 class="mt-3 mb-2">No Participants Yet</h4>
                                <p class="text-muted">No one has joined this session yet.</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Back Button -->
<div class="mt-4">
    <a href="{{ path('admin_planning_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Planning List
    </a>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
    }
</style>
{% endblock %}

{% block modal_container %}
<div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true" style="z-index: 1060;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-trash text-danger" style="font-size: 4rem;"></i>
                </div>
                <h5 class="mb-3 text-dark">Are you sure you want to delete this training session?</h5>
                <p class="text-dark mb-0"><strong>Warning:</strong> This action is permanent and cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 bg-light justify-content-center p-3">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm">
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-2"></i>Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<button id="deleteModalTrigger" class="d-none" data-bs-toggle="modal" data-bs-target="#deleteModal"></button>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});

function openDeleteModal(actionUrl, csrfToken) {
    const form = document.getElementById('deleteForm');
    const tokenInput = document.getElementById('deleteToken');
    
    form.action = actionUrl;
    tokenInput.value = csrfToken;
    
    document.getElementById('deleteModalTrigger').click();
}
</script>
{% endblock %}
