{% extends 'admin_layout.html.twig' %}

{% block title %}Planning Management{% endblock %}
{% block page_title %}Planning Management{% endblock %}

{% block body %}
{# Filters and Search #}
<div class="table-card mb-4 fade-in">
    <div class="table-header">
        <h5><i class="bi bi-funnel me-2"></i>Filters & Search</h5>
    </div>
    
    <form method="get" action="{{ path('admin_planning_index') }}" class="p-3">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="bi bi-search me-1"></i>Search
                </label>
                <div class="search-bar">
                    <i class="search-icon bi bi-search"></i>
                    <input type="text" 
                           name="search" 
                           class="form-control" 
                           placeholder="Description, location..." 
                           value="{{ search }}"
                           autocomplete="off">
                </div>
            </div>
            
            <div class="col-md-3">
                <label class="form-label">
                    <i class="bi bi-controller me-1"></i>Type
                </label>
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    {% for type in planningTypes %}
                        <option value="{{ type.value }}" {{ typeFilter == type.value ? 'selected' : '' }}>
                            {{ type.label }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-3">
                <label class="form-label">
                    <i class="bi bi-bar-chart me-1"></i>Level
                </label>
                <select name="level" class="form-select">
                    <option value="">All Levels</option>
                    {% for level in planningLevels %}
                        <option value="{{ level.value }}" {{ levelFilter == level.value ? 'selected' : '' }}>
                            {{ level.label }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">
                    <i class="bi bi-sort-down me-1"></i>Sort By
                </label>
                <select name="sort" class="form-select">
                    <option value="date" {{ sortBy == 'date' ? 'selected' : '' }}>Date</option>
                    <option value="time" {{ sortBy == 'time' ? 'selected' : '' }}>Time</option>
                    <option value="localisation" {{ sortBy == 'localisation' ? 'selected' : '' }}>Location</option>
                    <option value="type" {{ sortBy == 'type' ? 'selected' : '' }}>Type</option>
                    <option value="level" {{ sortBy == 'level' ? 'selected' : '' }}>Level</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">
                    <i class="bi bi-arrow-up-down me-1"></i>Order
                </label>
                <select name="order" class="form-select">
                    <option value="DESC" {{ sortOrder == 'DESC' ? 'selected' : '' }}>Descending</option>
                    <option value="ASC" {{ sortOrder == 'ASC' ? 'selected' : '' }}>Ascending</option>
                </select>
            </div>
            
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
                {% if search or typeFilter or levelFilter or sortBy != 'date' or sortOrder != 'DESC' %}
                    <a href="{{ path('admin_planning_index') }}" class="btn btn-outline-secondary" title="Clear filters">
                        <i class="bi bi-x-lg"></i>
                    </a>
                {% endif %}
            </div>
        </div>
    </form>
</div>

{# Results Summary #}
<div class="mb-3 fade-in" style="animation-delay: 0.1s;">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <h6 class="text-muted mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Found <strong>{{ plannings|length }}</strong> planning{{ plannings|length != 1 ? 's' : '' }}
        </h6>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_planning_reviews') }}" class="btn btn-primary" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); border: none;">
                <i class="bi bi-chat-left-text me-2"></i>View Reviews
            </a>
            <a href="{{ path('admin_planning_create') }}" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Add Planning
            </a>
        </div>
    </div>
</div>

{# Planning Table #}
<div class="table-card fade-in" style="animation-delay: 0.2s;">
    <div class="table-header">
        <h5><i class="bi bi-calendar-event me-2"></i>Planning List</h5>
    </div>
    
    <div class="table-responsive">
        <table class="custom-table table">
            <thead>
                <tr>
                    <th style="width: 80px; text-align: center;">Image</th>
                    <th>Activity</th>
                    <th>Description</th>
                    <th style="cursor: pointer;">
                        <a href="{{ path('admin_planning_index', {
                            search: search,
                            type: typeFilter,
                            level: levelFilter,
                            sort: 'date',
                            order: sortBy == 'date' and sortOrder == 'DESC' ? 'ASC' : 'DESC'
                        }) }}" class="text-decoration-none text-white" title="Click to sort by date">
                            Date & Time
                            {% if sortBy == 'date' %}
                                <i class="bi bi-{{ sortOrder == 'DESC' ? 'arrow-down' : 'arrow-up' }} ms-2" style="font-size: 0.85rem;"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th style="cursor: pointer;">
                        <a href="{{ path('admin_planning_index', {
                            search: search,
                            type: typeFilter,
                            level: levelFilter,
                            sort: 'localisation',
                            order: sortBy == 'localisation' and sortOrder == 'DESC' ? 'ASC' : 'DESC'
                        }) }}" class="text-decoration-none text-white" title="Click to sort by location">
                            Location
                            {% if sortBy == 'localisation' %}
                                <i class="bi bi-{{ sortOrder == 'DESC' ? 'arrow-down' : 'arrow-up' }} ms-2" style="font-size: 0.85rem;"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>Need Partner</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for planning in plannings %}
                    <tr class="fade-in" style="animation-delay: {{ loop.index * 0.05 }}s;">
                        <td style="width: 80px; text-align: center;">
                            {% if planning.image %}
                                <img src="{{ asset('uploads/planning/' ~ planning.image) }}" 
                                     alt="Thumb" 
                                     style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;"
                                     loading="lazy">
                            {% else %}
                                <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.1); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            <div class="fw-bold">{{ planning.type.value }}</div>
                            <small class="text-muted">{{ planning.level.value }}</small>
                        </td>
                        <td style="max-width: 250px;">
                            <div class="small text-muted text-break">
                                {{ planning.description }}
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar3 me-2 text-primary"></i> 
                                <div>
                                    <div class="fw-bold">{{ planning.date|date('M d, Y') }}</div>
                                    <div class="small text-muted">{{ planning.time|date('H:i') }}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt me-2 text-warning"></i>
                                <span>{{ planning.localisation }}</span>
                            </div>
                        </td>
                        <td>
                            {% if planning.needPartner %}
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i>Yes
                                </span>
                            {% else %}
                                <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                                    <i class="bi bi-dash-circle me-1"></i>No
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_planning_show', {id: planning.id}) }}" 
                                   class="btn btn-sm btn-light-info text-info border-0"
                                   title="View"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-eye h5 mb-0"></i>
                                </a>
                                <a href="{{ path('admin_planning_edit', {id: planning.id}) }}" 
                                   class="btn btn-sm btn-light-warning text-warning border-0"
                                   title="Edit"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-pencil h5 mb-0"></i>
                                </a>
                                <a href="{{ path('admin_planning_sessions', {id: planning.id}) }}" 
                                   class="btn btn-sm btn-light-success text-success border-0"
                                   title="View Sessions"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-people h5 mb-0"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-light-danger text-danger border-0"
                                        onclick="openDeleteModal('{{ path('admin_planning_delete', {id: planning.id}) }}', '{{ csrf_token('delete-' ~ planning.id) }}')"
                                        title="Delete"
                                        data-bs-toggle="tooltip">
                                    <i class="bi bi-trash h5 mb-0"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <div class="empty-state">
                                <i class="bi bi-calendar-x" style="font-size: 64px; opacity: 0.2;"></i>
                                <h4 class="mt-3 mb-2">No Plannings Found</h4>
                                <p class="text-muted">Try adjusting your filters.</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block modal_container %}
<div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true" style="z-index: 1060;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-trash text-danger" style="font-size: 4rem;"></i>
                </div>
                <h5 class="mb-3 text-dark">Are you sure you want to delete this session?</h5>
                <p class="text-dark mb-0"><strong>Warning:</strong> This action is permanent and cannot be undone. Once deleted, this planning session and all associated data will be irretrievably lost.</p>
            </div>
            <div class="modal-footer border-0 bg-light justify-content-center p-3">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm">
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-2"></i>Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<button id="deleteModalTrigger" class="d-none" data-bs-toggle="modal" data-bs-target="#deleteModal"></button>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    
    // Row animation
    document.querySelectorAll('.custom-table tbody tr').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(2px)';
        });
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
});

function openDeleteModal(actionUrl, csrfToken) {
    const form = document.getElementById('deleteForm');
    const tokenInput = document.getElementById('deleteToken');
    
    // Set the action and token
    form.action = actionUrl;
    tokenInput.value = csrfToken;
    
    // Trigger modal via data-api (safer than new bootstrap.Modal)
    document.getElementById('deleteModalTrigger').click();
}
</script>
{% endblock %}
