{# templates/coins/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Buy EyeTwin Coins - EyeTwin{% endblock %}

{% block body %}
<section class="profile_section section_padding">
    <div class="container">

        <div class="text-center mb-5">
            <h2 class="statistics_title">üí∞ BUY EYETWIN COINS</h2>
            <p style="color: #a0a0b0; font-size: 16px;">Use coins to access exclusive coaching live streams</p>
            <div style="display: inline-block; background: linear-gradient(135deg, #1a1a2e, #16213e); border: 1px solid #4a4a6a; border-radius: 12px; padding: 12px 30px; margin-top: 10px;">
                <span style="color: #888; font-size: 13px; text-transform: uppercase; letter-spacing: 1px;">Your Balance</span>
                <div style="color: #f6d860; font-size: 28px; font-weight: bold; margin-top: 4px;">
                    <i class="fas fa-coins"></i> {{ user.coinBalance }} coins
                </div>
            </div>
        </div>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ flash }}</div>
        {% endfor %}
        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger text-center">{{ flash }}</div>
        {% endfor %}
        {% for flash in app.flashes('info') %}
            <div class="alert alert-info text-center">{{ flash }}</div>
        {% endfor %}

        <div class="row justify-content-center g-4">
            {% for coins, package in packages %}
            <div class="col-lg-3 col-md-6">
                <div class="profile_card h-100 text-center" style="position: relative; {{ package.popular ? 'border: 2px solid #667eea; background: linear-gradient(135deg, #1a1a2e 0%, #1e1e3a 100%);' : '' }}">
                    
                    {% if package.popular %}
                        <div style="position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: linear-gradient(90deg, #667eea, #764ba2); color: white; padding: 4px 16px; border-radius: 20px; font-size: 12px; font-weight: bold; white-space: nowrap;">
                            ‚≠ê MOST POPULAR
                        </div>
                    {% endif %}

                    <div style="background: linear-gradient(135deg, #1a1a2e, #16213e); border-radius: 10px; padding: 25px 15px; margin-bottom: 20px;">
                        <i class="fas fa-coins" style="font-size: 40px; color: #f6d860; display: block; margin-bottom: 10px;"></i>
                        <div style="font-size: 42px; font-weight: 900; color: #fff;">{{ package.coins }}</div>
                        <div style="color: #f6d860; font-size: 14px; font-weight: 600;">COINS</div>
                    </div>

                    <h5 style="color: #c0c0d0; font-weight: 600; margin-bottom: 5px;">{{ package.label }}</h5>
                    <div style="font-size: 28px; font-weight: bold; color: #fff; margin: 10px 0;">
                        {{ (package.price / 100)|number_format(2) }} ‚Ç¨
                    </div>
                    <p style="color: #888; font-size: 12px; margin-bottom: 20px;">
                        ‚âà {{ (package.price / package.coins * 100)|number_format(1) }} cents per coin
                    </p>

                    <form method="POST" action="{{ path('coins_checkout', {coins: package.coins}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('coins_buy_' ~ package.coins) }}">
                        <button type="submit" class="btn_profile {{ package.popular ? 'btn_apply' : 'btn_edit' }}" style="width: 100%; justify-content: center; display: flex; align-items: center; gap: 8px; padding: 12px;">
                            <i class="fab fa-stripe"></i> Buy Now
                        </button>
                    </form>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="profile_card mt-5" style="background: linear-gradient(135deg, rgba(102,126,234,0.1), rgba(118,75,162,0.1)); border: 1px solid #3a3a5a;">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 style="color: #fff;"><i class="fas fa-shield-alt" style="color: #48bb78;"></i> Secure Payments powered by Stripe</h5>
                    <p style="color: #a0a0b0; margin-bottom: 0; font-size: 14px;">
                        All transactions are encrypted and processed securely. We never store your card details. Coins are credited instantly after payment.
                    </p>
                </div>
                <div class="col-md-4 text-center mt-3 mt-md-0">
                    <span style="color: #888; font-size: 13px;">Accepted payments</span>
                    <div style="margin-top: 8px; color: #a0a0b0; font-size: 24px;">
                        <i class="fab fa-cc-visa"></i>
                        <i class="fab fa-cc-mastercard" style="margin-left: 8px;"></i>
                        <i class="fab fa-cc-amex" style="margin-left: 8px;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('user_profile') }}" style="color: #667eea; text-decoration: none; font-size: 14px;">
                <i class="fas fa-arrow-left"></i> Back to Profile
            </a>
        </div>

    </div>
</section>
{% endblock %}
